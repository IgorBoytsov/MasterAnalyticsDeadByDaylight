<Window x:Class="DBDAnalytics.Client.WPF.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DBDAnalytics.Client.WPF.Views.Windows"
        xmlns:enum="clr-namespace:Shared.WPF.Enums;assembly=Shared.WPF"
        xmlns:windows="clr-namespace:DBDAnalytics.Client.WPF.ViewModels.Windows" 
        d:DataContext="{d:DesignInstance Type=windows:MainWindowViewModel}"
        mc:Ignorable="d"
        WindowStyle="ThreeDBorderWindow"
        WindowStartupLocation="CenterScreen"
        Height="490" Width="800"
        MinHeight="800" MinWidth="1350"
        Title="MainWindow">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="30"
                      GlassFrameThickness="0"
                      CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Border x:Name="MainWindowBorder" BorderBrush="LightCoral" BorderThickness="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height ="Auto"/>
                <RowDefinition Height ="*"/>
            </Grid.RowDefinitions>

            <!--==========Modal==========-->

            <!--#region Добавление Killer (Локально) -->

            <Border Grid.ColumnSpan="3" Grid.Row="1"  Panel.ZIndex="2"
                    Background="{StaticResource Solid.Border.ContentBlock.BorderBrush}"
                    Visibility="{Binding MenuAuthVisibility}" d:Visibility="Collapsed">

                <Border Background="{StaticResource Solid.Border.ContentBlock.BorderBrush}" BorderBrush="Gray"
                        BorderThickness="2"
                        CornerRadius="12"
                        Width="620"
                        Height="620">

                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!--#region Header -->

                        <Border Grid.Row="0" Style="{StaticResource Border.ContentBlock}" Margin="15,0,15,0">

                            <TextBlock Text="Вход"
                                           Margin="20,5,0,0"
                                           Style="{StaticResource TextBlock.Title}"/>

                        </Border>

                        <!--#endregion-->

                        <!--#region Ввод данных -->

                        <Border Grid.Row="1" Style="{StaticResource Border.ContentBlock}">

                            <DockPanel VerticalAlignment="Center">

                                <TextBlock Text="Логин"
                                           Style="{StaticResource TextBlock.Title}"
                                           DockPanel.Dock="Top"/>

                                <TextBox Text="{Binding AuthLogin, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource TextBox.InputData}"
                                         DockPanel.Dock="Top"/>

                                <TextBlock Text="Пароль"
                                           Style="{StaticResource TextBlock.Title}"
                                           DockPanel.Dock="Top"/>

                                <TextBox Text="{Binding AuthPassword, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource TextBox.InputData}"
                                         DockPanel.Dock="Top"/>

                                <TextBlock Text="Почта"
                                           Style="{StaticResource TextBlock.Title}"
                                           DockPanel.Dock="Top"/>

                                <TextBox Text="{Binding AuthEmail, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource TextBox.InputData}"
                                         VerticalAlignment="Top"/>
                            </DockPanel>

                        </Border>

                        <!--#endregion-->

                        <!--#region Кнопка -->

                        <Button Grid.Row="3" Content="Войти"
                                Style="{StaticResource Button.App}"
                                Command="{Binding LoginCommandAsync}"
                                VerticalAlignment="Bottom">
                        </Button>

                        <!--#endregion-->

                    </Grid>
                </Border>

            </Border>

            <!--#endregion-->

            <!--#region Header -->

            <Grid Grid.Row="0" Height="Auto" Background="Black" Grid.ColumnSpan="2">

                <!--#region Меню -->

                <StackPanel HorizontalAlignment="Left" Margin="1">

                    <Menu Grid.Column="0" Height="34" Foreground="Green" Background="Transparent" VerticalAlignment="Center" WindowChrome.IsHitTestVisibleInChrome="True" FontSize="17" Visibility="{Binding MenuVisibility}">

                        <MenuItem Header="Управление" VerticalContentAlignment="Center">

                            <MenuItem Header="Настройки"/>

                            <Separator/>

                            <MenuItem Header="Создать отчет"/>

                            <MenuItem Header="Создать копию данных"/>

                            <Separator/>

                            <MenuItem Header="Выйти" Command="{Binding ShutDownAppCommand}"/>

                        </MenuItem>

                    </Menu>

                </StackPanel>

                <!--#endregion-->

                <!--#region Кнопки измение WindowStat -->

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="1">

                    <Button Command="{Binding MinimizeWindowCommand}" 
                            CommandParameter="{x:Static enum:WindowsName.MainWindow}"
                            Style="{StaticResource Button.Management.Window}"
                            WindowChrome.IsHitTestVisibleInChrome="True" 
                            ToolTip="Minimize">
                        <Button.Content>
                            <Control Template="{StaticResource Minimize}" Foreground="White"/>
                        </Button.Content>
                    </Button>

                    <Button x:Name="RestoreButton" 
                            Visibility="Collapsed" 
                            Command="{Binding RestoreWindowCommand}" 
                            CommandParameter="{x:Static enum:WindowsName.MainWindow}"
                            Style="{StaticResource Button.Management.Window}"
                            WindowChrome.IsHitTestVisibleInChrome="True" 
                            ToolTip="Restore">
                        <Button.Content>
                            <Control Template="{StaticResource Restore}" Foreground="White" Margin="5"/>
                        </Button.Content>
                    </Button>

                    <Button x:Name="MaximizeButton" 
                            Visibility="Visible"  
                            Command="{Binding MaximizeWindowCommand}"
                            CommandParameter="{x:Static enum:WindowsName.MainWindow}"
                            Style="{StaticResource Button.Management.Window}"
                            WindowChrome.IsHitTestVisibleInChrome="True" 
                            ToolTip="Maximize">
                        <Button.Content>
                            <Control Template="{StaticResource Maximize}" Foreground="White" Margin="5"/>
                        </Button.Content>
                    </Button>

                    <Button Command="{Binding ShutDownAppCommand}"
                            Style="{StaticResource Button.Management.Window}"
                            WindowChrome.IsHitTestVisibleInChrome="True"
                            ToolTip="Close">
                        <Button.Content>
                            <Control Template="{StaticResource Close}" Foreground="White" Margin="5"/>
                        </Button.Content>
                    </Button>

                </StackPanel>

                <!--#endregion-->

            </Grid>

            <!--#endregion-->

            <!--#region Content -->

            <Grid Grid.Row="1" Background="Black">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <DockPanel>
                    <Button Style="{StaticResource Button.MainWindow.SideMenu}"
                            DockPanel.Dock="Top">
                        <StackPanel>
                            <Viewbox>
                                <Control Template="{StaticResource Profile}"/>
                            </Viewbox>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource Button.MainWindow.SideMenu}"
                            Command="{Binding OpenSecretPageCommand}"
                            DockPanel.Dock="Top">
                        <StackPanel>
                            <Viewbox>
                                <Control Template="{StaticResource Speedometer}"/>
                            </Viewbox>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource Button.MainWindow.SideMenu}"
                            DockPanel.Dock="Top">
                        <StackPanel>
                            <Viewbox>
                                <Control Template="{StaticResource List}" Foreground="White"/>
                            </Viewbox>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource Button.MainWindow.SideMenu}"
                            Command="{Binding OpenPageCommand}"
                            CommandParameter="{x:Static enum:PagesName.AddMatch}"
                            VerticalAlignment="Top">
                        <StackPanel>
                            <Viewbox>
                                <Control Template="{StaticResource Add}" Foreground="White"/>
                            </Viewbox>
                        </StackPanel>
                    </Button>
                    
                </DockPanel>

                <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Visibility="Visible" Grid.Column="1"/>

            </Grid>

            <!--#endregion-->

        </Grid>
    </Border>
</Window>