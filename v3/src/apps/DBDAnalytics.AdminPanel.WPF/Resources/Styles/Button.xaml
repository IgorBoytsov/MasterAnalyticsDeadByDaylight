                            <Setter TargetName="buttonBorder" Property="Background" Value="#3D3D3D"/>
                            <Setter TargetName="buttonBorder" Property="BorderBrush" Value="#2D2D2D"/>
                            <Setter Property="Foreground" Value="#999999"/>
                            <Setter Property="Cursor" Value="Arrow"/>
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--#endregion-->

    <!--#region Кнопка внутри Popup -->

    <Style x:Key="Button.KillerPage.Management" TargetType="Button" >
