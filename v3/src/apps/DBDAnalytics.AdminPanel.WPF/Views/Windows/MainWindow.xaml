<Window x:Class="DBDAnalytics.AdminPanel.WPF.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DBDAnalytics.AdminPanel.WPF.Views.Windows"
        xmlns:windows="clr-namespace:DBDAnalytics.AdminPanel.WPF.ViewModels.Windows" 
        xmlns:enum="clr-namespace:Shared.WPF.Enums;assembly=Shared.WPF" 
        d:DataContext="{d:DesignInstance Type=windows:MainWindowViewModel}"
        mc:Ignorable="d"
        WindowStyle="ThreeDBorderWindow"
        WindowStartupLocation="CenterScreen"
        Height="490" Width="800"
        MinHeight="700" MinWidth="1150"
        Style="{StaticResource Window.Main}"
        Title="MainWindow">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="30"
                      GlassFrameThickness="0"
                      CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Border x:Name="MainWindowBorder" BorderBrush="LightCoral" BorderThickness="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height ="Auto"/>
                <RowDefinition Height ="*"/>
            </Grid.RowDefinitions>

            <!--#region Header -->

            <Grid Grid.Row="0" Height="Auto" Background="Black" Grid.ColumnSpan="2">

                <!--#region Меню -->

                <StackPanel HorizontalAlignment="Left" Margin="1">

                    <Menu Grid.Column="0" Height="34" Foreground="Green" Background="Transparent" VerticalAlignment="Center" WindowChrome.IsHitTestVisibleInChrome="True" FontSize="17">

                        <MenuItem Header="Каталог" VerticalContentAlignment="Center">
                            
                            <Separator/>

                            <MenuItem Header="Открыть на">
                                
                            </MenuItem>
                            
                            <Separator/>

                            <MenuItem Header="Убийц" Command="{Binding OpenPageCommand}" CommandParameter="{x:Static enum:PagesName.Killer}"/>

                            <MenuItem Header="Выживших" Command="{Binding OpenPageCommand}" CommandParameter="{x:Static enum:PagesName.Survivor}"/>

                            <MenuItem Header="Предметов" Command="{Binding OpenPageCommand}" CommandParameter="{x:Static enum:PagesName.Item}"/>

                            <MenuItem Header="Подношений" Command="{Binding OpenPageCommand}" CommandParameter="{x:Static enum:PagesName.Offering}"/>

                            <MenuItem Header="Измерений" Command="{Binding OpenPageCommand}" CommandParameter="{x:Static enum:PagesName.Measurement}"/>

                            <Separator/>

                            <MenuItem Header="Категорий перков убийц" Command="{Binding OpenPageCommand}" CommandParameter="{x:Static enum:PagesName.KillerPerkCategory}"/>

                            <MenuItem Header="Категорий перков выживших" Command="{Binding OpenPageCommand}" CommandParameter="{x:Static enum:PagesName.SurvivorPerkCategory}"/>

                            <MenuItem Header="Категорий подношений" Command="{Binding OpenPageCommand}" CommandParameter="{x:Static enum:PagesName.OfferingCategory}"/>

                            <Separator/>

                            <MenuItem Header="Игровых режимов" Command="{Binding OpenPageCommand}" CommandParameter="{x:Static enum:PagesName.GameMode}"/>

                            <MenuItem Header="Игровый событий" Command="{Binding OpenPageCommand}" CommandParameter="{x:Static enum:PagesName.GameEvent}"/>
                            
                            <Separator/>

                            <MenuItem Header="Патчей" Command="{Binding OpenPageCommand}" CommandParameter="{x:Static enum:PagesName.Patch}"/>
                            
                            <Separator/>

                            <MenuItem Header="Редкостей" Command="{Binding OpenPageCommand}" CommandParameter="{x:Static enum:PagesName.Rarity}"/>

                            <MenuItem Header="Ролей" Command="{Binding OpenPageCommand}" CommandParameter="{x:Static enum:PagesName.Role}"/>

                            <MenuItem Header="Платформ" Command="{Binding OpenPageCommand}" CommandParameter="{x:Static enum:PagesName.Platform}"/>

                            <MenuItem Header="Игровый ассоциаций" Command="{Binding OpenPageCommand}" CommandParameter="{x:Static enum:PagesName.PlayerAssociation}"/>

                            <MenuItem Header="Типов смертей" Command="{Binding OpenPageCommand}" CommandParameter="{x:Static enum:PagesName.TypeDeath}"/>

                            <MenuItem Header="Кто поставил карту" Command="{Binding OpenPageCommand}" CommandParameter="{x:Static enum:PagesName.WhoPlacedMap}"/>

                        </MenuItem>

                        <MenuItem Header="Управление" VerticalContentAlignment="Center">

                            <MenuItem Header="Настройки"/>

                            <Separator/>

                            <MenuItem Header="Создать отчет"/>

                            <MenuItem Header="Создать копию данных"/>

                            <Separator/>

                            <MenuItem Header="Выйти" Command="{Binding ShutDownAppCommand}"/>

                        </MenuItem>

                    </Menu>

                </StackPanel>

                <!--#endregion-->

                <!--#region Кнопки измение WindowStat -->

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="1">

                    <Button Command="{Binding MinimizeWindowCommand}" 
                            CommandParameter="{x:Static enum:WindowsName.MainWindow}"
                            Style="{StaticResource Button.Management.Window}"
                            WindowChrome.IsHitTestVisibleInChrome="True" 
                            ToolTip="Minimize">
                        -
                    </Button>

                    <Button x:Name="RestoreButton" 
                            Visibility="Collapsed" 
                            Command="{Binding RestoreWindowCommand}" 
                            CommandParameter="{x:Static enum:WindowsName.MainWindow}"
                            Style="{StaticResource Button.Management.Window}"
                            WindowChrome.IsHitTestVisibleInChrome="True" 
                            ToolTip="Restore">
                        []
                    </Button>

                    <Button x:Name="MaximizeButton" 
                            Visibility="Visible"  
                            Command="{Binding MaximizeWindowCommand}"
                            CommandParameter="{x:Static enum:WindowsName.MainWindow}"
                            Style="{StaticResource Button.Management.Window}"
                            WindowChrome.IsHitTestVisibleInChrome="True" 
                            ToolTip="Maximize">
                        []
                    </Button>

                    <Button Command="{Binding ShutDownAppCommand}"
                            Style="{StaticResource Button.Management.Window}"
                            WindowChrome.IsHitTestVisibleInChrome="True"
                            ToolTip="Close">
                        X
                    </Button>

                </StackPanel>

                <!--#endregion-->

            </Grid>

            <!--#endregion-->

            <!--#region Content -->

            <Grid Grid.Row="1" Background="Black">

                <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Visibility="Visible"/>

            </Grid>

            <!--#endregion-->

        </Grid>
    </Border>
</Window>