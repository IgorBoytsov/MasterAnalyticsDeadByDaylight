<Page x:Class="DBDAnalytics.AdminPanel.WPF.Views.Pages.PatchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DBDAnalytics.AdminPanel.WPF.Views.Pages"
      xmlns:b="http://schemas.microsoft.com/xaml/behaviors" 
      xmlns:behaviors="clr-namespace:Shared.WPF.Behaviors;assembly=Shared.WPF" 
      xmlns:pages="clr-namespace:DBDAnalytics.AdminPanel.WPF.ViewModels.Pages" 
      xmlns:converters="clr-namespace:DBDAnalytics.AdminPanel.WPF.Resources.ValueConverters"
      d:DataContext="{d:DesignInstance Type=pages:PatchPageViewModel}"
      mc:Ignorable="d" 
      d:Background="{StaticResource Solid.Application.Background}"
      d:Width="950"
      d:Height="500"
      Title="PatchPage">

    <b:Interaction.Behaviors>
        <behaviors:AsyncInitializeBehavior />
    </b:Interaction.Behaviors>

    <Page.Resources>
        <converters:PatchDateConverter x:Key="PatchDateConverter"/>
    </Page.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--#region Popup -->

        <Popup IsOpen="{Binding EditPopup.IsOpen}"
               PlacementTarget="{Binding EditPopup.PlacementTarget}"
               Placement="Left"
               StaysOpen="False"
               AllowsTransparency="True"
               PopupAnimation="Fade">

            <Border BorderBrush="{StaticResource Solid.Border.Popup.ContentBlock.BorderBrush}"
                    Background="{StaticResource Solid.Border.ContentBlock.Background}"
                    BorderThickness="4"
                    CornerRadius="5"
                    Padding="10">

                <DockPanel MinWidth="300" 
                           DataContext="{Binding SelectedPatch}">

                    <Button Command="{Binding DataContext.EditPopup.HideCommand, RelativeSource={RelativeSource AncestorType=Popup}}"
                            Style="{StaticResource Button.App}"
                            Width="20"
                            HorizontalAlignment="Right"
                            DockPanel.Dock="Top">
                        <Button.Content>
                            <Control Template="{StaticResource Close}" Background="{StaticResource Solid.Icon.Close.Background}"/>
                        </Button.Content>
                    </Button>

                    <TextBlock Text="Название" 
                               Style="{StaticResource TextBlock.Title}"
                               DockPanel.Dock="Top"/>
                    <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource TextBox.InputData}"
                             DockPanel.Dock="Top"/>

                    <TextBlock Text="Дата"
                               Style="{StaticResource TextBlock.Title}"
                               DockPanel.Dock="Top"/>
                    <DatePicker SelectedDate="{Binding Date}"
                                DockPanel.Dock="Top"/>

                    <TextBlock Text="Старое ID" 
                               Style="{StaticResource TextBlock.Title}"
                               DockPanel.Dock="Top"/>
                    <TextBox Text="{Binding OldId, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource TextBox.InputData}"
                             DockPanel.Dock="Top"/>

                    <WrapPanel DockPanel.Dock="Top" 
                               HorizontalAlignment="Right"
                               Margin="0,10,0,0">

                        <Button Content="Обновить"
                                Command="{Binding DataContext.UpdateCommandAsync, RelativeSource={RelativeSource AncestorType=Popup}}"
                                CommandParameter="{Binding}"
                                Style="{StaticResource Button.App}"/>

                        <Button Content="Отменить изменения" Margin="5,0,0,0"
                                Command="{Binding DataContext.RevertChangeCommand, RelativeSource={RelativeSource AncestorType=Popup}}"
                                CommandParameter="{Binding}"
                                Style="{StaticResource Button.App}"/>

                    </WrapPanel>
                </DockPanel>
            </Border>
        </Popup>

        <!--#endregion-->

        <!--#region Меню: Добавление -->

        <Border Grid.Column="0"
                Style="{StaticResource Border.ContentBlock}">
            <DockPanel>
                <TextBlock Text="Название"
                           Style="{StaticResource TextBlock.Title}"
                           DockPanel.Dock="Top"/>

                <TextBox Text="{Binding NewPatch.Name, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource TextBox.InputData}"
                         DockPanel.Dock="Top"/>

                <TextBlock Text="Старое ID"
                           Style="{StaticResource TextBlock.Title}"
                           DockPanel.Dock="Top"/>

                <TextBox Text="{Binding NewPatch.OldId, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource TextBox.InputData}"
                         DockPanel.Dock="Top"/>
                
                <TextBlock Text="Дата"
                           Style="{StaticResource TextBlock.Title}"
                           DockPanel.Dock="Top"/>

                <DatePicker SelectedDate="{Binding NewPatch.Date}"
                            DockPanel.Dock="Top"/>

                <Button Content="Добавить" 
                        Style="{StaticResource Button.App}"
                        Command="{Binding CreateCommandAsync}"
                        VerticalAlignment="Bottom"
                        Margin="10"/>
            </DockPanel>
        </Border>

        <!--#endregion-->

        <!--#region Список данных -->

        <Border Grid.Column="1" 
                Style="{StaticResource Border.ContentBlock}">

            <DataGrid ItemsSource="{Binding Patches}" 
                      d:ItemsSource="{d:SampleData ItemCount=10}"
                      SelectedItem="{Binding SelectedPatch}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      Margin="0,0,0,0"
                      Style="{StaticResource TransparentDataGridStyle}">

                <DataGrid.Columns>

                    <DataGridTemplateColumn Header="ID" SortMemberPath="Id" Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Id}" 
                                           Style="{StaticResource TextBlock.DataGrid.Data}"
                                           HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Старое ID" SortMemberPath="OldId" Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding OldId}"
                                           Style="{StaticResource TextBlock.DataGrid.Data}"
                                           HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Название" SortMemberPath="Name" Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}"
                                           Style="{StaticResource TextBlock.DataGrid.Data}"
                                           Margin="10,0,0,0"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Дата" SortMemberPath="Name" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Date, Converter={StaticResource PatchDateConverter}}"
                                           Style="{StaticResource TextBlock.DataGrid.Data}"
                                           Margin="10,0,0,0"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Действие" Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>

                                <WrapPanel HorizontalAlignment="Center">
                                    <Button Command="{Binding DataContext.DeleteCommandAsync, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                            CommandParameter="{Binding }"
                                            Style="{StaticResource Button.DataGrid}"
                                            ToolTip="Удалить"
                                            ToolTipService.Placement="Right">
                                        <Button.Content>
                                            <Control Template="{StaticResource Trash}" Foreground="{StaticResource Solid.Icon.Trash.Background}"/>
                                        </Button.Content>
                                    </Button>

                                    <Button Style="{StaticResource Button.DataGrid}"
                                            ToolTip="Обновить"
                                            ToolTipService.Placement="Right">
                                        <Button.Content>
                                            <Control Template="{StaticResource UpdateIcon}" Foreground="{StaticResource Solid.Icon.UpdateIcon.Background}"/>
                                        </Button.Content>
                                        <Button.Command>
                                            <Binding Path="DataContext.EditPopup.ShowCommand" 
                                                     RelativeSource="{RelativeSource AncestorType=DataGrid}"/>
                                        </Button.Command>
                                        <Button.CommandParameter>
                                            <Binding RelativeSource="{RelativeSource Self}"/>
                                        </Button.CommandParameter>
                                    </Button>
                                </WrapPanel>

                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!--#endregion-->

    </Grid>
    
</Page>