<Page x:Class="DBDAnalytics.AdminPanel.WPF.Views.Pages.SurvivorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DBDAnalytics.AdminPanel.WPF.Views.Pages"
      xmlns:b="http://schemas.microsoft.com/xaml/behaviors" 
      xmlns:behaviors="clr-namespace:Shared.WPF.Behaviors;assembly=Shared.WPF"
      xmlns:pages="clr-namespace:DBDAnalytics.AdminPanel.WPF.ViewModels.Pages" 
      xmlns:vm="clr-namespace:DBDAnalytics.AdminPanel.WPF.ViewModels.Components"
      xmlns:attach="clr-namespace:DBDAnalytics.AdminPanel.WPF.Resources.Attachable"
      d:DataContext="{d:DesignInstance Type=pages:SurvivorPageViewModel}"
      mc:Ignorable="d" 
      d:Height="700"
      d:Width="1200"
      d:Background="{StaticResource Solid.Application.Background}"
      Title="SurvivorPage">

    <b:Interaction.Behaviors>
        <behaviors:AsyncInitializeBehavior />
    </b:Interaction.Behaviors>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="330"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--==========Popups==========-->

        <!--Выживший-->
        
        <!--#region MenuSurvivor -->

        <Popup IsOpen="{Binding MenuSurvivorPopup.IsOpen}"
               PlacementTarget="{Binding MenuSurvivorPopup.PlacementTarget}"
               Placement="Right"
               StaysOpen="False"
               AllowsTransparency="True"
               PopupAnimation="Fade">

            <Border BorderBrush="{StaticResource Solid.Border.Popup.ContentBlock.BorderBrush}"
                    Background="{StaticResource Solid.Border.Popup.ContentBlock.Background}"
                    BorderThickness="2"
                    CornerRadius="5"
                    Padding="5">

                <StackPanel MinWidth="150">

                    <Button Content="Редактировать"
                            Command="{Binding ManagementSurvivorEditCommand}"
                            CommandParameter="{x:Static Visibility.Visible}"
                            Style="{StaticResource Button.PopupMenu}" 
                            attach:ButtonHelper.IconTemplate="{StaticResource Edit}"/>

                    <Button Content="Откатить изменения" 
                            Command="{Binding RevertSurvivorChangeCommand}"
                            CommandParameter="{Binding SelectedSurvivor}"
                            Style="{StaticResource Button.PopupMenu}" 
                            attach:ButtonHelper.IconTemplate="{StaticResource Revert}"/>

                    <Separator Margin="0,5,0,5"/>

                    <Button Content="Удалить" 
                            Command="{Binding DeleteSurvivorCommandAsync}"
                            CommandParameter="{Binding SelectedSurvivor}"
                            Style="{StaticResource Button.PopupMenu}" 
                            attach:ButtonHelper.IconTemplate="{StaticResource Trash}"/>

                    <Separator Margin="0,5,0,5"/>

                    <Button Content="Копировать информацию" 
                            Command="{Binding CopyAllInfoSurvivorCommand}"
                            CommandParameter="{Binding SelectedSurvivor}"
                            Style="{StaticResource Button.PopupMenu}" 
                            attach:ButtonHelper.IconTemplate="{StaticResource CopyIcon}"/>

                </StackPanel>
            </Border>
        </Popup>

        <!--#endregion-->

        <!--#region MenuLocalSurvivor -->

        <Popup IsOpen="{Binding MenuLocalSurvivorPopup.IsOpen}"
               PlacementTarget="{Binding MenuLocalSurvivorPopup.PlacementTarget}"
               Placement="Right"
               StaysOpen="False"
               AllowsTransparency="True"
               PopupAnimation="Fade">

            <Border BorderBrush="{StaticResource Solid.Border.Popup.ContentBlock.BorderBrush}"
                    Background="{StaticResource Solid.Border.Popup.ContentBlock.Background}"
                    BorderThickness="2"
                    CornerRadius="5"
                    Padding="5">

                <StackPanel MinWidth="150">

                    <Button Content="Редактировать"
                            Command="{Binding ManagementLocalSurvivorEditCommand}"
                            CommandParameter="{x:Static Visibility.Visible}"
                            Style="{StaticResource Button.PopupMenu}" 
                            attach:ButtonHelper.IconTemplate="{StaticResource Edit}"/>

                    <Button Content="Удалить" 
                            Command="{Binding DeleteLocalSurvivorCommand}"
                            CommandParameter="{Binding SelectedLocalSurvivor}"
                            Style="{StaticResource Button.PopupMenu}" 
                            attach:ButtonHelper.IconTemplate="{StaticResource Trash}"/>

                </StackPanel>
            </Border>
        </Popup>

        <!--#endregion-->

        <!--Пеорки-->
        
        <!--#region MenuPerk -->

        <Popup IsOpen="{Binding MenuPerkPopup.IsOpen}"
               PlacementTarget="{Binding MenuPerkPopup.PlacementTarget}"
               Tag="{Binding}" 
               Placement="Right"
               StaysOpen="False"
               AllowsTransparency="True"
               PopupAnimation="Fade">

            <Border BorderBrush="{StaticResource Solid.Border.Popup.ContentBlock.BorderBrush}"
                    Background="{StaticResource Solid.Border.Popup.ContentBlock.Background}"
                    BorderThickness="2"
                    CornerRadius="5"
                    Padding="5">

                <StackPanel MinWidth="150">

                    <Button Content="Редактировать"
                            Command="{Binding ManagementPerkEditCommand}"
                            CommandParameter="{x:Static Visibility.Visible}"
                            Style="{StaticResource Button.PopupMenu}" 
                            attach:ButtonHelper.IconTemplate="{StaticResource Edit}"/>

                    <Button Content="Откатить изменения" 
                            Command="{Binding RevertPerkChangeCommand}"
                            CommandParameter="{Binding SelectedPerk}"
                            Style="{StaticResource Button.PopupMenu}" 
                            attach:ButtonHelper.IconTemplate="{StaticResource Revert}"/>

                    <Separator Margin="0,5,0,5"/>

                    <Button Content="Удалить" 
                            Command="{Binding DeletePerkCommandAsync}"
                            CommandParameter="{Binding SelectedPerk}"
                            Style="{StaticResource Button.PopupMenu}" 
                            attach:ButtonHelper.IconTemplate="{StaticResource Trash}"/>

                    <Separator Margin="0,5,0,5"/>

                    <Button Content="Копировать информацию" 
                            Command="{Binding CopyAllInfoMapCommand}"
                            CommandParameter="{Binding SelectedPerk}"
                            Style="{StaticResource Button.PopupMenu}" 
                            attach:ButtonHelper.IconTemplate="{StaticResource CopyIcon}"/>

                </StackPanel>
            </Border>
        </Popup>

        <!--#endregion-->

        <!--#region MenuLocalPerk -->

        <Popup IsOpen="{Binding MenuLocalPerkPopup.IsOpen}"
               PlacementTarget="{Binding MenuLocalPerkPopup.PlacementTarget}"
               Tag="{Binding}" 
               Placement="Right"
               StaysOpen="False"
               AllowsTransparency="True"
               PopupAnimation="Fade">

            <Border BorderBrush="{StaticResource Solid.Border.Popup.ContentBlock.BorderBrush}"
                    Background="{StaticResource Solid.Border.Popup.ContentBlock.Background}"
                    BorderThickness="2"
                    CornerRadius="5"
                    Padding="5">

                <StackPanel MinWidth="150">

                    <Button Content="Редактировать"
                            Command="{Binding ManagementLocalPerkEditCommand}"
                            Style="{StaticResource Button.PopupMenu}" 
                            attach:ButtonHelper.IconTemplate="{StaticResource Edit}"/>

                    <Button Content="Удалить" 
                            Command="{Binding DeleteLocalPerkCommand}"
                            CommandParameter="{Binding SelectedLocalPerk}"
                            Style="{StaticResource Button.PopupMenu}" 
                            attach:ButtonHelper.IconTemplate="{StaticResource Trash}"/>

                </StackPanel>
            </Border>
        </Popup>

        <!--#endregion-->

        <!--==========Modal==========-->

        <!--Выживший-->
        
        <!--#region Добавление Survivor (Локально) -->

        <Border Grid.ColumnSpan="3" Grid.RowSpan="2" Panel.ZIndex="2"
                Background="Transparent"
                Visibility="{Binding SurvivorAddModalVisibility}" d:Visibility="Collapsed">

            <Border Background="{StaticResource Solid.Border.ContentBlock.BorderBrush}" BorderBrush="Gray"
                    BorderThickness="2"
                    CornerRadius="12"
                    Width="620"
                    Height="620">

                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!--#region Header -->

                    <Border Grid.Row="0" Style="{StaticResource Border.ContentBlock}" Margin="15,0,15,0">

                        <DockPanel>

                            <Button Style="{StaticResource Button.App}"
                                    Command="{Binding ManagementSurvivorAddCommand}"
                                    CommandParameter="{x:Static Visibility.Collapsed}"
                                    Margin="2"
                                    DockPanel.Dock="Right">
                                <Button.Content>
                                    <Control Template="{StaticResource Close}" Foreground="White"/>
                                </Button.Content>
                            </Button>

                            <TextBlock Text="Добавление выжившего"
                                       Margin="20,5,0,0"
                                       Style="{StaticResource TextBlock.Title}"/>

                        </DockPanel>

                    </Border>

                    <!--#endregion-->

                    <!--#region Ввод данных -->

                    <Border Grid.Row="1" Style="{StaticResource Border.ContentBlock}">

                        <DockPanel>

                            <TextBlock Text="Название"
                                       Style="{StaticResource TextBlock.Title}"
                                       DockPanel.Dock="Top"/>

                            <TextBox Text="{Binding NewSurvivor.Name, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource TextBox.InputData}"
                                     DockPanel.Dock="Top"/>

                            <TextBlock Text="Старое ID"
                                       Style="{StaticResource TextBlock.Title}"
                                       DockPanel.Dock="Top"/>

                            <TextBox Text="{Binding NewSurvivor.OldId, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource TextBox.InputData}"
                                     VerticalAlignment="Top"/>
                        </DockPanel>

                    </Border>

                    <Border Grid.Row="2" Style="{StaticResource Border.ContentBlock}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Column="0" Grid.Row="0">
                                <Image Source="{Binding NewSurvivor.Image}"/>
                            </Border>

                            <Button Content="Выбрать" 
                                    Grid.Column="0" Grid.Row="1" 
                                    Style="{StaticResource Button.App}"
                                    Command="{Binding SelectSurvivorImageCommand}"
                                    CommandParameter="{Binding NewSurvivor}"
                                    HorizontalAlignment="Center"/>

                        </Grid>
                    </Border>

                    <!--#endregion-->

                    <!--#region Кнопка -->

                    <Button Grid.Row="3" Content="Добавить"
                            Style="{StaticResource Button.App}"
                            Command="{Binding AddLocalSurvivorCommand}">
                    </Button>

                    <!--#endregion-->

                </Grid>
            </Border>

        </Border>

        <!--#endregion-->

        <!--#region Редактиврование LocalSurvivor -->

        <Border Grid.ColumnSpan="3" Grid.RowSpan="2" Panel.ZIndex="2"
                Background="Transparent"
                Visibility="{Binding LocalSurvivorEditModalVisibility}" d:Visibility="Collapsed">

            <Border Background="{StaticResource Solid.Border.ContentBlock.BorderBrush}" BorderBrush="Gray"
                    BorderThickness="2"
                    CornerRadius="12"
                    Width="620"
                    Height="620">

                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!--#region Header -->

                    <Border Grid.Row="0" Style="{StaticResource Border.ContentBlock}" Margin="15,0,15,0">

                        <DockPanel>

                            <Button Style="{StaticResource Button.App}"
                                    Command="{Binding ManagementLocalSurvivorEditCommand}"
                                    CommandParameter="{x:Static Visibility.Collapsed}"
                                    Margin="2"
                                    DockPanel.Dock="Right">
                                <Button.Content>
                                    <Control Template="{StaticResource Close}" Foreground="White"/>
                                </Button.Content>
                            </Button>

                            <TextBlock Text="{Binding SelectedLocalSurvivor.Name, StringFormat=Локальные изменения: {0}}" d:Text="Локальные изменения: Кейт Денсон"
                                       Margin="20,5,0,0"
                                       Style="{StaticResource TextBlock.Title}"/>

                        </DockPanel>

                    </Border>

                    <!--#endregion-->

                    <!--#region Поля ввода -->

                    <Border Grid.Row="1" Style="{StaticResource Border.ContentBlock}">

                        <DockPanel>

                            <TextBlock Text="Название"
                                       Style="{StaticResource TextBlock.Title}"
                                       DockPanel.Dock="Top"/>

                            <TextBox Text="{Binding SelectedLocalSurvivor.Name, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource TextBox.InputData}"
                                     DockPanel.Dock="Top"/>

                            <TextBlock Text="Старое ID"
                                       Style="{StaticResource TextBlock.Title}"
                                       DockPanel.Dock="Top"/>

                            <TextBox Text="{Binding SelectedLocalSurvivor.OldId, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource TextBox.InputData}"
                                     VerticalAlignment="Top"/>
                        </DockPanel>

                    </Border>

                    <Border Grid.Row="2" Style="{StaticResource Border.ContentBlock}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Column="0" Grid.Row="0">
                                <Image Source="{Binding SelectedLocalSurvivor.Image}"/>
                            </Border>

                            <Button Content="Выбрать" 
                                    Grid.Column="0" Grid.Row="1" 
                                    Style="{StaticResource Button.App}"
                                    Command="{Binding SelectSurvivorImageCommand}"
                                    CommandParameter="{Binding SelectedLocalSurvivor}"
                                    HorizontalAlignment="Center"/>

                        </Grid>
                    </Border>

                    <!--#endregion-->

                </Grid>
            </Border>

        </Border>

        <!--#endregion-->

        <!--#region Редактиврование Survivor -->

        <Border Grid.ColumnSpan="3" Grid.RowSpan="2" Panel.ZIndex="2"
                Background="Transparent"
                Visibility="{Binding SurvivorEditModalVisibility}" d:Visibility="Collapsed">

            <Border Background="{StaticResource Solid.Border.ContentBlock.BorderBrush}" BorderBrush="Gray"
                    BorderThickness="2"
                    CornerRadius="12"
                    Width="620"
                    Height="620">

                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!--#region Header -->

                    <Border Grid.Row="0" Style="{StaticResource Border.ContentBlock}" Margin="15,0,15,0">

                        <DockPanel>

                            <Button Style="{StaticResource Button.App}"
                                    Command="{Binding ManagementSurvivorEditCommand}"
                                    CommandParameter="{x:Static Visibility.Collapsed}"
                                    Margin="2"
                                    DockPanel.Dock="Right">
                                <Button.Content>
                                    <Control Template="{StaticResource Close}" Foreground="White"/>
                                </Button.Content>
                            </Button>

                            <TextBlock Text="{Binding SelectedSurvivor.Name, StringFormat=Изменения: {0}}" d:Text="Изменения: Кейт Денсон"
                                       Margin="20,5,0,0"
                                       Style="{StaticResource TextBlock.Title}"/>

                        </DockPanel>

                    </Border>

                    <!--#endregion-->

                    <!--#region Поля ввода -->

                    <Border Grid.Row="1" Style="{StaticResource Border.ContentBlock}">

                        <DockPanel>

                            <TextBlock Text="Название"
                                       Style="{StaticResource TextBlock.Title}"
                                       DockPanel.Dock="Top"/>

                            <TextBox Text="{Binding SelectedSurvivor.Name, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource TextBox.InputData}"
                                     DockPanel.Dock="Top"/>

                            <TextBlock Text="Старое ID"
                                       Style="{StaticResource TextBlock.Title}"
                                       DockPanel.Dock="Top"/>

                            <TextBox Text="{Binding SelectedSurvivor.OldId, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource TextBox.InputData}"
                                     VerticalAlignment="Top"/>
                        </DockPanel>

                    </Border>

                    <Border Grid.Row="2" Style="{StaticResource Border.ContentBlock}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Column="0" Grid.Row="0">
                                <Image Source="{Binding SelectedSurvivor.Image}"/>
                            </Border>

                            <Button Content="Выбрать" 
                                    Grid.Column="0" Grid.Row="1" 
                                    Style="{StaticResource Button.App}"
                                    Command="{Binding SelectSurvivorImageCommand}"
                                    CommandParameter="{Binding SelectedSurvivor}"
                                    HorizontalAlignment="Center"/>

                        </Grid>
                    </Border>

                    <!--#endregion-->

                </Grid>
            </Border>

        </Border>

        <!--#endregion-->

        <!--Пеорки-->

        <!--#region Добавление LocalPerk -->

        <Border Grid.ColumnSpan="3" Grid.RowSpan="2" Panel.ZIndex="2"
                Background="Transparent"
                Visibility="{Binding PerkAddModalVisibility}" d:Visibility="Collapsed">

            <Border Background="{StaticResource Solid.Border.ContentBlock.BorderBrush}" BorderBrush="Gray"
                    BorderThickness="2"
                    CornerRadius="12"
                    Width="620"
                    Height="620">

                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!--#region Header -->

                    <Border Grid.Row="0" Style="{StaticResource Border.ContentBlock}" Margin="15,0,15,0">

                        <DockPanel>

                            <Button Style="{StaticResource Button.App}"
                                    Command="{Binding ManagementPerkAddCommand}"
                                    CommandParameter="{x:Static Visibility.Collapsed}"
                                    Margin="2"
                                    DockPanel.Dock="Right">
                                <Button.Content>
                                    <Control Template="{StaticResource Close}" Foreground="White"/>
                                </Button.Content>
                            </Button>

                            <TextBlock Text="Добавление перка"
                                       Margin="20,5,0,0"
                                       Style="{StaticResource TextBlock.Title}"/>

                        </DockPanel>

                    </Border>

                    <!--#endregion-->

                    <!--#region Поля ввода -->

                    <Border Grid.Row="1" Style="{StaticResource Border.ContentBlock}">

                        <DockPanel>

                            <TextBlock Text="Название"
                                 Style="{StaticResource TextBlock.Title}"
                                 DockPanel.Dock="Top"/>

                            <TextBox Text="{Binding NewPerk.Name, UpdateSourceTrigger=PropertyChanged}" 
                               Style="{StaticResource TextBox.InputData}"
                               DockPanel.Dock="Top"/>

                            <TextBlock Text="Старое ID"
                                 Style="{StaticResource TextBlock.Title}"
                                 DockPanel.Dock="Top"/>

                            <TextBox Text="{Binding NewPerk.OldId, UpdateSourceTrigger=PropertyChanged}" 
                               Style="{StaticResource TextBox.InputData}"
                               VerticalAlignment="Top"/>
                        </DockPanel>

                    </Border>

                    <Border Grid.Row="2" Style="{StaticResource Border.ContentBlock}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Column="0" Grid.Row="0">
                                <Image Source="{Binding NewPerk.Image}"/>
                            </Border>

                            <Button Content="Выбрать"
                                    Grid.Row="1" 
                                    Style="{StaticResource Button.App}"
                                    Command="{Binding SelectPerkImageCommand}"
                                    CommandParameter="{Binding NewPerk}"
                                    HorizontalAlignment="Center"/>

                            <Button Content="Добавить"
                                    Grid.Row="2" 
                                    Style="{StaticResource Button.App}"
                                    Command="{Binding AddLocalPerkCommand}"
                                    HorizontalAlignment="Center"/>

                        </Grid>
                    </Border>

                    <!--#endregion-->

                </Grid>
            </Border>

        </Border>

        <!--#endregion-->

        <!--#region Редактиврование LocalPerk -->

        <Border Grid.ColumnSpan="3" Grid.RowSpan="2" Panel.ZIndex="2"
                Background="Transparent"
                Visibility="{Binding LocalPerkEditModalVisibility}" d:Visibility="Collapsed">

            <Border Background="{StaticResource Solid.Border.ContentBlock.BorderBrush}" BorderBrush="Gray"
                    BorderThickness="2"
                    CornerRadius="12"
                    Width="620"
                    Height="620">

                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!--#region Header -->

                    <Border Grid.Row="0" Style="{StaticResource Border.ContentBlock}" Margin="15,0,15,0">

                        <DockPanel>

                            <Button Style="{StaticResource Button.App}"
                                    Command="{Binding ManagementLocalPerkEditCommand}"
                                    CommandParameter="{x:Static Visibility.Collapsed}"
                                    Margin="2"
                                    DockPanel.Dock="Right">
                                <Button.Content>
                                    <Control Template="{StaticResource Close}" Foreground="White"/>
                                </Button.Content>
                            </Button>

                            <TextBlock Text="{Binding SelectedLocalPerk.Name, StringFormat=Изменения: {0}}" d:Text="Изменения: Пружина"
                                 Margin="20,5,0,0"
                                 Style="{StaticResource TextBlock.Title}"/>

                        </DockPanel>

                    </Border>

                    <!--#endregion-->

                    <!--#region Поля ввода -->

                    <Border Grid.Row="1" Style="{StaticResource Border.ContentBlock}">

                        <DockPanel>

                            <TextBlock Text="Название"
                                       Style="{StaticResource TextBlock.Title}"
                                       DockPanel.Dock="Top"/>

                            <TextBox Text="{Binding SelectedLocalPerk.Name, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource TextBox.InputData}"
                                     DockPanel.Dock="Top"/>

                            <TextBlock Text="Старое ID"
                                       Style="{StaticResource TextBlock.Title}"
                                       DockPanel.Dock="Top"/>

                            <TextBox Text="{Binding SelectedLocalPerk.OldId, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource TextBox.InputData}"
                                     VerticalAlignment="Top"/>
                        </DockPanel>

                    </Border>

                    <Border Grid.Row="2" Style="{StaticResource Border.ContentBlock}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Column="0" Grid.Row="0">
                                <Image Source="{Binding SelectedLocalPerk.Image}"/>
                            </Border>

                            <Button Content="Выбрать"
                                    Grid.Row="1" 
                                    Style="{StaticResource Button.App}"
                                    Command="{Binding SelectPerkImageCommand}"
                                    CommandParameter="{Binding SelectedLocalPerk}"
                                    HorizontalAlignment="Center"/>

                        </Grid>
                    </Border>

                    <!--#endregion-->

                </Grid>
            </Border>

        </Border>

        <!--#endregion-->

        <!--#region Редактиврование Perk -->

        <Border Grid.ColumnSpan="3" Grid.RowSpan="2" Panel.ZIndex="2"
                Background="Transparent"
                Visibility="{Binding PerkEditModalVisibility}" d:Visibility="Collapsed">

            <Border Background="{StaticResource Solid.Border.ContentBlock.BorderBrush}" BorderBrush="Gray"
                    BorderThickness="2"
                    CornerRadius="12"
                    Width="620"
                    Height="620">

                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!--#region Header -->

                    <Border Grid.Row="0" Style="{StaticResource Border.ContentBlock}" Margin="15,0,15,0">

                        <DockPanel>

                            <Button Style="{StaticResource Button.App}"
                                    Command="{Binding ManagementPerkEditCommand}"
                                    CommandParameter="{x:Static Visibility.Collapsed}"
                                    Margin="2"
                                    DockPanel.Dock="Right">
                                <Button.Content>
                                    <Control Template="{StaticResource Close}" Foreground="White"/>
                                </Button.Content>
                            </Button>

                            <TextBlock Text="{Binding SelectedPerk.Name, StringFormat=Изменения: {0}}" d:Text="Изменения: Пружина"
                                       Margin="20,5,0,0"
                                       Style="{StaticResource TextBlock.Title}"/>

                        </DockPanel>

                    </Border>

                    <!--#endregion-->

                    <!--#region Поля ввода -->

                    <Border Grid.Row="1" Style="{StaticResource Border.ContentBlock}">

                        <DockPanel>

                            <TextBlock Text="Название"
                                       Style="{StaticResource TextBlock.Title}"
                                       DockPanel.Dock="Top"/>

                            <TextBox Text="{Binding SelectedPerk.Name, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource TextBox.InputData}"
                                     DockPanel.Dock="Top"/>

                            <TextBlock Text="Старое ID"
                                       Style="{StaticResource TextBlock.Title}"
                                       DockPanel.Dock="Top"/>

                            <TextBox Text="{Binding SelectedPerk.OldId, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource TextBox.InputData}"
                                     VerticalAlignment="Top"/>
                        </DockPanel>

                    </Border>

                    <Border Grid.Row="2" Style="{StaticResource Border.ContentBlock}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Column="0" Grid.Row="0">
                                <Image Source="{Binding SelectedPerk.Image}"/>
                            </Border>

                            <Button Content="Выбрать"
                                    Grid.Row="1" 
                                    Style="{StaticResource Button.App}"
                                    Command="{Binding SelectPerkImageCommand}"
                                    CommandParameter="{Binding SelectedPerk}"
                                    HorizontalAlignment="Center"/>

                        </Grid>
                    </Border>

                    <!--#endregion-->

                </Grid>
            </Border>

        </Border>

        <!--#endregion-->

        <!--==========Основной контент страницы==========-->

        <!--#region Управление Survivors -->

        <Border Grid.Column="0" Grid.Row="0" Margin="15,0,15,0" Style="{StaticResource Border.ContentBlock}">
            <DockPanel HorizontalAlignment="Left">
                <Button Style="{StaticResource Button.KillerPage.Management}"
                        Command="{Binding ManagementSurvivorAddCommand}"
                        CommandParameter="{x:Static Visibility.Visible}"
                        DockPanel.Dock="Left"
                        HorizontalAlignment="Left">
                    <Button.Content>
                        <Control Template="{StaticResource Create}" 
                                 Foreground="Green"/>
                    </Button.Content>
                </Button>
            </DockPanel>
        </Border>

        <!--#endregion-->

        <!--#region [Survivors] -->

        <Border Grid.Column="0" Grid.Row="1"
                Style="{StaticResource Border.ContentBlock}">

            <TabControl SelectedIndex="{Binding TabControlSurvivorIndex}">

                <!--#region Данные из БД -->

                <TabItem Header="Акт. данные">
                    <ListView ItemsSource="{Binding Survivors}"
                              d:ItemsSource="{d:SampleData ItemCount=10}"
                              SelectedItem="{Binding SelectedSurvivor}"
