<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="Border.ContentBlock" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource Solid.Border.ContentBlock.Background}"/>
        <Setter Property="Margin" Value="15"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{StaticResource Solid.Border.ContentBlock.BorderBrush}"/>
        <Setter Property="CornerRadius" Value="6"/>
    </Style>

</ResourceDictionary>