<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:fa="http://schemas.fontawesome.com/icons/">
    
    <Style x:Key="DeleteIcon" TargetType="fa:FontAwesome">
        <Setter Property="Icon" Value="Solid_TrashAlt"/>
        <Setter Property="Foreground" Value="Red"/>
    </Style>

    <Style x:Key="SaveIcon" TargetType="fa:FontAwesome">
        <Setter Property="Icon" Value="Regular_Save"/>
        <Setter Property="Foreground" Value="Green"/>
    </Style>

    <Style x:Key="CancelIcon" TargetType="fa:FontAwesome">
        <Setter Property="Icon" Value="Solid_Ban"/>
        <Setter Property="Foreground" Value="Red"/>
    </Style>

</ResourceDictionary>