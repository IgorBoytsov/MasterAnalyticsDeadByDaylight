<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:fa="http://schemas.fontawesome.com/icons/">
    
    <Style x:Key="DeleteIcon" TargetType="fa:FontAwesome">
        <Setter Property="Icon" Value="Solid_TrashAlt"/>
        <Setter Property="Foreground" Value="Red"/>
    </Style>

    <Style x:Key="SaveIcon" TargetType="fa:FontAwesome">
        <Setter Property="Icon" Value="Regular_Save"/>
        <Setter Property="Foreground" Value="Green"/>
    </Style>

    <Style x:Key="CancelIcon" TargetType="fa:FontAwesome">
        <Setter Property="Icon" Value="Solid_Ban"/>
        <Setter Property="Foreground" Value="Red"/>
    </Style>

    <Style x:Key="BuildIcon" TargetType="fa:ImageAwesome">
        <Setter Property="Icon" Value="Regular_ListAlt"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>
    
    <Style x:Key="AddBuildIcon" TargetType="fa:ImageAwesome">
        <Setter Property="Icon" Value="Solid_Plus"/>
        <Setter Property="Foreground" Value="White"/>
        <!--<Setter Property="Margin" Value="1.8"/>-->
    </Style>
</ResourceDictionary>