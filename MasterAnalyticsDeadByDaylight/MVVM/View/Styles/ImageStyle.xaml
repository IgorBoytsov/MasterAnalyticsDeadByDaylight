<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--#region Изображение в Header окна -->

    <Style x:Key="HeaderImage" TargetType="Image">
        <Setter Property="Source" Value="/Resources/icons8-dead-by-daylight-256.png"/>
        <Setter Property="Width" Value="35"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    
    <!--#endregion-->

    <!--#region Отображение добавляемого изображения -->

    <Style x:Key="AddingImage" TargetType="Image">
        <Setter Property="Margin" Value="0,10,0,0"/>
    </Style>

    <!--#endregion-->
   
</ResourceDictionary>