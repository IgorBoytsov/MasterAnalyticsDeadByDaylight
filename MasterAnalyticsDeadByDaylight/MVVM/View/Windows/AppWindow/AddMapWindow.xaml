            <ListViewItem Content="Раккун-Сити - Западное крыло Полицейского участка"/>
            <ListViewItem Content="Раккун-Сити - Западное крыло Полицейского участка"/>
            <ListViewItem Content="Вмешательство скверны"/>
            <ListViewItem Content="Раккун-Сити - Западное крыло Полицейского участка"/>
            <ListViewItem Content="Раккун-Сити - Западное крыло Полицейского участка"/>
        </ListView>

        <StackPanel Grid.Column="0" Grid.Row="2" HorizontalAlignment="Center" Grid.ColumnSpan="2" Orientation="Horizontal">
            <StackPanel Margin="10,0,0,0">
                <TextBlock Text="Название" HorizontalAlignment="Center" Margin="0,5,0,5"/>
                <TextBox Width="150" />

                <TextBlock Text="Изображение" HorizontalAlignment="Center" Margin="0,5,0,5"/>
                <Border Width="250" Height="150" BorderBrush="Gray" BorderThickness="2" CornerRadius="10">
                    <Image Source="C:\Users\light\OneDrive\Desktop\Изображение дбд\Карты\Заросли Дварки - Площадка Тобаpng.png" Width="245" Height="145"/>
                </Border>

                <StackPanel HorizontalAlignment="Center" Margin="0,5,0,0" Orientation="Horizontal">
                    <Button Content="Выбрать" Width="90" Height="20" />
                    <Button Content="Сохранить" Width="90" Height="20" Margin="10,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
