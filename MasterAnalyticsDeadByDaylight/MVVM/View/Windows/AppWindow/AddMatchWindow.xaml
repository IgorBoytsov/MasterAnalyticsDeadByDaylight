<Window x:Class="MasterAnalyticsDeadByDaylight.MVVM.View.Windows.AppWindow.AddMatchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MasterAnalyticsDeadByDaylight.MVVM.View.Windows.AppWindow"
        xmlns:fa="http://schemas.fontawesome.com/icons/" 
        xmlns:windowsviewmodels="clr-namespace:MasterAnalyticsDeadByDaylight.MVVM.ViewModel.WindowsViewModels" 
        d:DataContext="{d:DesignInstance Type=windowsviewmodels:AddMatchWindowViewModel}"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource WindowStyle}"
        Foreground="White"
        MinHeight="450" MinWidth="800"
        Height="850" Width="1600" 
        d:Height="Auto"
        Title="Добавить матч">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40" />
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <ResourceDictionary>

            <Style TargetType="ListViewItem">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ListViewItem">
                            <Border Name="border" Background="Transparent" CornerRadius="10" Margin="6" SnapsToDevicePixels="true">
                                <ContentPresenter/>
                            </Border>
                            <ControlTemplate.Triggers>

                                <Trigger Property="IsSelected" Value="true">
                                    <Setter TargetName="border" Property="Background" Value="Gray"/>
                                    <Setter TargetName="border" Property="BorderBrush" Value="Green"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                </Trigger>

                                <Trigger Property="IsMouseOver" Value="true">
                                    <Setter TargetName="border" Property="Background" Value="Gray"/>
                                    <Setter TargetName="border" Property="BorderBrush" Value="#7EB4EA"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

        </ResourceDictionary>
    </Window.Resources>

    <Window.CommandBindings>
        <CommandBinding Command="{x:Static SystemCommands.CloseWindowCommand}" CanExecute="CommandBinding_CanExecute" Executed="CommandBinding_Executed_Close" />
        <CommandBinding Command="{x:Static SystemCommands.MaximizeWindowCommand}" CanExecute="CommandBinding_CanExecute" Executed="CommandBinding_Executed_Maximize" />
        <CommandBinding Command="{x:Static SystemCommands.MinimizeWindowCommand}" CanExecute="CommandBinding_CanExecute" Executed="CommandBinding_Executed_Minimize" />
        <CommandBinding Command="{x:Static SystemCommands.RestoreWindowCommand}" CanExecute="CommandBinding_CanExecute" Executed="CommandBinding_Executed_Restore" />
    </Window.CommandBindings>

    <Border x:Name="MainWindowBorder" BorderBrush="LightCoral" BorderThickness="0" >
        <Grid x:Name="parentContainer" Background="#121212">

            <Grid.RowDefinitions>
                <RowDefinition Height ="Auto"/>
                <RowDefinition Height ="*"/>
            </Grid.RowDefinitions>

            <!--#region Window chrome область -->

            <Grid Grid.Row="0" Height="40" Background="#F999">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">

                    <Image Source="/Resources/icons8-dead-by-daylight-256.png" 
                           Width="35" Margin="2" 
                           HorizontalAlignment="Left" VerticalAlignment="Center"/>

                    <TextBlock Text="{Binding Title}" 
                           FontSize="20" 
                           VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" >

                    <Button Style="{StaticResource MinimizeButtonStyle}" WindowChrome.IsHitTestVisibleInChrome="True" ToolTip="Minimize"
                            Command="{x:Static SystemCommands.MinimizeWindowCommand}"/>

                    <Button x:Name="RestoreButton" Visibility="Collapsed" Style="{StaticResource RestoreButtonStyle}" 
                            Command="{x:Static SystemCommands.RestoreWindowCommand}" WindowChrome.IsHitTestVisibleInChrome="True" ToolTip="Restore"/>

                    <Button x:Name="MaximizeButton" Visibility="Visible" Style="{StaticResource MaximizeButtonStyle}" 
                            Command="{x:Static SystemCommands.MaximizeWindowCommand}" WindowChrome.IsHitTestVisibleInChrome="True" ToolTip="Maximize" />

                    <Button Style="{StaticResource CloseButtonStyle}" WindowChrome.IsHitTestVisibleInChrome="True" ToolTip="Close"
                            Command="{x:Static SystemCommands.CloseWindowCommand}"/>

                </StackPanel>
            </Grid>

            <!--#endregion-->

            <!--#region Контент окна -->

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="320"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!--#region Кнопки управление -->

                <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Grid.Column="0" Orientation="Horizontal">

                    <Button Template="{StaticResource ControlButton}" ToolTip="Добавить файл"
                            Command="{Binding LoadImageCommand}"
                            Width="40" Height="30" Margin="10,0,0,0">
                        <Image Source="/Resources/add-file-1151197.png" />
                    </Button>

                    <Button Template="{StaticResource ControlButton}" ToolTip="Очистить список"
                            Command="{Binding ClearImageListCommand}"
                            Width="40" Height="30" Margin="10,0,0,0">
                        <Image Source="/Resources/delete-7391435.png" />
                    </Button>

                    <Button Template="{StaticResource ControlButton}" ToolTip="Настройки"
                            Command="{Binding }"
                            Width="40" Height="30" Margin="10,0,0,0">
                        <Image Source="/Resources/settings-945147.png" />
                    </Button>

                </StackPanel>

                <!--#endregion-->

                <!--#region Отображение списока изображение -->
                
                <Border Grid.Row="1" Margin="0" Style="{StaticResource BorderCardAddMatch}">
                    <ListView ItemsSource="{Binding ImagesList}" d:ItemsSource="{d:SampleData ItemCount=5}"
                              SelectedItem="{Binding SelectedImage}"
                              Grid.Row="1"
                              Background="Transparent"
                              BorderBrush="White"
                              BorderThickness="0"
                              Foreground="White" 
                              FontSize="15" 
                              HorizontalContentAlignment="Center" 
                              Margin="5,5,5,5"
                              ScrollViewer.CanContentScroll="True"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              VirtualizingPanel.IsVirtualizing="True"
                              VirtualizingStackPanel.VirtualizationMode="Recycling"
                              VirtualizingPanel.CacheLength="15,15"
                              VirtualizingPanel.CacheLengthUnit="Item"
                              VirtualizingPanel.ScrollUnit="Pixel">

                        <ListView.Resources>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListViewItem">
                                            <Border Name="Border" Padding="2" BorderThickness="3" SnapsToDevicePixels="true">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>

                                                <Trigger Property="IsSelected" Value="true">
                                                    <Setter TargetName="Border" Property="BorderBrush" Value="Yellow"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                </Trigger>

                                                <Trigger Property="IsMouseOver" Value="true">
                                                    <Setter TargetName="Border" Property="Background" Value="Gray"/>
                                                    <Setter TargetName="Border" Property="BorderThickness" Value="1"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.Resources>

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Image Source="{Binding ResizeImage}" Width="auto" Height="auto"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>

                        <ListView.ContextMenu>
                            <ContextMenu BorderBrush="Black">
                                <MenuItem Header="Итоговая таблицу" FontSize="15" Command="{Binding LoadResultMatchImageCommand}"/>
                                <MenuItem Header="Начало игры" FontSize="15" Command="{Binding LoadStartMatchImageCommand}"/>
                                <MenuItem Header="Конец игры" FontSize="15" Command="{Binding LoadEndMatchImageCommand}"/>
                                <Separator/>
                                <MenuItem Header="Удалить" FontSize="15" Command="{Binding DeleteSelectedImageCommand}"/>
                            </ContextMenu>
                        </ListView.ContextMenu>
                    </ListView>
                </Border>

                <!--#endregion-->

                <!--#region Добавление данных -->

                <ScrollViewer Grid.Row="1" Grid.Column="1">
                    <StackPanel>
                        <TabControl Grid.Row="1" Grid.Column="1" MaxWidth="1200"
                                    Background="Transparent" 
                                    BorderBrush="Transparent" BorderThickness="0"
                                    Margin="5,5,0,5">

                            <TabControl.Resources>

                                <Style TargetType="TabPanel">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>

                                <!--#region Height 1 строки, в которой находится вырезаное изображение из итоговой таблицы матча -->

                                <Style x:Key="RowDefinitionKiller№1" TargetType="RowDefinition">
                                    <Setter Property="Height" Value="240"/>
                                </Style>

                                <Style x:Key="RowDefinitionSurvivor№1" TargetType="RowDefinition">
                                    <Setter Property="Height" Value="240"/>
                                </Style>

                                <Style x:Key="RowDefinitionResultMatch№1" TargetType="RowDefinition">
                                    <Setter Property="Height" Value="240"/>
                                </Style>

                                <!--#endregion-->

                                <!--#region Height 2 строки, в которой находятся поля для отображение вносимых данных -->

                                <Style x:Key="RowDefinitionKiller№2" TargetType="RowDefinition">
                                    <Setter Property="Height" Value="312"/>
                                </Style>

                                <Style x:Key="RowDefinitionSurvivor№2" TargetType="RowDefinition">
                                    <Setter Property="Height" Value="355"/>
                                </Style>

                                <Style x:Key="RowDefinitionResultMatch№2" TargetType="RowDefinition">
                                    <Setter Property="Height" Value="355"/>
                                </Style>

                                <!--#endregion-->

                                <!--#region Height 3 строки, в которой находятся для выбора данных -->

                                <Style x:Key="RowDefinitionKiller№3" TargetType="RowDefinition">
                                    <Setter Property="Height" Value="600"/>
                                </Style>

                                <Style x:Key="RowDefinitionSurvivor№3" TargetType="RowDefinition">
                                    <Setter Property="Height" Value="600"/>
                                </Style>

                                <Style x:Key="RowDefinitionResultMatch№3" TargetType="RowDefinition">
                                    <Setter Property="Height" Value="600"/>
                                </Style>

                                <!--#endregion-->

                            </TabControl.Resources>

                            <!--#region Киллер -->

                            <TabItem Style="{StaticResource TabItemStyleAdditional}">
                                <TabItem.Header>
                                    <TextBlock Text="Киллер" FontSize="20" Style="{StaticResource TextBlockTabItemHeader}"/>
                                </TabItem.Header>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Style="{StaticResource RowDefinitionKiller№1}"/>
                                        <RowDefinition Style="{StaticResource RowDefinitionKiller№2}"/>
                                        <RowDefinition Style="{StaticResource RowDefinitionKiller№3}"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.ColumnSpan="3" Style="{StaticResource BorderCardAddMatch}">
                                        <StackPanel>
                                            <Border Style="{StaticResource BorderHeading}" Margin="5,10,5,5">
                                                <TextBlock Text="Итог киллер" Style="{StaticResource HeaderStyle}"/>
                                            </Border>
                                            <Border Style="{StaticResource BorderAroundImage}">
                                                <Image Source="{Binding ResultMatchKillerImage}" Margin="10"/>
                                            </Border>
                                        </StackPanel>
                                    </Border>

                                    <!--#region Основная информация -->

                                    <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource BorderCardAddMatch}">
                                        <StackPanel>

                                            <Border Style="{StaticResource BorderHeading}">
                                                <TextBlock Text="Основная информация" Style="{StaticResource HeaderStyle}"/>
                                            </Border>

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                                    <TextBlock Text="Киллер:" Style="{StaticResource TextBlockAddMatchInputData}" />
                                                    <TextBlock Text="Платформа:" Style="{StaticResource TextBlockAddMatchInputData}"/>
                                                    <TextBlock Text="Престиж:" Style="{StaticResource TextBlockAddMatchInputData}"/>
                                                    <TextBlock Text="Счет:" Style="{StaticResource TextBlockAddMatchInputData}"/>
                                                    <TextBlock Text="Режим:" Style="{StaticResource TextBlockAddMatchInputData}"/>
                                                    <TextBlock Text="Бот:" Style="{StaticResource TextBlockAddMatchInputData}"/>
                                                    <TextBlock Text="Ассоциация:" Style="{StaticResource TextBlockAddMatchInputData}"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                                    <ComboBox Style="{DynamicResource ComboBoxAddMatchInputData}"  
                                                              ItemsSource="{Binding KillerList}"
                                                              SelectedItem="{Binding SelectedKiller}"                         
                                                              DisplayMemberPath="KillerName" />

                                                    <ComboBox Style="{DynamicResource ComboBoxAddMatchInputData}" 
                                                              ItemsSource="{Binding PlatformList}" 
                                                              SelectedItem="{Binding SelectedKillerPlatform}"                                                                
                                                              SelectedIndex="0"
                                                              DisplayMemberPath="PlatformName"/>

                                                    <TextBox Width="150" Height="25"
                                                             Text="{Binding KillerPrestige}"
                                                             Style="{StaticResource TextBoxAddmatchInputData}" 
                                                             Template="{StaticResource SettingTextBoxTemplate}"/>

                                                    <TextBox Width="150" Height="25" 
                                                             Text="{Binding KillerAccount}"
                                                             Style="{StaticResource TextBoxAddmatchInputData}" 
                                                             Template="{StaticResource SettingTextBoxTemplate}"/>

                                                    <CheckBox Content="Анонимный?"
                                                              Width="150" FontSize="20"
                                                              Margin="0,5,0,5"
                                                              IsChecked="{Binding KillerAnonymousMode}"
                                                              Foreground="White" 
                                                              VerticalContentAlignment="Center"/>

                                                    <CheckBox Content="Игрок вышел?" 
                                                              Width="150" FontSize="20" 
                                                              Margin="0,5,0,5"
                                                              IsChecked="{Binding KillerBot}"
                                                              Foreground="White" 
                                                              VerticalContentAlignment="Center"/>

                                                    <ComboBox Style="{DynamicResource ComboBoxAddMatchInputData}" 
                                                              ItemsSource="{Binding KillerAssociationList}"
                                                              SelectedItem="{Binding SelectedKillerPlayerAssociation}"
                                                              SelectedIndex="0"
                                                              DisplayMemberPath="PlayerAssociationName"/>
                                                </StackPanel>

                                            </Grid>

                                        </StackPanel>
                                    </Border>

                                    <!--#endregion-->

                                    <!--#region Билд (Перки + аддоны) -->

                                    <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource BorderCardAddMatch}">
                                        <StackPanel>

                                            <Border Style="{StaticResource BorderHeading}">
                                                <TextBlock Text="Билд" Style="{StaticResource HeaderStyle}"/>
                                            </Border>

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                                    <TextBlock Text="Перк I:" Style="{StaticResource TextBlockAddMatchInputData}" />
                                                    <TextBlock Text="Перк II:" Style="{StaticResource TextBlockAddMatchInputData}"/>
                                                    <TextBlock Text="Перк III:" Style="{StaticResource TextBlockAddMatchInputData}"/>
                                                    <TextBlock Text="Перк IV:" Style="{StaticResource TextBlockAddMatchInputData}"/>
                                                    <TextBlock Text="" Style="{StaticResource TextBlockAddMatchInputData}"/>
                                                    <TextBlock Text="Улучшение I" Style="{StaticResource TextBlockAddMatchInputData}"/>
                                                    <TextBlock Text="Улучшение II" Style="{StaticResource TextBlockAddMatchInputData}"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="1">
                                                    <TextBox Style="{StaticResource TextBoxAddmatchInputData}"
                                                             Text="{Binding SelectedKillerFirstPerkName}"
                                                             Template="{StaticResource SettingTextBoxTemplate}"
                                                             IsReadOnly="True"/>

                                                    <TextBox Style="{StaticResource TextBoxAddmatchInputData}"
                                                             Text="{Binding SelectedKillerSecondPerkName}"
                                                             Template="{StaticResource SettingTextBoxTemplate}"
                                                             IsReadOnly="True"/>

                                                    <TextBox Style="{StaticResource TextBoxAddmatchInputData}" 
                                                             Text="{Binding SelectedKillerThirdPerkName}"
                                                             Template="{StaticResource SettingTextBoxTemplate}"
                                                             IsReadOnly="True"/>

                                                    <TextBox Style="{StaticResource TextBoxAddmatchInputData}"
                                                             Text="{Binding SelectedKillerFourthPerkName}"
                                                             Template="{StaticResource SettingTextBoxTemplate}"
                                                             IsReadOnly="True"/>

                                                    <TextBlock Text="" Style="{StaticResource TextBlockAddMatchInputData}"/>

                                                    <TextBox Style="{StaticResource TextBoxAddmatchInputData}"
                                                             Text="{Binding SelectedKillerFirstAddonName}"
                                                             Template="{StaticResource SettingTextBoxTemplate}"
                                                             IsReadOnly="True"/>

                                                    <TextBox Style="{StaticResource TextBoxAddmatchInputData}"
                                                             Text="{Binding SelectedKillerSecondAddonName}"
                                                             Template="{StaticResource SettingTextBoxTemplate}"
                                                             IsReadOnly="True"/>
                                                </StackPanel>

                                            </Grid>

                                        </StackPanel>
                                    </Border>

                                    <!--#endregion-->

                                    <!--#region Подношение -->

                                    <Border Grid.Row="1" Grid.Column="2" Style="{StaticResource BorderCardAddMatch}">
                                        <StackPanel>

                                            <Border Style="{StaticResource BorderHeading}">
                                                <TextBlock Text="Подношение" Style="{StaticResource HeaderStyle}"/>
                                            </Border>

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                                    <TextBlock Text="Подношение:" Style="{StaticResource TextBlockAddMatchInputData}" />
                                                    <TextBlock Text="Роль:" Style="{StaticResource TextBlockAddMatchInputData}" />
                                                </StackPanel>

                                                <StackPanel Grid.Column="1">
                                                    <TextBox Style="{StaticResource TextBoxAddmatchInputData}"
                                                             Text="{Binding SelectedKillerOfferingName}"
                                                             Template="{StaticResource SettingTextBoxTemplate}"
                                                             IsReadOnly="True"/>

                                                    <ComboBox Style="{DynamicResource ComboBoxAddMatchInputData}"
                                                              ItemsSource="{Binding KillerRoleList}"
                                                              SelectedItem="{Binding SelectedRoleKiller}"
                                                              SelectedIndex="1"
                                                              DisplayMemberPath="RoleName"/>
                                                </StackPanel>
                                            </Grid>

                                        </StackPanel>
                                    </Border>

                                    <!--#endregion-->

                                    <!--#region Список перков -->

                                    <!--<Border Grid.Row="2" Grid.Column="0" VerticalAlignment="Top" Margin="0,10,0,10" Style="{StaticResource BorderHeading}">
                                        <TextBlock Text="Список перков" Style="{StaticResource HeaderStyle}"/>
                                    </Border>-->

                                    <StackPanel Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top" Orientation="Horizontal" Margin="0,10,0,10">
                                        <fa:ImageAwesome Icon="Solid_Search" Foreground="White" Width="20"/>
                                        <TextBlock Text="Перка" Width="Auto" TextAlignment="Center" Style="{StaticResource TextBlockAddMatchInputData}"/>
                                        <TextBox Style="{StaticResource TextBoxAddmatchInputData}" 
                                                 Template="{StaticResource SettingTextBoxTemplate}"
                                                 Text="{Binding SearchKillerPerk, UpdateSourceTrigger=PropertyChanged}"
                                                 Width="200" FontSize="16" Margin="10,0,0,0"/>
                                    </StackPanel>

                                    <Border Grid.Row="2" Grid.Column="0" Style="{StaticResource BorderCardAddMatch}" Margin="10,50,10,10">

                                        <ListView  ItemsSource="{Binding KillerPerkList}" SelectedItem="{Binding SelectedKillerPerk}" d:ItemsSource="{d:SampleData ItemCount=100}"
                                                   SelectedIndex="0"
                                                   Background="Transparent" BorderThickness="0" Margin="10,5,10,5"
                                                   HorizontalContentAlignment="Center"
                                                   VerticalContentAlignment="Center"
                                                   ScrollViewer.CanContentScroll="True"
                                                   ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                   VirtualizingPanel.IsVirtualizing="True"
                                                   VirtualizingStackPanel.VirtualizationMode="Recycling"
                                                   VirtualizingPanel.CacheLength="15,15"
                                                   VirtualizingPanel.CacheLengthUnit="Item"
                                                   VirtualizingPanel.ScrollUnit="Pixel">
                                            <ListView.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel/>
                                                </ItemsPanelTemplate>
                                            </ListView.ItemsPanel>
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <Border BorderBrush="White" Width="95" Height="95" BorderThickness="1" CornerRadius="10">
                                                        <Border.ToolTip>
                                                            <ToolTip Content="{Binding PerkName}" FontSize="20" Placement="Right" ToolTipService.InitialShowDelay="1" ToolTipService.ShowDuration="10"/>
                                                        </Border.ToolTip>
                                                        <StackPanel Orientation="Horizontal" Margin="10">
                                                            <Grid>
                                                                <Image Source="{Binding PerkImage}"/>
                                                            </Grid>
                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>

                                            <ListView.ContextMenu>
                                                <ContextMenu>
                                                    <MenuItem Header="Выбрать как I перк" Command="{Binding SelectedKillerFirstPerkCommand}"/>
                                                    <MenuItem Header="Выбрать как II перк" Command="{Binding SelectedKillerSecondPerkCommand}"/>
                                                    <MenuItem Header="Выбрать как III перк" Command="{Binding SelectedKillerThirdPerkCommand}"/>
                                                    <MenuItem Header="Выбрать как IV перк" Command="{Binding SelectedKillerFourthPerkCommand}"/>
                                                </ContextMenu>
                                            </ListView.ContextMenu>

                                        </ListView>

                                    </Border>

                                    <!--#endregion-->

                                    <!--#region Список улучшений -->

                                    <!--<Border Grid.Row="2" Grid.Column="1" VerticalAlignment="Top" Margin="0,10,0,10" Style="{StaticResource BorderHeading}">
                                        <TextBlock Text="Список аддонов" Style="{StaticResource HeaderStyle}"/>
                                    </Border>-->

                                    <StackPanel Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" Orientation="Horizontal" Margin="0,10,0,10">
                                        <fa:ImageAwesome Icon="Solid_Search" Foreground="White" Width="20"/>
                                        <TextBlock Text="Аддона" Width="Auto" Style="{StaticResource TextBlockAddMatchInputData}">
                                        </TextBlock>
                                        <TextBox Style="{StaticResource TextBoxAddmatchInputData}" 
                                                 Template="{StaticResource SettingTextBoxTemplate}"
                                                 Text="{Binding SearchKillerAddon, UpdateSourceTrigger=PropertyChanged}"
                                                 Width="200" FontSize="16" Margin="10,0,0,0"/>
                                    </StackPanel>


                                    <Border Grid.Row="2" Grid.Column="1" Style="{StaticResource BorderCardAddMatch}" Margin="10,50,10,10">

                                        <ListView  ItemsSource="{Binding KillerAddonList}" SelectedItem="{Binding SelectedKillerAddon}" d:ItemsSource="{d:SampleData ItemCount=100}"
                                                   SelectedIndex="0"
                                                   Background="Transparent" BorderThickness="0" Margin="10,5,10,5"
                                                   HorizontalContentAlignment="Center"
                                                   VerticalContentAlignment="Center"
                                                   ScrollViewer.CanContentScroll="True"
                                                   ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                   VirtualizingPanel.IsVirtualizing="True"
                                                   VirtualizingStackPanel.VirtualizationMode="Recycling"
                                                   VirtualizingPanel.CacheLength="15,15"
                                                   VirtualizingPanel.CacheLengthUnit="Item"
                                                   VirtualizingPanel.ScrollUnit="Pixel">
                                            <ListView.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel/>
                                                </ItemsPanelTemplate>
                                            </ListView.ItemsPanel>
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <Border BorderBrush="White" Width="95" Height="95" BorderThickness="1" CornerRadius="10">
                                                        <Border.ToolTip>
                                                            <ToolTip Content="{Binding AddonName}" FontSize="20" Placement="Right" ToolTipService.InitialShowDelay="1" ToolTipService.ShowDuration="10"/>
                                                        </Border.ToolTip>
                                                        <StackPanel Orientation="Horizontal" Margin="10">
                                                            <Grid>
                                                                <Image Source="{Binding AddonImage}"/>
                                                            </Grid>
                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>

                                            <ListView.ContextMenu>
                                                <ContextMenu>
                                                    <MenuItem Header="Выбрать как I аддон" Command="{Binding SelectedKillerFirstAddonCommand}"/>
                                                    <MenuItem Header="Выбрать как II аддон" Command="{Binding SelectedKillerSecondAddonCommand}"/>
                                                </ContextMenu>
                                            </ListView.ContextMenu>

                                        </ListView>

                                    </Border>

                                    <!--#endregion-->

                                    <!--#region Список подношений -->

                                    <StackPanel Grid.Row="2" Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Top" Margin="0,10,0,10">
                                        <fa:ImageAwesome Icon="Solid_Search" Foreground="White" Width="20"/>
                                        <TextBlock Text="Подношения" Width="Auto" TextAlignment="Center" Style="{StaticResource TextBlockAddMatchInputData}"/>
                                        <TextBox Style="{StaticResource TextBoxAddmatchInputData}" 
                                                 Template="{StaticResource SettingTextBoxTemplate}"
                                                 Text="{Binding SearchKillerOffering, UpdateSourceTrigger=PropertyChanged}"
                                                 Width="200" FontSize="16" Margin="10,0,0,0"/>
                                    </StackPanel>

                                    <Border Grid.Row="2" Grid.Column="2" Style="{StaticResource BorderCardAddMatch}" Margin="10,50,10,10">

                                        <ListView  ItemsSource="{Binding KillerOfferingList}" SelectedItem="{Binding SelectedKillerOffering}"  d:ItemsSource="{d:SampleData ItemCount=100}"
                                                   SelectedIndex="0"
                                                   Background="Transparent" BorderThickness="0" Margin="10,5,10,5"
                                                   HorizontalContentAlignment="Center"
                                                   VerticalContentAlignment="Center"
                                                   ScrollViewer.CanContentScroll="True"
                                                   ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                   VirtualizingPanel.IsVirtualizing="True"
                                                   VirtualizingStackPanel.VirtualizationMode="Recycling"
                                                   VirtualizingPanel.CacheLength="15,15"
                                                   VirtualizingPanel.CacheLengthUnit="Item"
                                                   VirtualizingPanel.ScrollUnit="Pixel">
                                            <ListView.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel/>
                                                </ItemsPanelTemplate>
                                            </ListView.ItemsPanel>
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <Border BorderBrush="White" Width="95" Height="95" BorderThickness="1" CornerRadius="10">
                                                        <Border.ToolTip>
