                                                              SelectedIndex="0"
                                                              DisplayMemberPath="SurvivorName"/>

                                                    <ComboBox Style="{DynamicResource ComboBoxAddMatchInputData}" 
                                                              ItemsSource="{Binding PlatformList}"                                                            
                                                              SelectedItem="{Binding SelectedFourthSurvivorPlatform}"
                                                              SelectedIndex="0"
                                                              DisplayMemberPath="PlatformName"/>

                                                    <ComboBox Style="{DynamicResource ComboBoxAddMatchInputData}"  
                                                              ItemsSource="{Binding TypeDeathList}"
                                                              SelectedItem="{Binding SelectedFourthSurvivorTypeDeath}"
                                                              SelectedIndex="0"
                                                              DisplayMemberPath="TypeDeathName"/>

                                                    <TextBox Style="{StaticResource TextBoxAddmatchInputData}" 
                                                             Text="{Binding FourthSurvivorPrestige}"
                                                             Template="{StaticResource SettingTextBoxTemplate}"/>

                                                    <TextBox Style="{StaticResource TextBoxAddmatchInputData}" 
                                                             Text="{Binding FourthSurvivorAccount}"
                                                             Template="{StaticResource SettingTextBoxTemplate}"/>

                                                    <CheckBox Content="Анонимный?"
                                                              Width="150" FontSize="20" 
                                                              Margin="0,5,0,5" 
                                                              IsChecked="{Binding FourthSurvivorAnonymousMode}"                                                            
                                                              Foreground="White" 
                                                              VerticalContentAlignment="Center"/>

                                                    <CheckBox Content="Игрок вышел?" 
                                                              Width="150" FontSize="20" 
                                                              Margin="0,5,0,5" 
                                                              IsChecked="{Binding FourthSurvivorBot}"
                                                              Foreground="White" 
                                                              VerticalContentAlignment="Center"/>

                                                    <ComboBox Style="{DynamicResource ComboBoxAddMatchInputData}" 
                                                              ItemsSource="{Binding SurvivorAssociationList}"
                                                              SelectedItem="{Binding SelectedFourthSurvivorPlayerAssociation}"
                                                              SelectedIndex="2"
                                                              DisplayMemberPath="PlayerAssociationName"/>
                                                </StackPanel>

                                            </Grid>

                                        </StackPanel>
                                    </Border>

                                    <!--#endregion-->

                                    <!--#region Билд перки -->

                                    <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource BorderCardAddMatch}">
                                        <StackPanel>
                                            <Border Style="{StaticResource BorderHeading}">
                                                <TextBlock Text="Перки" Style="{StaticResource HeaderStyle}"/>
                                            </Border>

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="Перк I:" Style="{StaticResource TextBlockAddMatchInputData}" />
                                                    <TextBlock Text="Перк II:" Style="{StaticResource TextBlockAddMatchInputData}"/>
                                                    <TextBlock Text="Перк III:" Style="{StaticResource TextBlockAddMatchInputData}"/>
                                                    <TextBlock Text="Перк IV:" Style="{StaticResource TextBlockAddMatchInputData}"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="1">
                                                    <TextBox Style="{StaticResource TextBoxAddmatchInputData}" 
                                                             Text="{Binding SelectedFourthSurvivorFirstPerkName}"
                                                             Template="{StaticResource SettingTextBoxTemplate}"/>

                                                    <TextBox Style="{StaticResource TextBoxAddmatchInputData}" 
                                                             Text="{Binding SelectedFourthSurvivorSecondPerkName}"
                                                             Template="{StaticResource SettingTextBoxTemplate}"/>

                                                    <TextBox Style="{StaticResource TextBoxAddmatchInputData}" 
                                                             Text="{Binding SelectedFourthSurvivorThirdPerkName}"
                                                             Template="{StaticResource SettingTextBoxTemplate}"/>

                                                    <TextBox Style="{StaticResource TextBoxAddmatchInputData}" 
                                                             Text="{Binding SelectedFourthSurvivorFourthPerkName}"
                                                             Template="{StaticResource SettingTextBoxTemplate}"/>
                                                </StackPanel>

                                            </Grid>

                                        </StackPanel>
                                    </Border>


                                    <!--#endregion-->

                                    <!--#region Билд Предмет \ подношение -->

                                    <Border Grid.Row="1" Grid.Column="2" Style="{StaticResource BorderCardAddMatch}">
                                        <StackPanel>
                                            <Border Style="{StaticResource BorderHeading}">
                                                <TextBlock Text="Предмет \ подношение" Style="{StaticResource HeaderStyle}"/>
                                            </Border>

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="Предмет:" Style="{StaticResource TextBlockAddMatchInputData}" />
                                                    <TextBlock Text="Улучшение I:" Style="{StaticResource TextBlockAddMatchInputData}"/>
                                                    <TextBlock Text="Улучшение II:" Style="{StaticResource TextBlockAddMatchInputData}"/>
                                                    <TextBlock Text="" Style="{StaticResource TextBlockAddMatchInputData}"/>
                                                    <TextBlock Text="Подношение" Style="{StaticResource TextBlockAddMatchInputData}"/>
                                                    <TextBlock Text="Роль" Style="{StaticResource TextBlockAddMatchInputData}"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="1">
                                                    <ComboBox Style="{DynamicResource ComboBoxAddMatchInputData}" 
                                                              ItemsSource="{Binding ItemList}"                                                            
                                                              SelectedItem="{Binding SelectedFourthSurvivorItem}"
                                                              DisplayMemberPath="ItemName"/>

                                                    <TextBox Style="{StaticResource TextBoxAddmatchInputData}" 
                                                             Text="{Binding SelectedFourthSurvivorFirstItemAddonName}"
                                                             Template="{StaticResource SettingTextBoxTemplate}"/>

                                                    <TextBox Style="{StaticResource TextBoxAddmatchInputData}" 
                                                             Text="{Binding SelectedFourthSurvivorSecondItemAddonName}"
                                                             Template="{StaticResource SettingTextBoxTemplate}"/>

                                                    <TextBlock Text="" Style="{StaticResource TextBlockAddMatchInputData}"/>

                                                    <TextBox Style="{StaticResource TextBoxAddmatchInputData}" 
                                                             Text="{Binding SelectedFourthSurvivorOfferingName}"
                                                             Template="{StaticResource SettingTextBoxTemplate}"/>

                                                    <ComboBox Style="{DynamicResource ComboBoxAddMatchInputData}"  
                                                              ItemsSource="{Binding SurvivorRoleList}"
                                                              SelectedItem="{Binding SelectedRoleFourthSurvivor}"
                                                              SelectedIndex="0"
                                                              DisplayMemberPath="RoleName"/>
                                                </StackPanel>
                                            </Grid>
                                        </StackPanel>
                                    </Border>

                                    <!--#endregion-->

                                    <!--#region Список перков -->

                                    <StackPanel Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top" Orientation="Horizontal" Margin="0,10,0,10">
                                        <fa:ImageAwesome Icon="Solid_Search" Foreground="White" Width="20"/>
                                        <TextBlock Text="Перка" Width="Auto" TextAlignment="Center" Style="{StaticResource TextBlockAddMatchInputData}"/>
                                        <TextBox Style="{StaticResource TextBoxAddmatchInputData}" 
                                                 Template="{StaticResource SettingTextBoxTemplate}"
                                                 Text="{Binding SearchSurvivorPerk, UpdateSourceTrigger=PropertyChanged}"
                                                 Width="200" FontSize="16" Margin="10,0,0,0"/>
                                    </StackPanel>

                                    <Border Grid.Row="2" Grid.Column="0" Style="{StaticResource BorderCardAddMatch}" Margin="10,50,10,10">

                                        <ListView  ItemsSource="{Binding SurvivorPerkList}" SelectedItem="{Binding SelectedSurvivorPerk}" d:ItemsSource="{d:SampleData ItemCount=100}"
                                                   SelectedIndex="0"
                                                   Background="Transparent" BorderThickness="0" Margin="10,5,10,5"
                                                   HorizontalContentAlignment="Center"
                                                   VerticalContentAlignment="Center"
                                                   ScrollViewer.CanContentScroll="True"
                                                   ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                   VirtualizingPanel.IsVirtualizing="True"
                                                   VirtualizingStackPanel.VirtualizationMode="Recycling"
                                                   VirtualizingPanel.CacheLength="15,15"
                                                   VirtualizingPanel.CacheLengthUnit="Item"
                                                   VirtualizingPanel.ScrollUnit="Pixel">
                                            <ListView.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel/>
                                                </ItemsPanelTemplate>
                                            </ListView.ItemsPanel>
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <Border BorderBrush="White" Width="95" Height="95" BorderThickness="1" CornerRadius="10">
                                                        <Border.ToolTip>
                                                            <ToolTip Content="{Binding PerkName}" FontSize="20" Placement="Right" ToolTipService.InitialShowDelay="1" ToolTipService.ShowDuration="10"/>
                                                        </Border.ToolTip>
                                                        <StackPanel Orientation="Horizontal" Margin="10">
                                                            <Grid>
                                                                <Image Source="{Binding PerkImage}"/>
                                                            </Grid>
                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>

                                            <ListView.ContextMenu>
                                                <ContextMenu>
                                                    <MenuItem Header="Выбрать как I перк" Command="{Binding SelectedFourthSurvivorFirstPerkCommand}"/>
                                                    <MenuItem Header="Выбрать как II перк" Command="{Binding SelectedFourthSurvivorSecondPerkCommand}"/>
                                                    <MenuItem Header="Выбрать как III перк" Command="{Binding SelectedFourthSurvivorThirdPerkCommand}"/>
                                                    <MenuItem Header="Выбрать как IV перк" Command="{Binding SelectedFourthSurvivorFourthPerkCommand}"/>
                                                </ContextMenu>
                                            </ListView.ContextMenu>

                                        </ListView>

                                    </Border>

                                    <!--#endregion-->

                                    <!--#region Список улучшений к предметам -->

                                    <StackPanel Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" Orientation="Horizontal" Margin="0,10,0,10">
                                        <fa:ImageAwesome Icon="Solid_Search" Foreground="White" Width="20"/>
                                        <TextBlock Text="Улучшения" Width="Auto" TextAlignment="Center" Style="{StaticResource TextBlockAddMatchInputData}"/>
                                        <TextBox Style="{StaticResource TextBoxAddmatchInputData}"   
                                                 Template="{StaticResource SettingTextBoxTemplate}"
                                                 Text="{Binding SearchFourthSurvivorItemAddon, UpdateSourceTrigger=PropertyChanged}"
                                                 Width="200" FontSize="16" Margin="10,0,0,0"/>
                                    </StackPanel>

                                    <Border Grid.Row="2" Grid.Column="1" Style="{StaticResource BorderCardAddMatch}" Margin="10,50,10,10">

                                        <ListView  ItemsSource="{Binding FourthSurvivorItemAddonList}" SelectedItem="{Binding SelectedItemAddon}" d:ItemsSource="{d:SampleData ItemCount=100}"
                                                   SelectedIndex="0"
                                                   Background="Transparent" BorderThickness="0" Margin="10,5,10,5"
                                                   HorizontalContentAlignment="Center"
                                                   VerticalContentAlignment="Center"
                                                   ScrollViewer.CanContentScroll="True"
                                                   ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                   VirtualizingPanel.IsVirtualizing="True"
                                                   VirtualizingStackPanel.VirtualizationMode="Recycling"
                                                   VirtualizingPanel.CacheLength="15,15"
                                                   VirtualizingPanel.CacheLengthUnit="Item"
                                                   VirtualizingPanel.ScrollUnit="Pixel">
                                            <ListView.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel/>
                                                </ItemsPanelTemplate>
                                            </ListView.ItemsPanel>
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <Border BorderBrush="White" Width="95" Height="95" BorderThickness="1" CornerRadius="10">
                                                        <Border.ToolTip>
                                                            <ToolTip Content="{Binding ItemAddonName}" FontSize="20" Placement="Right" ToolTipService.InitialShowDelay="1" ToolTipService.ShowDuration="10"/>
                                                        </Border.ToolTip>
                                                        <StackPanel Orientation="Horizontal" Margin="10">
                                                            <Grid>
                                                                <Image Source="{Binding ItemAddonImage}"/>
                                                            </Grid>
                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>

                                            <ListView.ContextMenu>
                                                <ContextMenu>
                                                    <MenuItem Header="Выбрать как I улучшени" Command="{Binding SelectedFourthSurvivorFirstItemAddonCommand}"/>
                                                    <MenuItem Header="Выбрать как II улучшени" Command="{Binding SelectedFourthSurvivorSecondItemAddonCommand}"/>
                                                </ContextMenu>
                                            </ListView.ContextMenu>

                                        </ListView>

                                    </Border>

                                    <!--#endregion-->

                                    <!--#region Список подношений -->

                                    <StackPanel Grid.Row="2" Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Top" Margin="0,10,0,10">
                                        <fa:ImageAwesome Icon="Solid_Search" Foreground="White" Width="20"/>
                                        <TextBlock Text="Подношения" Width="Auto" TextAlignment="Center" Style="{StaticResource TextBlockAddMatchInputData}"/>
                                        <TextBox Style="{StaticResource TextBoxAddmatchInputData}" 
                                                 Template="{StaticResource SettingTextBoxTemplate}"
                                                 Text="{Binding SearchFourthSurvivorOffering, UpdateSourceTrigger=PropertyChanged}"
                                                 Width="200" FontSize="16" Margin="10,0,0,0"/>
                                    </StackPanel>

                                    <Border Grid.Row="2" Grid.Column="2" Style="{StaticResource BorderCardAddMatch}" Margin="10,50,10,10">

                                        <ListView  ItemsSource="{Binding FourthSurvivorOfferingList}" SelectedItem="{Binding SelectedFourthSurvivorOffering}"  d:ItemsSource="{d:SampleData ItemCount=100}"
                                                   SelectedIndex="0"
                                                   Background="Transparent" BorderThickness="0" Margin="10,5,10,5"
                                                   HorizontalContentAlignment="Center"
                                                   VerticalContentAlignment="Center"
                                                   ScrollViewer.CanContentScroll="True"
                                                   ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                   VirtualizingPanel.IsVirtualizing="True"
                                                   VirtualizingPanel.CacheLength="15,15"
                                                   VirtualizingPanel.CacheLengthUnit="Item"
                                                   VirtualizingPanel.ScrollUnit="Pixel">
                                            <ListView.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel/>
                                                </ItemsPanelTemplate>
                                            </ListView.ItemsPanel>
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <Border BorderBrush="White" Width="95" Height="95" BorderThickness="1" CornerRadius="10">
                                                        <Border.ToolTip>
                                                            <ToolTip Content="{Binding OfferingName}" FontSize="20" Placement="Right" ToolTipService.InitialShowDelay="1" ToolTipService.ShowDuration="10"/>
                                                        </Border.ToolTip>
                                                        <StackPanel Orientation="Horizontal" Margin="10">
                                                            <Grid>
                                                                <Image Source="{Binding OfferingImage}"/>
                                                            </Grid>
                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>

                                    </Border>

                                    <!--#endregion-->

                                </Grid>
                            </TabItem>

                            <!--#endregion-->

                            <!--#region Итоги матча -->

                            <TabItem Style="{StaticResource TabItemStyleAdditional}">
                                <TabItem.Header>
                                    <TextBlock Text="Конец игры" FontSize="20" Style="{StaticResource TextBlockTabItemHeader}"/>
                                </TabItem.Header>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="220"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="400"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!--#region Изображение -->

                                    <Border Grid.Column="1" Style="{StaticResource BorderCardAddMatch}" Margin="10,10,10,10">
                                        <StackPanel>
                                            <Border Style="{StaticResource BorderHeading}" Margin="5,10,5,5">
                                                <TextBlock Text="Начало игры (Карта)" Style="{StaticResource HeaderStyle}"/>
                                            </Border>
                                            <Border Height="250" BorderBrush="Gray" BorderThickness="2" CornerRadius="10" Margin="10,5,10,10">
                                                <Image Source="{Binding StartMatchImage}" Margin="10"/>
                                            </Border>
                                        </StackPanel>
                                    </Border>

                                    <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Style="{StaticResource BorderCardAddMatch}" Margin="10,10,10,10">
                                        <StackPanel>
                                            <Border Style="{StaticResource BorderHeading}" Margin="5,10,5,5">
                                                <TextBlock Text="Конец игры (Повесы)" Style="{StaticResource HeaderStyle}"/>
                                            </Border>
                                            <Border Height="550" BorderBrush="Gray" BorderThickness="2" CornerRadius="10" Margin="10,5,10,10">
                                                <Image Source="{Binding EndMatchImage}" Margin="10"/>
                                            </Border>
                                        </StackPanel>
                                    </Border>

                                    <Border Grid.Row="2" Grid.Column="0" Style="{StaticResource BorderCardAddMatch}" Margin="10,10,10,10">
                                        <StackPanel>
                                            <Border Style="{StaticResource BorderHeading}" Margin="5,10,5,5">
                                                <TextBlock Text="Таблица результатов" Style="{StaticResource HeaderStyle}"/>
                                            </Border>
                                            <Border Height="500" BorderBrush="Gray" BorderThickness="2" CornerRadius="10" Margin="10,5,10,10">
                                                <Image Source="{Binding ResultMatchImage}" Margin="10"/>
                                            </Border>
                                        </StackPanel>
                                    </Border>

                                    <!--#endregion-->
                                    
                                    <!--#region Основная \ Доп информация -->

                                    <Border Grid.Row="1" Grid.RowSpan="2" Grid.Column="1" VerticalAlignment="Stretch" Style="{StaticResource BorderCardAddMatch}" Margin="10,10,10,10">
                                        <StackPanel>

                                            <Border Style="{StaticResource BorderHeading}">
                                                <TextBlock Text="Основная информация" Style="{StaticResource HeaderStyle}"/>
                                            </Border>

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                                    <TextBlock Text="Дата игры:" Style="{StaticResource TextBlockAddMatchInputData}" />
                                                    <TextBlock Text="Длительность:" Style="{StaticResource TextBlockAddMatchInputData}"/>
                                                    <TextBlock Text="Кол-во килов:" Style="{StaticResource TextBlockAddMatchInputData}"/>
                                                    <TextBlock Text="Кол-во повесов:" Style="{StaticResource TextBlockAddMatchInputData}"/>
                                                    <TextBlock Text="Карта:" Style="{StaticResource TextBlockAddMatchInputData}"/>
                                                    <TextBlock Text="Генераторов:" Style="{StaticResource TextBlockAddMatchInputData}"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="1" HorizontalAlignment="Center">

                                                    <DatePicker Width="150" Height="25" 
                                                                SelectedDate="{Binding SelectedDateTimeGameMatch}"
                                                                Margin="0,5,0,5"
                                                                HorizontalAlignment="Left"/>

                                                    <TextBlock Width="150" Height="25" 
                                                               Margin="0,5,0,5"
                                                               Foreground="White"
                                                               Text="{Binding DurationMatch}"
                                                               HorizontalAlignment="Left"/>

                                                    <TextBox Style="{StaticResource TextBoxAddmatchInputData}" 
                                                             Template="{StaticResource SettingTextBoxTemplate}"
                                                             Text="{Binding CountKills}"
                                                             FontSize="17" 
                                                             HorizontalAlignment="Left" 
                                                             TextAlignment="Center"/>

                                                    <TextBox Style="{StaticResource TextBoxAddmatchInputData}" 
                                                             Template="{StaticResource SettingTextBoxTemplate}"
                                                             Text="{Binding CountHooks}"/>

                                                    <ComboBox Style="{DynamicResource ComboBoxAddMatchInputData}"
                                                              ItemsSource="{Binding MapList}"
                                                              SelectedItem="{Binding SelectedMap}"
                                                              DisplayMemberPath="MapName"/>

                                                    <TextBox Style="{StaticResource TextBoxAddmatchInputData}" 
                                                             Template="{StaticResource SettingTextBoxTemplate}"
                                                             Text="{Binding CountNumberRecentGenerators}"/>
                                                </StackPanel>
                                            </Grid>

                                            <Border Style="{StaticResource BorderHeading}" Margin="5,10,5,10" >
                                                <TextBlock Text="Дполнительная информация" Style="{StaticResource HeaderStyle}"/>
                                            </Border>

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                                    <TextBlock Text="Патч:" Style="{StaticResource TextBlockAddMatchInputData}" />
                                                    <TextBlock Text="Режим игры:" Style="{StaticResource TextBlockAddMatchInputData}"/>
                                                    <TextBlock Text="Игровой ивент:" Style="{StaticResource TextBlockAddMatchInputData}"/>
                                                    <TextBlock Text="Кто поставил карту?:" Style="{StaticResource TextBlockAddMatchInputData}"/>
                                                    <TextBlock Text="Чья карта выпала?" Style="{StaticResource TextBlockAddMatchInputData}"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="1" HorizontalAlignment="Center">

                                                    <ComboBox Style="{DynamicResource ComboBoxAddMatchInputData}"
                                                              ItemsSource="{Binding PatchList}"
                                                              SelectedItem="{Binding SelectedPatch}"
                                                              DisplayMemberPath="PatchNumber"
                                                              SelectedIndex="0"/>

                                                    <ComboBox Style="{DynamicResource ComboBoxAddMatchInputData}" 
                                                              ItemsSource="{Binding GameModeList}"
                                                              SelectedItem="{Binding SelectedGameMode}"
                                                              DisplayMemberPath="GameModeName"
                                                              SelectedIndex="0"/>

                                                    <ComboBox Style="{DynamicResource ComboBoxAddMatchInputData}" 
                                                              ItemsSource="{Binding GameEventList}"
                                                              SelectedItem="{Binding SelectedGameEvent}"
                                                              DisplayMemberPath="GameEventName"
                                                              SelectedIndex="0"/>

                                                    <ComboBox Style="{DynamicResource ComboBoxAddMatchInputData}" 
                                                              ItemsSource="{Binding WhoPlacedMapList}"
                                                              SelectedItem="{Binding SelectedWhoPlacedMap}" 
                                                              DisplayMemberPath="WhoPlacedMapName"
                                                              SelectedIndex="0"/>

                                                    <ComboBox Style="{DynamicResource ComboBoxAddMatchInputData}" 
                                                              ItemsSource="{Binding WhoPlacedMapList}"
                                                              SelectedItem="{Binding SelectedWhoPlacedMapWin}"
                                                              DisplayMemberPath="WhoPlacedMapName"
                                                              SelectedIndex="0"/>
                                                </StackPanel>
                                            </Grid>

                                            <Border Style="{StaticResource BorderHeading}" Margin="5,10,5,10" >
                                                <TextBlock Text="Описание" Style="{StaticResource HeaderStyle}"/>
                                            </Border>

                                            <TextBox  Style="{StaticResource TextBoxAddmatchInputData}" 
                                                      Template="{StaticResource SettingTextBoxTemplate}"
                                                      Text="{Binding DescriptionGame}"
                                                      TextAlignment="Left"
                                                      Width="500" Height="200"/>

                                        </StackPanel>
                                    </Border>

                                    <!--#endregion-->

                                </Grid>
                            </TabItem>

                            <!--#endregion-->

                        </TabControl>

                    </StackPanel>
                </ScrollViewer>

                <!--#endregion-->

                <!--#region Footer -->
                
                <Border Grid.Column="1" Grid.Row="2" Background="Gray" CornerRadius="10" Margin="3">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Button Content="Сохранить" 
                                Width="150" Height="30" FontSize="20"
                                Template="{StaticResource ControlButton}"
                                Command="{Binding AddMatchCommand}"/>
                    </StackPanel>
                </Border>
                
                <!--#endregion-->
                
            </Grid>

            <!--#endregion-->

        </Grid>
    </Border>

</Window>
