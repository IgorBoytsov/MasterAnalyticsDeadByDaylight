                                    <!--#region ListView - Список подношений -->

                                    <StackPanel Grid.Column="3" Grid.Row="1">

                                        <StackPanel Visibility="Collapsed" HorizontalAlignment="Right">
                                            <Button Width="100" Height="25"
                                                        Content="{Binding ContentButtonListViewKillerAddonVisibility}"
                                                        Template="{StaticResource ControlButton}"
                                                        Command="{Binding ListViewSurvivorOfferingVisibilityCommand}"
                                                        FontSize="16"
                                                        Margin="0,10,0,0"/>
                                        </StackPanel>


                                        <StackPanel Visibility="{Binding ListViewSurvivorOfferingVisibility}">
                                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,10,0,10">
                                                <TextBlock Text="Поиск:" FontSize="25" Foreground="White"/>
                                                <TextBox Style="{StaticResource SettingTextBoxStyle}" 
                                                             Template="{StaticResource SettingTextBoxTemplate}"
                                                             Text="{Binding TextBoxSearchFourthSurvivorOffering, UpdateSourceTrigger=PropertyChanged}"
                                                             Width="300" FontSize="16" Margin="10,0,0,0"/>
                                            </StackPanel>

                                            <Border BorderBrush="#F0F1F3" BorderThickness="0,2,0,2" CornerRadius="10"                                        
                                                        Padding="5" Margin="35,10,35,10"
                                                        Width="280" Height="400">

                                                <ListView Grid.Row="0" Grid.Column="0" 
                                                              Background="#FF282C34" BorderThickness="0"
                                                              ItemsSource="{Binding FourthSurvivorOfferingList}" 
                                                              SelectedItem="{Binding SelectedListViewFourthSurvivorOffering}"
                                                              d:ItemsSource="{d:SampleData ItemCount=5}"
                                                              ScrollViewer.CanContentScroll="True"
                                                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                              VirtualizingPanel.IsVirtualizing="True"                  
                                                              VirtualizingStackPanel.VirtualizationMode="Recycling"
                                                              VirtualizingPanel.CacheLength="15,15"
                                                              VirtualizingPanel.CacheLengthUnit="Item"
                                                              VirtualizingPanel.ScrollUnit="Pixel">

                                                    <ListView.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border BorderBrush="White" Height="auto" CornerRadius="10" BorderThickness="1">
                                                                <StackPanel Orientation="Horizontal" Margin="10">
                                                                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                                        <StackPanel Orientation="Horizontal">
                                                                            <Image Source="{Binding OfferingImage}" Height="40"/>
                                                                            <TextBlock Text="{Binding OfferingName}" TextWrapping="WrapWithOverflow" FontSize="15" HorizontalAlignment="Center" Foreground="White"/>
                                                                        </StackPanel>
                                                                    </StackPanel>
                                                                </StackPanel>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ListView.ItemTemplate>

                                                </ListView>

                                            </Border>

                                        </StackPanel>

                                    </StackPanel>

                                    <!--#endregion--> 

                                </Grid>

                            </StackPanel>

                        </StackPanel>

                        <!--#endregion-->

                        <!--#endregion-->

                        <!--#region Начало игры -->
                        
                        <StackPanel>

                            <StackPanel>
                                <Border Height="30" Background="#50545C" CornerRadius="10" Margin="10">
                                    <TextBlock Text="Начало игры" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
                                </Border>
                            </StackPanel>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0">
                                    <GroupBox Header="Завершение игры" FontSize="15" HorizontalAlignment="Right" VerticalAlignment="Center"  MinWidth="630" MaxWidth="800" MinHeight="350" MaxHeight="700" Grid.RowSpan="2" Margin="0,0,15,0">
                                        <Image Source="{Binding EndMatchImage}" Margin="10"/>
                                    </GroupBox>

                                    <GroupBox Header="Начало игры" FontSize="15" HorizontalAlignment="Right" VerticalAlignment="Top" MinWidth="630" MaxWidth="800" MinHeight="350" MaxHeight="700" Margin="0,0,15,0">
                                        <Image Source="{Binding ResultMatchImage}" Margin="10"/>
                                    </GroupBox>

                                </StackPanel>

                                <StackPanel Grid.Column="1" Grid.Row="0" Grid.RowSpan="2">
                                    <GroupBox Header="Начало игры" FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Top" Width="500" Height="300" Margin="15,0,0,0">
                                        <Image Source="{Binding StartMatchImage}" Margin="10"/>
                                    </GroupBox>

                                    <!--#region Основная информация -->

                                    <StackPanel Margin="0,15,0,0" HorizontalAlignment="Left">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <DockPanel Grid.Row="0" Grid.ColumnSpan="2" >
                                                <StackPanel>
                                                    <TextBlock Text="Основная информация" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="30"/>
                                                </StackPanel>
                                            </DockPanel>

                                            <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,0,20,0">

                                                <DockPanel Margin="50,15,0,0" HorizontalAlignment="Left">
                                                    <TextBlock Text="Дата игры:" Height="25" Foreground="White" FontSize="15"/>
                                                </DockPanel>

                                                <DockPanel Margin="50,15,0,0" HorizontalAlignment="Left">
                                                    <TextBlock Text="Длительность:" Height="25" Foreground="White" FontSize="15"/>
                                                </DockPanel>

                                                <DockPanel Margin="50,15,0,0" HorizontalAlignment="Left">
                                                    <TextBlock Text="Кол-во килов:" Height="25" Foreground="White" FontSize="15"/>
                                                </DockPanel>

                                                <DockPanel Margin="50,15,0,0" HorizontalAlignment="Left">
                                                    <TextBlock Text="Кол-во повесов:" Height="25" Foreground="White" FontSize="15"/>
                                                </DockPanel>

                                                <DockPanel Margin="50,15,0,0" HorizontalAlignment="Left">
                                                    <TextBlock Text="Карта" Height="25" Foreground="White" FontSize="15"/>
                                                </DockPanel>

                                                <DockPanel Margin="50,15,0,10" HorizontalAlignment="Left">
                                                    <TextBlock Text="Кол-во оставшихся генераторов:" TextWrapping="WrapWithOverflow" Foreground="White" FontSize="15"/>
                                                </DockPanel>

                                            </StackPanel>

                                            <StackPanel Grid.Column="1" Grid.Row="1">

                                                <DockPanel Margin="0,15,0,0" HorizontalAlignment="Center">
                                                    <DatePicker Width="150" Height="25" 
                                                                    SelectedDate="{Binding SelectedDateTimeGameMatch}"
                                                                    HorizontalAlignment="Left"/>
                                                </DockPanel>

                                                <DockPanel Margin="0,15,0,0" HorizontalAlignment="Center">
                                                    <TextBlock Width="150" Height="25" 
                                                                  Text="{Binding DurationMatch}"
                                                                   HorizontalAlignment="Left"/>
                                                </DockPanel>

                                                <DockPanel Margin="0,15,0,0" HorizontalAlignment="Center">
                                                    <TextBox Width="150" Height="25"
                                                                 Text="{Binding CountKills}"
                                                                 FontSize="17" 
                                                                 HorizontalAlignment="Left" 
                                                                 TextAlignment="Center"/>
                                                </DockPanel>

                                                <DockPanel Margin="0,15,0,0" HorizontalAlignment="Center">
                                                    <TextBox Width="150" Height="25" 
                                                                 Text="{Binding CountHooks}"
                                                                 FontSize="17" 
                                                                 HorizontalAlignment="Left" 
                                                                 TextAlignment="Center"/>
                                                </DockPanel>

                                                <DockPanel Margin="0,15,0,0" HorizontalAlignment="Center">
                                                    <ComboBox Width="150" Height="25"
                                                                  ItemsSource="{Binding MapList}"
                                                                  SelectedItem="{Binding SelectedMap}"
                                                                  IsEditable="True"
                                                                  IsTextSearchEnabled="True"
                                                                  DisplayMemberPath="MapName" 
                                                                  Style="{DynamicResource ComboBoxStyleApp}"  
                                                                  FontSize="16" Foreground="Black"/>
                                                </DockPanel>

                                                <DockPanel Margin="0,15,0,0" HorizontalAlignment="Center">
                                                    <TextBox Width="150" Height="25"
                                                                 Text="{Binding CountNumberRecentGenerators}"
                                                                 FontSize="17" 
                                                                 HorizontalAlignment="Left" 
                                                                 TextAlignment="Center"/>
                                                </DockPanel>

                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>
                                    
                                    <!--#endregion-->

                                    <!--#region Дополнительная информация -->

                                    <StackPanel Margin="0,15,0,0" HorizontalAlignment="Left">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <DockPanel Grid.Row="0" Grid.ColumnSpan="2" >
                                                <StackPanel>
                                                    <TextBlock Text="Доп. инфа" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="30"/>
                                                </StackPanel>
                                            </DockPanel>

                                            <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,0,20,0" >

                                                <DockPanel Margin="50,15,0,0" HorizontalAlignment="Left">
                                                    <TextBlock Text="Патч" Height="25" Foreground="White" FontSize="20"/>
                                                </DockPanel>

                                                <DockPanel Margin="50,15,0,0" HorizontalAlignment="Left">
                                                    <TextBlock Text="Режим игры" Height="25" Foreground="White" FontSize="20"/>
                                                </DockPanel>

                                                <DockPanel Margin="50,15,0,0" HorizontalAlignment="Left">
                                                    <TextBlock Text="Игровой ивент" Height="25" Foreground="White" FontSize="20"/>
                                                </DockPanel>

                                                <DockPanel Margin="50,15,0,0" HorizontalAlignment="Left">
                                                    <TextBlock Text="Кто поставил карту?" Height="25" Foreground="White" FontSize="20"/>
                                                </DockPanel>

                                                <DockPanel Margin="50,15,0,10" HorizontalAlignment="Left">
                                                    <TextBlock Text="Чья карта выпала?" TextWrapping="WrapWithOverflow" Foreground="White" FontSize="20"/>
                                                </DockPanel>


                                            </StackPanel>

                                            <StackPanel Grid.Column="1" Grid.Row="1">

                                                <DockPanel Margin="0,15,0,0" HorizontalAlignment="Center">
                                                    <ComboBox Width="150" Height="25" 
                                                              ItemsSource="{Binding PatchList}"
                                                              SelectedItem="{Binding SelectedPatch}"
                                                              SelectedIndex="0"
                                                              DisplayMemberPath="PatchNumber"
                                                              HorizontalAlignment="Left"/>
                                                </DockPanel>

                                                <DockPanel Margin="0,15,0,0" HorizontalAlignment="Center">
                                                    <ComboBox Width="150" Height="25" 
                                                              ItemsSource="{Binding GameModeList}"
                                                              SelectedItem="{Binding SelectedGameMode}"
                                                              SelectedIndex="0"
                                                              DisplayMemberPath="GameModeName"
                                                              HorizontalAlignment="Left"/>
                                                </DockPanel>

                                                <DockPanel Margin="0,15,0,0" HorizontalAlignment="Center">
                                                    <ComboBox Width="150" Height="25" 
                                                              ItemsSource="{Binding GameEventList}"
                                                              SelectedItem="{Binding SelectedGameEvent}"
                                                              SelectedIndex="0"
                                                              DisplayMemberPath="GameEventName"
                                                              HorizontalAlignment="Left"/>
                                                </DockPanel>

                                                <DockPanel Margin="0,15,0,0" HorizontalAlignment="Center">
                                                    <ComboBox Width="150" Height="25" 
                                                              ItemsSource="{Binding WhoPlacedMapList}"
