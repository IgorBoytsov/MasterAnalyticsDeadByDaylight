                                                                  VirtualizingStackPanel.VirtualizationMode="Recycling"
                                                                  VirtualizingPanel.CacheLength="15,15"
                                                                  VirtualizingPanel.CacheLengthUnit="Item"
                                                                  VirtualizingPanel.ScrollUnit="Pixel">

                                                        <ListView.ItemTemplate>
                                                            <DataTemplate>
                                                                <Border BorderBrush="White" Height="auto" CornerRadius="10" BorderThickness="1">
                                                                    <StackPanel Orientation="Horizontal" Margin="10">
                                                                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                                            <StackPanel Orientation="Horizontal">
                                                                                <Image Source="{Binding ItemAddonImage}" Height="40"/>
                                                                                <TextBlock Text="{Binding ItemAddonName}" FontSize="15" HorizontalAlignment="Center" Foreground="White"/>
