<Window x:Class="MasterAnalyticsDeadByDaylight.MVVM.View.Windows.AppWindow.AddMatchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MasterAnalyticsDeadByDaylight.MVVM.View.Windows.AppWindow"
        xmlns:fa="http://schemas.fontawesome.com/icons/" 
        xmlns:windowsviewmodels="clr-namespace:MasterAnalyticsDeadByDaylight.MVVM.ViewModel.WindowsViewModels" 
        d:DataContext="{d:DesignInstance Type=windowsviewmodels:AddMatchWindowViewModel}"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource WindowStyle}"
        Background="#FF282C34"
        Foreground="White"
        MinHeight="450" MinWidth="800"
        Height="850" Width="1500" d:Height="auto" d:Width="auto"
        Title="Добавить матч">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40" />
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <ResourceDictionary>

            <!--Базовый стиль для кнопок заголовка окна-->

            <Style x:Key="CaptionButtonStyle" TargetType="Button">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Grid x:Name="LayoutRoot" Background="Transparent" Width="44" Height="40">
                                <TextBlock x:Name="txt" Text="{TemplateBinding Content}" FontFamily="Segoe MDL2 Assets" FontSize="10" 
                            Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"
                            RenderOptions.ClearTypeHint="Auto" TextOptions.TextRenderingMode="Aliased"  TextOptions.TextFormattingMode="Display"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="LayoutRoot" Property="Background" Value="#E5E5E5"/>
                                    <Setter TargetName="txt" Property="Foreground" Value="#000000"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="MinimizeButtonStyle" TargetType="Button" BasedOn="{StaticResource CaptionButtonStyle}">
                <Setter Property="Content" Value="&#xE949;"/>
            </Style>

            <Style x:Key="MaximizeButtonStyle" TargetType="Button" BasedOn="{StaticResource CaptionButtonStyle}">
                <Setter Property="Content" Value="&#xE739;"/>
            </Style>

            <Style x:Key="RestoreButtonStyle" TargetType="Button" BasedOn="{StaticResource CaptionButtonStyle}">
                <Setter Property="Content" Value="&#xE923;"/>
            </Style>

            <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource CaptionButtonStyle}">
                <Setter Property="Content" Value="&#xE106;"/>
            </Style>

            <Style TargetType="ListViewItem">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ListViewItem">
                            <Border Name="border" Background="#FF282C34" Padding="2" SnapsToDevicePixels="true">
                                <ContentPresenter/>
                            </Border>
                            <ControlTemplate.Triggers>

                                <Trigger Property="IsSelected" Value="true">
                                    <Setter TargetName="border" Property="Background" Value="Gray"/>
                                    <Setter TargetName="border" Property="BorderBrush" Value="White"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                </Trigger>

                                <Trigger Property="IsMouseOver" Value="true">
                                    <Setter TargetName="border" Property="Background" Value="Gray"/>
                                    <Setter TargetName="border" Property="BorderBrush" Value="White"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

        </ResourceDictionary>
    </Window.Resources>

    <!--#region Разметка для Window chrome -->

    <!--#region Команды для кнопок управления окном -->

    <Window.CommandBindings>
        <CommandBinding Command="{x:Static SystemCommands.CloseWindowCommand}" CanExecute="CommandBinding_CanExecute" Executed="CommandBinding_Executed_Close" />
        <CommandBinding Command="{x:Static SystemCommands.MaximizeWindowCommand}" CanExecute="CommandBinding_CanExecute" Executed="CommandBinding_Executed_Maximize" />
        <CommandBinding Command="{x:Static SystemCommands.MinimizeWindowCommand}" CanExecute="CommandBinding_CanExecute" Executed="CommandBinding_Executed_Minimize" />
        <CommandBinding Command="{x:Static SystemCommands.RestoreWindowCommand}" CanExecute="CommandBinding_CanExecute" Executed="CommandBinding_Executed_Restore" />
    </Window.CommandBindings>

    <!--#endregion-->

    <Border x:Name="MainWindowBorder" BorderBrush="LightCoral" BorderThickness="0" >
        <Grid x:Name="parentContainer" Background="#FF282C34">

            <Grid.RowDefinitions>
                <RowDefinition Height ="Auto"/>
                <RowDefinition Height ="*"/>
            </Grid.RowDefinitions>

            <!--#region Window chrome область -->

            <Grid Grid.Row="0" Height="40" Background="#F999">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">

                    <Image Source="/Resources/icons8-dead-by-daylight-256.png" 
                           Width="35" Margin="2" 
                           HorizontalAlignment="Left" VerticalAlignment="Center"/>

                    <TextBlock Text="{Binding Title}" 
                           FontSize="20" 
                           VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" >

                    <Button Style="{StaticResource MinimizeButtonStyle}" WindowChrome.IsHitTestVisibleInChrome="True" ToolTip="Minimize"
                     Command="{x:Static SystemCommands.MinimizeWindowCommand}"/>

                    <Button x:Name="RestoreButton" Visibility="Collapsed" Style="{StaticResource RestoreButtonStyle}" 
                     Command="{x:Static SystemCommands.RestoreWindowCommand}" WindowChrome.IsHitTestVisibleInChrome="True" ToolTip="Restore"/>

                    <Button x:Name="MaximizeButton" Visibility="Visible" Style="{StaticResource MaximizeButtonStyle}" 
                     Command="{x:Static SystemCommands.MaximizeWindowCommand}" WindowChrome.IsHitTestVisibleInChrome="True" ToolTip="Maximize" />

                    <Button Style="{StaticResource CloseButtonStyle}" WindowChrome.IsHitTestVisibleInChrome="True" ToolTip="Close"
                     Command="{x:Static SystemCommands.CloseWindowCommand}"/>

                </StackPanel>
            </Grid>

            <!--#endregion-->

            <!--#endregion-->

            <!--Контент окна-->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="320"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition MinWidth="1" MaxWidth="700" Width="1"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Grid.Column="0" Orientation="Horizontal">

                    <Button Template="{StaticResource ControlButton}" ToolTip="Добавить файл"
                            Command="{Binding LoadImageCommand}"
                            Width="40" Height="30" Margin="10,0,0,0">
                        <Image Source="/Resources/add-file-1151197.png" />
                    </Button>

                    <Button Template="{StaticResource ControlButton}" ToolTip="Очистить список"
                            Command="{Binding ClearImageListCommand}"
                            Width="40" Height="30" Margin="10,0,0,0">
                        <Image Source="/Resources/delete-7391435.png" />
                    </Button>

                    <Button Template="{StaticResource ControlButton}" ToolTip="Настройки"
                            Command="{Binding }"
                            Width="40" Height="30" Margin="10,0,0,0">
                        <Image Source="/Resources/settings-945147.png" />
                    </Button>

                </StackPanel>

                <!--#region Отображение списока изображение -->

                <ListView ItemsSource="{Binding ImagesList}" d:ItemsSource="{d:SampleData ItemCount=5}"
                          SelectedItem="{Binding SelectedImage}"
                          Grid.Row="1"
                          Background="#282C34"
                          BorderBrush="White"
                          BorderThickness="1"
                          Foreground="White" 
                          FontSize="15" 
                          HorizontalContentAlignment="Center" 
                          Margin="5,5,0,4.7"
                          ScrollViewer.CanContentScroll="True"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          VirtualizingPanel.IsVirtualizing="True"
                          VirtualizingStackPanel.VirtualizationMode="Recycling"
                          VirtualizingPanel.CacheLength="15,15"
                          VirtualizingPanel.CacheLengthUnit="Item"
                          VirtualizingPanel.ScrollUnit="Pixel">

                    <ListView.Resources>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListViewItem">
                                        <Border Name="Border" Padding="2" BorderThickness="3" SnapsToDevicePixels="true">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>

                                            <Trigger Property="IsSelected" Value="true">
                                                <Setter TargetName="Border" Property="BorderBrush" Value="Yellow"/>
                                                <Setter Property="Foreground" Value="Black"/>
                                            </Trigger>

                                            <Trigger Property="IsMouseOver" Value="true">
                                                <Setter TargetName="Border" Property="Background" Value="Gray"/>
                                                <Setter TargetName="Border" Property="BorderThickness" Value="1"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.Resources>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Image Source="{Binding ResizeImage}" Width="auto" Height="auto"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                    <ListView.ContextMenu>
                        <ContextMenu BorderBrush="Black">
                            <MenuItem Header="Итоговая таблицу" FontSize="15" Command="{Binding LoadResultMatchImageCommand}"/>
                            <MenuItem Header="Начало игры" FontSize="15" Command="{Binding LoadStartMatchImageCommand}"/>
                            <MenuItem Header="Конец игры" FontSize="15" Command="{Binding LoadEndMatchImageCommand}"/>
                            <Separator/>
                            <MenuItem Header="Удалить" FontSize="15" Command="{Binding DeleteSelectedImageCommand}"/>
                        </ContextMenu>
                    </ListView.ContextMenu>
                </ListView>

                <!--#endregion-->

                <TextBlock Text="{Binding PathsText}" Height="25" FontSize="18" Grid.Row="2" Grid.ColumnSpan="2"/>

                <GridSplitter Grid.Column="1"
                              Background="Gray"
                              Width="4"
                              Cursor="SizeWE"
                              ShowsPreview="False" Grid.RowSpan="2"/>

                <!--#region Отображение выбранных изображений -->

                <ScrollViewer VirtualizingPanel.ScrollUnit="Pixel" CanContentScroll="False" Grid.Column="1" Grid.Row="1" Margin="0,0,15,0">
                    <StackPanel>

                        <!--#region Итоговая таблица -->

                        <StackPanel>

                            <!--#region Данные Киллера -->

                            <StackPanel>
                                <Border Height="30" Background="#50545C" CornerRadius="10" Margin="10">
                                    <TextBlock Text="Итоговая таблица" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
                                </Border>
                            </StackPanel>
                            <StackPanel>
                                <GroupBox Header="Киллер" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Top" MinWidth="630" MaxWidth="1000" MinHeight="350" MaxHeight="900" Margin="10,0,10,0">
                                    <Image Source="{Binding ResultMatchKillerImage}" Margin="10"/>
                                </GroupBox>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,50,0,50">

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!--#region Основная информация -->

                                    <StackPanel Grid.Column="0" Grid.Row="0" Visibility="Visible" Margin="0,0,30,0" VerticalAlignment="Center">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <StackPanel Grid.ColumnSpan="2">
                                                <TextBlock Text="Основная информация" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="20"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="0" Grid.Row="1"  HorizontalAlignment="Center" Orientation="Horizontal">

                                                <StackPanel>
                                                    <DockPanel Margin="50,15,0,0" HorizontalAlignment="Left">
                                                        <TextBlock Text="Киллер:" Height="25" Foreground="White" FontSize="15" />
                                                    </DockPanel>

                                                    <DockPanel Margin="50,15,0,0" HorizontalAlignment="Left">
                                                        <TextBlock Text="Платформа:" Height="25" Foreground="White" FontSize="15"/>
                                                    </DockPanel>

                                                    <DockPanel Margin="50,15,0,0" HorizontalAlignment="Left">
                                                        <TextBlock Text="Престиж:" Height="25" Foreground="White" FontSize="15"/>
                                                    </DockPanel>

                                                    <DockPanel Margin="50,15,0,0" HorizontalAlignment="Left">
                                                        <TextBlock Text="Счет:" Height="25" Foreground="White" FontSize="15"/>
                                                    </DockPanel>

                                                    <DockPanel Margin="50,15,0,0" HorizontalAlignment="Left">
                                                        <TextBlock Text="Режим:" Height="25" Foreground="White" FontSize="15"/>
                                                    </DockPanel>

                                                    <DockPanel Margin="50,15,0,0" HorizontalAlignment="Left">
                                                        <TextBlock Text="Бот:" Height="25" Foreground="White" FontSize="15"/>
                                                    </DockPanel>

                                                    <DockPanel Margin="50,15,0,0" HorizontalAlignment="Center">
                                                        <TextBlock Text="Ассоциация" Width="90" TextWrapping="WrapWithOverflow" Height="50" Foreground="White" FontSize="15"/>
                                                    </DockPanel>

                                                </StackPanel>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" Grid.Row="1" Visibility="Visible">
                                                <DockPanel Margin="0,15,0,0" HorizontalAlignment="Center">
                                                    <ComboBox Width="150" Height="25"
                                                              ItemsSource="{Binding KillerList}"
                                                              SelectedItem="{Binding SelectedKiller}"
                                                              SelectedIndex="0"
                                                              DisplayMemberPath="KillerName" 
                                                              Style="{DynamicResource ComboBoxStyleApp}"  
                                                              FontSize="16" Foreground="White"/>
                                                </DockPanel>

                                                <DockPanel Margin="0,15,0,0" HorizontalAlignment="Center">
                                                    <ComboBox Width="150" Height="25" 
                                                              ItemsSource="{Binding PlatformList}" 
                                                              SelectedItem="{Binding SelectedKillerPlatform}"                                                                
                                                              SelectedIndex="0"
                                                              DisplayMemberPath="PlatformName"
                                                              Style="{DynamicResource ComboBoxStyleApp}"
                                                              FontSize="16" Foreground="White"/>
                                                </DockPanel>

                                                <DockPanel Margin="0,15,0,0" HorizontalAlignment="Center">
                                                    <TextBox Width="150" Height="25"
                                                             Text="{Binding KillerInfoPrestige}"
                                                             Style="{StaticResource SettingTextBoxStyle}" 
                                                             Template="{StaticResource SettingTextBoxTemplate}"
                                                             TextAlignment="Center" 
                                                             FontSize="16"/>
                                                </DockPanel>

                                                <DockPanel Margin="0,15,0,0" HorizontalAlignment="Center">
                                                    <TextBox Width="150" Height="25" 
                                                             Text="{Binding KillerInfoAccount}"
                                                             Style="{StaticResource SettingTextBoxStyle}" 
                                                             Template="{StaticResource SettingTextBoxTemplate}"
                                                             TextAlignment="Center" 
                                                             FontSize="17"/>
                                                </DockPanel>

                                                <DockPanel Margin="0,15,0,0" HorizontalAlignment="Center">
                                                    <CheckBox Content="Анонимный?"
                                                              Width="153" FontSize="20" 
                                                              IsChecked="{Binding KillerInfoAnonymousMode}"
                                                              Foreground="White" 
                                                              VerticalContentAlignment="Center"/>
                                                </DockPanel>

                                                <DockPanel Margin="0,15,0,0" HorizontalAlignment="Center">
                                                    <CheckBox Content="Игрок вышел?" 
                                                              Width="153" FontSize="20" 
                                                              IsChecked="{Binding KillerInfoBot}"
                                                              Foreground="White" 
                                                              VerticalContentAlignment="Center"/>
                                                </DockPanel>

                                                <DockPanel Margin="0,15,0,0" HorizontalAlignment="Center">
                                                    <ComboBox Width="150" Height="25"
                                                              ItemsSource="{Binding PlayerAssociationList}"
                                                              SelectedItem="{Binding SelectedKillerPlayerAssociation}"
                                                              SelectedIndex="0"
                                                              DisplayMemberPath="PlayerAssociationName" 
                                                              Style="{DynamicResource ComboBoxStyleApp}"  
                                                              FontSize="16" Foreground="White"/>
                                                </DockPanel>

                                            </StackPanel>

                                        </Grid>
                                    </StackPanel>

                                    <!--#endregion-->

                                    <!--#region Билд киллера - перки -->

                                    <StackPanel Grid.Column="1" Grid.Row="0" Visibility="Visible" Margin="0,0,30,0" VerticalAlignment="Center">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="50"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <DockPanel Grid.ColumnSpan="2" Grid.Row="0">
                                                <StackPanel>
                                                    <TextBlock Text="Билд - Перки" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="20"/>
                                                </StackPanel>
                                            </DockPanel>

                                            <StackPanel Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center" Orientation="Horizontal">

                                                <StackPanel>
                                                    <DockPanel Margin="0,15,0,0" HorizontalAlignment="Left">
                                                        <TextBlock Text="Перк I" Height="25" Foreground="White" FontSize="15"/>
                                                    </DockPanel>

                                                    <DockPanel Margin="0,15,0,0" HorizontalAlignment="Left">
                                                        <TextBlock Text="Перк II" Height="25" Foreground="White" FontSize="15"/>
                                                    </DockPanel>

                                                    <DockPanel Margin="0,15,0,0" HorizontalAlignment="Left">
                                                        <TextBlock Text="Перк III" Height="25" Foreground="White" FontSize="15"/>
                                                    </DockPanel>

                                                    <DockPanel Margin="0,15,0,0" HorizontalAlignment="Left">
                                                        <TextBlock Text="Перк IV" Height="25" Foreground="White" FontSize="15"/>
                                                    </DockPanel>
                                                </StackPanel>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center">
                                                <DockPanel Margin="0,15,0,0" HorizontalAlignment="Center">
                                                    <TextBox Width="180" Height="25"
                                                             Text="{Binding SelectedKillerFirstPerkName}"
                                                             Style="{StaticResource SettingTextBoxStyle}"
                                                             Template="{StaticResource SettingTextBoxTemplate}"
                                                             IsReadOnly="True"                                                               
                                                             Background="White"
                                                             FontSize="16"
                                                             HorizontalAlignment="Left">

                                                    </TextBox>
                                                </DockPanel>

                                                <DockPanel Margin="0,15,0,0" HorizontalAlignment="Center">
                                                    <TextBox Width="180" Height="25"
                                                             Text="{Binding SelectedKillerSecondPerkName}"
                                                             Style="{StaticResource SettingTextBoxStyle}"
                                                             Template="{StaticResource SettingTextBoxTemplate}"
                                                             IsReadOnly="True"
                                                             Background="White"
                                                             FontSize="16"
                                                             HorizontalAlignment="Left">
                                                    </TextBox>
                                                </DockPanel>

                                                <DockPanel Margin="0,15,0,0" HorizontalAlignment="Center">
                                                    <TextBox Width="180" Height="25" 
                                                             Text="{Binding SelectedKillerThirdPerkName}"
                                                             Style="{StaticResource SettingTextBoxStyle}"
                                                             Template="{StaticResource SettingTextBoxTemplate}"
                                                             IsReadOnly="True"
                                                             FontSize="16"
                                                             HorizontalAlignment="Left"/>
                                                </DockPanel>

                                                <DockPanel Margin="0,15,0,0" HorizontalAlignment="Center">
                                                    <TextBox Width="180" Height="25" 
                                                             Text="{Binding SelectedKillerFourthPerkName}"
                                                             Style="{StaticResource SettingTextBoxStyle}"
                                                             Template="{StaticResource SettingTextBoxTemplate}"
                                                             IsReadOnly="True"
                                                             Background="White"
                                                             FontSize="16" 
                                                             HorizontalAlignment="Left"/>
                                                </DockPanel>
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>

                                    <!--#endregion-->

                                    <!--#region Билд киллера - Улучшение -->

                                    <StackPanel Grid.Column="2" Grid.Row="0" Visibility="Visible" Margin="0,0,30,0" VerticalAlignment="Center">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <DockPanel Grid.ColumnSpan="2" Grid.Row="0">
                                                <StackPanel>
                                                    <TextBlock Text="Билд - Аддоны" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="20"/>
                                                </StackPanel>
                                            </DockPanel>

                                            <StackPanel Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center" Orientation="Horizontal">

                                                <StackPanel>
                                                    <DockPanel Margin="0,15,0,0" HorizontalAlignment="Left">
                                                        <TextBlock Text="Улучшение I" Height="25" Foreground="White" FontSize="15"/>
                                                    </DockPanel>

                                                    <DockPanel Margin="0,15,0,0" HorizontalAlignment="Left">
                                                        <TextBlock Text="Улучшение II" Height="25" Foreground="White" FontSize="15"/>
                                                    </DockPanel>

                                                </StackPanel>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center">
                                                <DockPanel Margin="0,15,0,0" HorizontalAlignment="Center">
                                                    <TextBox Width="180" Height="25"
                                                             Text="{Binding SelectedKillerFirstAddonName}"
                                                             Style="{StaticResource SettingTextBoxStyle}"
                                                             Template="{StaticResource SettingTextBoxTemplate}"
                                                             IsReadOnly="True"                                                   
                                                             Background="White"
                                                             FontSize="16"
                                                             HorizontalAlignment="Left">

                                                    </TextBox>
                                                </DockPanel>

                                                <DockPanel Margin="0,15,0,0" HorizontalAlignment="Center">
                                                    <TextBox Width="180" Height="25"
                                                             Text="{Binding SelectedKillerSecondAddonName}"
                                                             Style="{StaticResource SettingTextBoxStyle}"
                                                             Template="{StaticResource SettingTextBoxTemplate}"
                                                             IsReadOnly="True"
                                                             Background="White"
                                                             FontSize="16"
                                                             HorizontalAlignment="Left">
                                                    </TextBox>
                                                </DockPanel>
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>

                                    <!--#endregion-->

                                    <!--#region Билд киллера - подношение -->

                                    <StackPanel Grid.Column="3" Grid.Row="0" Visibility="Visible" Margin="0,0,30,0" VerticalAlignment="Center">

                                        <DockPanel Grid.ColumnSpan="2" Grid.Row="0">
                                            <StackPanel>
                                                <TextBlock Text="Билд - Подношения" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="20"/>
                                            </StackPanel>
                                        </DockPanel>

                                        <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2" Orientation="Horizontal">

                                            <StackPanel Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center" Orientation="Horizontal">

                                                <StackPanel>
                                                    <DockPanel Margin="0,15,0,0" HorizontalAlignment="Left">
                                                        <TextBlock Text="Подношение:" Height="25" Foreground="White" FontSize="15"/>
                                                    </DockPanel>

                                                    <DockPanel Margin="0,15,0,0" HorizontalAlignment="Left">
                                                        <TextBlock Text="Роль: " Height="25" Foreground="White" FontSize="15"/>
                                                    </DockPanel>

                                                </StackPanel>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center">
                                                <DockPanel Margin="0,15,0,0" HorizontalAlignment="Center">
                                                    <TextBox Width="200" Height="25"
                                                             Text="{Binding SelectedKillerOfferingName}"
                                                             Style="{StaticResource SettingTextBoxStyle}"
                                                             Template="{StaticResource SettingTextBoxTemplate}"
                                                             IsReadOnly="True" 
                                                             Background="White"
                                                             FontSize="16"
                                                             HorizontalAlignment="Left">
                                                    </TextBox>
                                                </DockPanel>

                                                <DockPanel Margin="0,15,0,0" HorizontalAlignment="Center">
                                                    <ComboBox Width="150" Height="25"
                                                              ItemsSource="{Binding KillerRoleList}"
                                                              SelectedItem="{Binding SelectedComboBoxRoleKiller}"
                                                              SelectedIndex="1"
                                                              DisplayMemberPath="RoleName" 
                                                              Style="{DynamicResource ComboBoxStyleApp}"  
                                                              FontSize="16" Foreground="White"/>
                                                </DockPanel>
                                            </StackPanel>

                                        </StackPanel>
                                    </StackPanel>

                                    <!--#endregion-->

                                    <Separator Height="5" Grid.ColumnSpan="4" VerticalAlignment="Bottom"/>

                                    <!--#region Отображение выбранного персонажа -->

                                    <StackPanel Grid.Column="0" Grid.Row="1" Visibility="Visible" VerticalAlignment="Center">
                                        <Image Width="300" Source="C:\Users\light\OneDrive\Desktop\Изображение дбд\Киллеры Портреты\29_Кукловод.png"/>
                                    </StackPanel>

                                    <!--#endregion-->

                                    <!--#region ListView - Список перков -->

                                    <StackPanel Grid.Column="1" Grid.Row="1" Visibility="Visible">

                                        <StackPanel Visibility="Collapsed" HorizontalAlignment="Right">
                                            <Button Width="100" Height="25"
                                                    Content="{Binding ContentButtonListViewKillerPerkVisibility}"
                                                    Template="{StaticResource ControlButton}"
                                                    Command="{Binding ListViewKillerPerkVisibilityCommand}"
                                                    FontSize="16"
                                                    Margin="0,10,30,0"/>
                                        </StackPanel>

