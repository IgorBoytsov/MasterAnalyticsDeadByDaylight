                                                              SelectedIndex="0"
                                                              DisplayMemberPath="WhoPlacedMapName"
                                                              HorizontalAlignment="Left"/>
                                                </DockPanel>

                                                <DockPanel Margin="0,15,0,0" HorizontalAlignment="Center">
                                                    <ComboBox Width="150" Height="25" 
                                                              ItemsSource="{Binding WhoPlacedMapList}"
                                                              SelectedItem="{Binding SelectedWhoPlacedMapWin}"
                                                              SelectedIndex="0"
                                                              DisplayMemberPath="WhoPlacedMapName"
                                                              HorizontalAlignment="Left"/>
                                                </DockPanel>

                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>
                                    
                                    <!--#endregion-->

                                    <!--#region Описание -->

                                    <StackPanel Margin="0,15,0,0" HorizontalAlignment="Left">

                                        <DockPanel Grid.Row="0" >
                                            <StackPanel>
                                                <TextBlock Text="Описание" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="30"/>
                                            </StackPanel>
                                        </DockPanel>
                                        <StackPanel Grid.Column="1" Grid.Row="1" Margin="20,0,0,0">
                                            <DockPanel Margin="0,15,0,0" HorizontalAlignment="Center">
                                                <TextBox Text="{Binding DescriptionGame}"
                                                         Background="Gray"
                                                         Width="410" Height="300"/>
                                            </DockPanel>
                                        </StackPanel>
                                    </StackPanel>

                                    <!--#endregion-->

                                </StackPanel>
                            </Grid>

                        </StackPanel>
                                    
                        <!--#endregion-->

                    </StackPanel>
                </ScrollViewer>

                <!--#endregion-->
                
                <Border Grid.Column="1" Grid.Row="2" Background="Gray" CornerRadius="10" Margin="3">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Button Content="Сохранить" Command="{Binding AddMatchCommand}" Width="150" Height="30" FontSize="20"/>
                    </StackPanel>
                </Border>

            </Grid>
        </Grid>
    </Border>
</Window>
