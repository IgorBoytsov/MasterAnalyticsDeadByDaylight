<Window x:Class="MasterAnalyticsDeadByDaylight.MVVM.View.Windows.AppWindow.AddSurvivorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MasterAnalyticsDeadByDaylight.MVVM.View.Windows.AppWindow"
        mc:Ignorable="d"
        Style="{StaticResource WindowStyle}"
        WindowStartupLocation="CenterScreen"
        Title="Добавить вижившиго" Height="550" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0" Grid.Row="0" Text="Выжившие" FontSize="20" HorizontalAlignment="Center"/>

        <ListView Grid.Column="0" Grid.Row="1" Margin="10" FontSize="15">
            <TextBlock Text="Дуайт Фэйрфилд"/>
            <TextBlock Text="Мэг Томас"/>
            <TextBlock Text="Клодетт Морель"/>
            <TextBlock Text="Джейк Парк"/>
            <TextBlock Text="Нея Карлссон"/>
            <TextBlock Text="Лори Строуд"/>
            <TextBlock Text="Эйс Висконти"/>
            <TextBlock Text="Уильям Билл Овербек"/>
            <TextBlock Text="Фенг Мин"/>
            <TextBlock Text="Дэвид Кинг"/>
            <TextBlock Text="Дэвид Кинг"/>
            <TextBlock Text="Детектив Тэпп"/>
            <TextBlock Text="Кейт Денсон"/>
            <TextBlock Text="Адам Фрэнсис"/>
            <TextBlock Text="Джефф Йохансен"/>
            <TextBlock Text="Джейн Ромеро"/>
            <TextBlock Text="Эшли Джей Уильямс"/>
        </ListView>

        <StackPanel Visibility="Visible" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Center" Orientation="Horizontal">
            <StackPanel HorizontalAlignment="Center" Margin="20,0,0,0" >

                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,15">
                    <Border Height="25" Width="140" Background="#50545C" CornerRadius="10">
                        <TextBlock Text="Имя выжившего" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </StackPanel>

                <StackPanel HorizontalAlignment="Center">
                    <TextBox Width="150" Height="20"/>
                </StackPanel>

                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20,0,0">
                    <Button Content="Сохранить" Width="90" Height="20"/>
                </StackPanel>
            </StackPanel>

            <StackPanel HorizontalAlignment="Right" Margin="20,0,20,0">
                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,20">
                    <Border Height="25" Width="140" Background="#50545C" CornerRadius="10">
                        <TextBlock Text="Портрет" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </StackPanel>

                <StackPanel HorizontalAlignment="Center">
                    <Border Width="145" Height="145" BorderBrush="Gray" BorderThickness="2" CornerRadius="10">
                        <Image Source="C:\Users\light\OneDrive\Desktop\Изображение дбд\Сурвы Портреты\Скины, которые имеет свое имя персонажа\Tubarao (Ренато Лира).png" Width="130" Height="130"/>
                    </Border>
                </StackPanel>

                <StackPanel HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="Выбрать" Width="90" Height="20" />
                </StackPanel>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
