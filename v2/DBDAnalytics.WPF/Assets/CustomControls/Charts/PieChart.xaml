<UserControl x:Class="DBDAnalytics.WPF.Assets.CustomControls.Charts.PieChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DBDAnalytics.WPF.Assets.CustomControls.Charts"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="PieSliceStyle" TargetType="Path">
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Children[0].X"
                                         Duration="0:0:0.2" To="10"/>
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Children[0].Y"
                                         Duration="0:0:0.2" To="10"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Children[0].X"
                                         Duration="0:0:0.2" To="0"/>
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Children[0].Y"
                                         Duration="0:0:0.2" To="0"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Canvas Name="PieCanvas"  SizeChanged="PieCanvas_SizeChanged"/>

        <ItemsControl Grid.Column="1" ItemsSource="{Binding Items, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged}" d:ItemsSource="{d:SampleData ItemCount=0}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <Rectangle Width="12" Height="12" Fill="{Binding Color}" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding DisplayValue}" VerticalAlignment="Center"/>
                        <!--<TextBlock Text="{Binding Value, StringFormat={}{0} %}" VerticalAlignment="Center"/>-->
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>