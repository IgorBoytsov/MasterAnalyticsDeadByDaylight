<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="Image.AddMatch.SelectedCharacer" TargetType="Image">
        <Setter Property="VerticalAlignment" Value="Top"/>
    </Style>

    <Style x:Key="Image.AddMatch.SelectedPerk" TargetType="Image">
        <Setter Property="ToolTipService.InitialShowDelay" Value="100"/>
        <Setter Property="ToolTipService.Placement" Value="Bottom"/>
        <Setter Property="Margin" Value="5"/>
    </Style>

    <Style x:Key="Image.AddMatch.SelectedAddon" TargetType="Image">
        <Setter Property="ToolTipService.InitialShowDelay" Value="100"/>
        <Setter Property="ToolTipService.Placement" Value="Bottom"/>
        <Setter Property="Margin" Value="5"/>
    </Style>

    <Style x:Key="Image.AddMatch.SelectedOffering" TargetType="Image">
        <Setter Property="ToolTipService.InitialShowDelay" Value="100"/>
        <Setter Property="ToolTipService.Placement" Value="Bottom"/>
        <Setter Property="Margin" Value="5"/>
    </Style>

    <Style x:Key="Image.AddMatch.SelectedItem" TargetType="Image">
        <Setter Property="ToolTipService.InitialShowDelay" Value="100"/>
        <Setter Property="ToolTipService.Placement" Value="Bottom"/>
        <Setter Property="Margin" Value="5"/>
    </Style>

</ResourceDictionary>