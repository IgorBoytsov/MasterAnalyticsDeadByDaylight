<Application x:Class="DBDAnalytics.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DBDAnalytics.WPF"
             xmlns:converters="clr-namespace:DBDAnalytics.WPF.ValueConverters">
    <Application.Resources>
        <ResourceDictionary>

            <converters:CapitalizeDayAndDateConverter x:Key="CapitalizeDayAndDateConverter"/>
            <converters:ErrorToBrushConverter x:Key="ErrorToBrushConverter"/>
            <converters:KillRateToColorConverter x:Key="KIllRateToColorConverter"/>
            <converters:RecentGeneratorToColorConverter x:Key="RecentGeneratorToColorConverter"/>
            <converters:HookRateToColorConverter x:Key="HookRateToColorConverter"/>
            <converters:WinRateToColorConverter x:Key="WinRateToColorConverter"/>
            <converters:AnonymousToColorConverter x:Key="AnonymousToColorConverter"/>
            <converters:BotToColorConverter x:Key="BotToColorConverter"/>
            <converters:PlatformToColorConverter x:Key="PlatformToColorConverter"/>
            <converters:TypeDeathToColorConverter x:Key="TypeDeathToColorConverter"/>
            <converters:NumberDigitConverter x:Key="NumberDigitConverter"/>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Assets\Brushes\BorderBrushes.xaml"/>
                <ResourceDictionary Source="Assets\Brushes\MainBrushes.xaml"/>
                <ResourceDictionary Source="Assets\Brushes\StatisticsBrushes.xaml"/>
                <ResourceDictionary Source="Assets\Brushes\TextBrushes.xaml"/>

                <ResourceDictionary Source="Assets\PathElements\CheckMark.xaml"/>
                <ResourceDictionary Source="Assets\PathElements\Arrows.xaml"/>

                <ResourceDictionary Source="Assets\StylesAndTemplates\BorderStyle.xaml"/>
                <ResourceDictionary Source="Assets\StylesAndTemplates\ButtonStyle.xaml"/>
                <ResourceDictionary Source="Assets\StylesAndTemplates\CheckBoxStyle.xaml"/>
                <ResourceDictionary Source="Assets\StylesAndTemplates\ComboBoxStyle.xaml"/>
                <ResourceDictionary Source="Assets\StylesAndTemplates\DockPanelStyle.xaml"/>
                <ResourceDictionary Source="Assets\StylesAndTemplates\DataGridStyle.xaml"/>
                <ResourceDictionary Source="Assets\StylesAndTemplates\ImageStyle.xaml"/>
                <ResourceDictionary Source="Assets\StylesAndTemplates\ListViewStyle.xaml"/>
                <ResourceDictionary Source="Assets\StylesAndTemplates\ScrollViewerStyle.xaml"/>
                <ResourceDictionary Source="Assets\StylesAndTemplates\SeparatorStyle.xaml"/>
                <ResourceDictionary Source="Assets\StylesAndTemplates\TabControlStyle.xaml"/>
                <ResourceDictionary Source="Assets\StylesAndTemplates\TextBlockStyle.xaml"/>
                <ResourceDictionary Source="Assets\StylesAndTemplates\TextBoxStyle.xaml"/>
                <ResourceDictionary Source="Assets\StylesAndTemplates\WindowStyle.xaml"/>

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>