<Window x:Class="DBDAnalytics.WPF.Views.Windows.InteractionAssociationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DBDAnalytics.WPF.Views.Windows" 
        xmlns:enum="clr-namespace:DBDAnalytics.WPF.Enums" 
        xmlns:uc="clr-namespace:DBDAnalytics.WPF.Assets.CustomControls" 
        xmlns:windowvm="clr-namespace:DBDAnalytics.WPF.ViewModels.WindowVM" 
        xmlns:converters="clr-namespace:DBDAnalytics.WPF.ValueConverters"
        d:DataContext="{d:DesignInstance Type=windowvm:InteractionAssociationVM}"
        mc:Ignorable="d" 
        WindowStartupLocation="CenterScreen"
        MinHeight="300" MinWidth="550"
        Height="450" Width="550"
        Background="{StaticResource Brush.AppBackground}"
        Title="{Binding Title}">
    <!--d:Height="Auto" d:Width="Auto"-->
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="34"
                       GlassFrameThickness="0"
                       CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Border x:Name="MainWindowBorder" BorderBrush="LightCoral" BorderThickness="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height ="Auto"/>
                <RowDefinition Height ="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Height="Auto" Background="#F999" Grid.ColumnSpan="2">

                <TextBlock Text="{Binding Title}" d:Text="Пример заголовка"
                           FontSize="17"
                           VerticalAlignment="Center"/>

                <!--#region Кнопки изменение WindowState-->

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" >

                    <Button Style="{StaticResource MinimizeButtonStyle}" 
                            Command="{Binding MinimizeWindowCommand}" 
                            CommandParameter="{x:Static enum:WindowName.InteractionAssociation}"
                            WindowChrome.IsHitTestVisibleInChrome="True" 
                            ToolTip="Minimize"/>

                    <Button x:Name="RestoreButton" 
                            Visibility="Collapsed" 
                            Style="{StaticResource RestoreButtonStyle}" 
                            Command="{Binding RestoreWindowCommand}" 
                            CommandParameter="{x:Static enum:WindowName.InteractionAssociation}"
                            WindowChrome.IsHitTestVisibleInChrome="True" 
                            ToolTip="Restore">
                    </Button>

                    <Button x:Name="MaximizeButton" 
                            Visibility="Visible" 
                            Style="{StaticResource MaximizeButtonStyle}" 
                            Command="{Binding MaximizeWindowCommand}"
                            CommandParameter="{x:Static enum:WindowName.InteractionAssociation}"
                            WindowChrome.IsHitTestVisibleInChrome="True" 
                            ToolTip="Maximize" />

                    <Button Style="{StaticResource CloseButtonStyle}"  
                            Command="{Binding CloseWindowCommand}"
                            CommandParameter="{x:Static enum:WindowName.InteractionAssociation}"
                            WindowChrome.IsHitTestVisibleInChrome="True"
                            ToolTip="Close"/>

                </StackPanel>

                <!--#endregion-->

            </Grid>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <DataGrid ItemsSource="{Binding PlayerAssociations}"
                          d:ItemsSource="{d:SampleData ItemCount=10}"
                          SelectedItem="{Binding SelectedPlayerAssociation}"
                          IsReadOnly="True"
                          GridLinesVisibility="None"
                          AutoGenerateColumns="False"
                          HorizontalScrollBarVisibility="Hidden">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Название" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock x:Name="MyTextBlock"
                                               Text="{Binding PlayerAssociationName}"
                                               Margin="0,0,1,0"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Описание" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock x:Name="MyTextBlock"
                                               Text="{Binding PlayerAssociationDescription}"
                                               HorizontalAlignment="Left"
                                               TextTrimming="CharacterEllipsis"
                                               TextWrapping="NoWrap"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>


                        <DataGridTemplateColumn Header="Действия" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Удалить"
                                            Height="20"
                                            VerticalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                <!--Width="{Binding Path=ActualWidth, RelativeSource={RelativeSource AncestorType=Window}}"-->

                <DockPanel Grid.Row="1">

                    <WrapPanel DockPanel.Dock="Bottom" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                        <Button Content="Сохранить" 
                                Style="{StaticResource Button.Base}"
                                Command="{Binding AddPlayerAssociationCommand}"
                                Width="100" 
                                Margin="0,0,5,5"/>
                        <Button Content="Изменить" 
                                Style="{StaticResource Button.Base}"
                                Command="{Binding UpdatePlayerAssociationCommand}"
                                Width="100"
                                Margin="0,0,5,5"/>
                        <Button Content="Удалить" 
                                Style="{StaticResource Button.Base}"
                                Command="{Binding DeletePlayerAssociationCommand}"
                                Width="100"
                                Margin="0,0,5,5"/>
                    </WrapPanel>

                    <uc:CustomTextBox  NameRecord="{Binding PlayerAssociationName}"
                                       MaxLength="50"
                                       DockPanel.Dock="Top"/>
                    <uc:CustomTextBox  NameRecord="{Binding PlayerAssociationDescription}"
                                       MaxLength="1000"/>

                    <!--<uc:TitleDescriptionInput HorizontalAlignment="Stretch" 
                                              VerticalAlignment="Stretch"
                                              NameRecord="{Binding PlayerAssociationName}"
                                              DescriptionRecord="{Binding PlayerAssociationDescription}"
                                              ErrorMessage="{Binding Message}"
                                              AddRecordCommand="{Binding AddPlayerAssociationCommand}"
                                              UpdateRecordCommand="{Binding UpdatePlayerAssociationCommand}"
                                              DeleteRecordCommand="{Binding DeletePlayerAssociationCommand}"/>-->

                </DockPanel>

            </Grid>

        </Grid>
    </Border>
</Window>