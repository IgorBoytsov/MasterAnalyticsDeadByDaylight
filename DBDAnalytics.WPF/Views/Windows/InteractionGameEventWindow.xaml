<Window x:Class="DBDAnalytics.WPF.Views.Windows.InteractionGameEventWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DBDAnalytics.WPF.Views.Windows" 
        xmlns:enum="clr-namespace:DBDAnalytics.WPF.Enums" 
        xmlns:windowvm="clr-namespace:DBDAnalytics.WPF.ViewModels.WindowVM" 
        d:DataContext="{d:DesignInstance Type=windowvm:InteractionGameEventVM}"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        MinHeight="300" MinWidth="500"
        Height="300" Width="500"
        d:Height="Auto" d:Width="Auto"
        Title="{Binding Title}">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="34"
                      GlassFrameThickness="0"
                      CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Border x:Name="MainWindowBorder" BorderBrush="LightCoral" BorderThickness="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height ="Auto"/>
                <RowDefinition Height ="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Height="Auto" Background="#F999" Grid.ColumnSpan="2">

                <StackPanel HorizontalAlignment="Left">
                    <TextBlock Text="{Binding Title}"/>
                </StackPanel>

                <!--#region Кнопки изменение WindowState-->

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" >

                    <Button Style="{StaticResource MinimizeButtonStyle}" 
                            Command="{Binding MinimizeWindowCommand}" 
                            CommandParameter="{x:Static enum:WindowName.InteractionGameEvent}"
                            WindowChrome.IsHitTestVisibleInChrome="True" 
                            ToolTip="Minimize"/>

                    <Button x:Name="RestoreButton" 
                            Visibility="Collapsed" 
                            Style="{StaticResource RestoreButtonStyle}" 
                            Command="{Binding RestoreWindowCommand}" 
                            CommandParameter="{x:Static enum:WindowName.InteractionGameEvent}"
                            WindowChrome.IsHitTestVisibleInChrome="True" 
                            ToolTip="Restore"/>

                    <Button x:Name="MaximizeButton" 
                            Visibility="Visible" 
                            Style="{StaticResource MaximizeButtonStyle}" 
                            Command="{Binding MaximizeWindowCommand}"
                            CommandParameter="{x:Static enum:WindowName.InteractionGameEvent}"
                            WindowChrome.IsHitTestVisibleInChrome="True" 
                            ToolTip="Maximize" />

                    <Button Style="{StaticResource CloseButtonStyle}"  
                            Command="{Binding CloseWindowCommand}"
                            CommandParameter="{x:Static enum:WindowName.InteractionGameEvent}"
                            WindowChrome.IsHitTestVisibleInChrome="True"
                            ToolTip="Close"/>

                </StackPanel>

                <!--#endregion-->

            </Grid>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DataGrid ItemsSource="{Binding GameEvents}"
                          SelectedItem="{Binding SelectedGameEvent}">

                </DataGrid>

                <DockPanel Grid.Row="1">

                    <WrapPanel DockPanel.Dock="Bottom" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                        <Button Content="Сохранить" 
                                Command="{Binding AddGameEventCommand}"
                                Width="100" 
                                Margin="0,0,5,5"/>
                        <Button Content="Изменить" 
                                Command="{Binding UpdateGameEventCommand}"
                                Width="100"
                                Margin="0,0,5,5"/>
                        <Button Content="Удалить" 
                                Command="{Binding DeleteGameEventCommand}"
                                Width="100"
                                Margin="0,0,5,5"/>
                    </WrapPanel>

                    <StackPanel>

                        <TextBox Text="{Binding GameEventName}" 
                                 FontSize="20"
                                 Margin="5"
                                 VerticalAlignment="Top" 
                                 HorizontalAlignment="Stretch"/>

                        <TextBox Text="{Binding GameEventDescription}" 
                                 FontSize="20"
                                 Margin="5"
                                 VerticalAlignment="Top" 
                                 HorizontalAlignment="Stretch"/>

                    </StackPanel>

                </DockPanel>

            </Grid>

        </Grid>
    </Border>
</Window>