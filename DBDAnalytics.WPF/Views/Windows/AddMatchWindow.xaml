<Window x:Class="DBDAnalytics.WPF.Views.Windows.AddMatchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DBDAnalytics.WPF.Views.Windows" 
        xmlns:enum="clr-namespace:DBDAnalytics.WPF.Enums" 
        xmlns:uc="clr-namespace:DBDAnalytics.WPF.Assets.CustomControls" 
        xmlns:windowvm="clr-namespace:DBDAnalytics.WPF.ViewModels.WindowVM" 
        d:DataContext="{d:DesignInstance Type=windowvm:AddMatchVM}"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        MinHeight="850" MinWidth="1480"
        Height="850" Width="1600" 
        d:Height="Auto"
        Title="{Binding Title}" >
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="34"
                      GlassFrameThickness="0"
                      CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Border x:Name="MainWindowBorder" BorderBrush="LightCoral" BorderThickness="0">
        <Grid Background="{StaticResource Brush.AppBackground}">
            <Grid.RowDefinitions>
                <RowDefinition Height ="Auto"/>
                <RowDefinition Height ="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Height="Auto" Background="#F999" Grid.ColumnSpan="2">

                <TextBlock Text="{Binding Title}" d:Text="Пример заголовка"
                           Style="{StaticResource TextBlock.Title}"/>

                <!--#region Кнопки изменение WindowState-->

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" >

                    <Button Style="{StaticResource MinimizeButtonStyle}" 
                        Command="{Binding MinimizeWindowCommand}" 
                        CommandParameter="{x:Static enum:WindowName.AddMatch}"
                        WindowChrome.IsHitTestVisibleInChrome="True" 
                        ToolTip="Minimize"/>

                    <Button x:Name="RestoreButton" 
                        Visibility="Collapsed" 
                        Style="{StaticResource RestoreButtonStyle}" 
                        Command="{Binding RestoreWindowCommand}" 
                        CommandParameter="{x:Static enum:WindowName.AddMatch}"
                        WindowChrome.IsHitTestVisibleInChrome="True" 
                        ToolTip="Restore"/>

                    <Button x:Name="MaximizeButton" 
                        Visibility="Visible" 
                        Style="{StaticResource MaximizeButtonStyle}" 
                        Command="{Binding MaximizeWindowCommand}"
                        CommandParameter="{x:Static enum:WindowName.AddMatch}"
                        WindowChrome.IsHitTestVisibleInChrome="True" 
                        ToolTip="Maximize" />

                    <Button Style="{StaticResource CloseButtonStyle}"  
                        Command="{Binding CloseWindowCommand}"
                        CommandParameter="{x:Static enum:WindowName.AddMatch}"
                        WindowChrome.IsHitTestVisibleInChrome="True"
                        ToolTip="Close"/>

                </StackPanel>

                <!--#endregion-->

            </Grid>

            <Grid Grid.Row="1" Background="Transparent">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="350"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!--#region Управление скриншотами матча -->

                <WrapPanel Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Left">
                    
                    <Button Content="Очистить" 
                            Command="{Binding ClearImageListCommand}"
                            Style="{StaticResource Button.Base}"
                            ToolTip="Очистить список" />
                    
                    <Button Content="Выбрать" 
                            Command="{Binding SelectImagesCommand}"
                            Style="{StaticResource Button.Base}"
                            ToolTip="Выбрать файлы" />
                    
                    <Button Content="Добавить матч"
                            Command="{Binding AddMatchCommand}"
                            Style="{StaticResource Button.Base}"/>
                    
                </WrapPanel>

                <!--#endregion-->

                <!--#region Скриншоты матча-->

                <ListView Grid.Row="1" 
                          ItemsSource="{Binding ImagePaths}" 
                          SelectedItem="{Binding SelectedImagePath}"
                          d:ItemsSource="{d:SampleData ItemCount=5}"
                          Style="{StaticResource AddMatchWindow.ListImages}">

                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>

                    <ListView.ItemContainerStyle>
                        <Style TargetType="{x:Type ListViewItem}">
                            <Setter Property="Width" Value="280"/>
                            <Setter Property="Margin" Value="0,15,0,0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListViewItem">
                                        <Border Name="Border" BorderThickness="0" SnapsToDevicePixels="true">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>

                                            <Trigger Property="IsSelected" Value="true">
                                                <Setter TargetName="Border" Property="BorderBrush" Value="Yellow"/>
                                                <Setter TargetName="Border" Property="BorderThickness" Value="1"/>
                                                <Setter Property="Foreground" Value="Black"/>
                                            </Trigger>

                                            <Trigger Property="IsMouseOver" Value="true">
                                                <!--<Setter TargetName="Border" Property="Background" Value="Gray"/>
                                                    <Setter TargetName="Border" Property="BorderThickness" Value="1"/>-->
                                                <Setter TargetName="Border" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                                <Setter TargetName="Border" Property="RenderTransform">
                                                    <Setter.Value>
                                                        <ScaleTransform ScaleX="1.0" ScaleY="1.0"/>
                                                    </Setter.Value>
                                                </Setter>
                                                <Trigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetName="Border"
                                                                             Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                                                                             To="1.1" Duration="0:0:0.2"/>
                                                            <DoubleAnimation Storyboard.TargetName="Border"
                                                                             Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                                                                             To="1.1" Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.EnterActions>
                                                <Trigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetName="Border"
                                                                             Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                                                                             To="1.0" Duration="0:0:0.2"/>
                                                            <DoubleAnimation Storyboard.TargetName="Border"
                                                                             Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                                                                             To="1.0" Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.ExitActions>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Image Source="{Binding ImageByte}" 
                                   Width="280" 
                                   Height="auto"
                                   VerticalAlignment="Center"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                    <ListView.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Начало матча"
                                      Command="{Binding LoadStartMatchImageCommand}"/>
                            <MenuItem Header="Конец матча"
                                      Command="{Binding LoadEndMatchImageCommand}"/>
                            <MenuItem Header="Итог матча"
                                      Command="{Binding LoadResultMatchImageCommand}"/>

                            <Separator/>
                            
                            <MenuItem Header="Добавить"
                                      Command="{Binding SelectImagesCommand}"/>                            
                            
                            <MenuItem Header="Очистить"
                                      Command="{Binding ClearImageListCommand}"/>
                            
                            <Separator/>
                            
                            <MenuItem Header="Удалить"
                                      Command="{Binding DeleteSelectedImageCommand}"/>
                        </ContextMenu>
                    </ListView.ContextMenu>

                </ListView>

                <!--#endregion-->

                <!--#region Добавление данных для матча -->

                <TabControl Grid.Row="1" Grid.Column="1" 
                            Margin="10,0,10,0"
                            Style="{StaticResource App.TabControl}">

                    <TabControl.Resources>

                        <Style TargetType="TabPanel">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                        </Style>

                        <!--#region Height 1 строки, в которой находится вырезаное изображение из итоговой таблицы матча -->

                        <Style x:Key="RowDefinitionKiller№1" TargetType="RowDefinition">
                            <Setter Property="Height" Value="240"/>
                        </Style>

                        <Style x:Key="RowDefinitionSurvivor№1" TargetType="RowDefinition">
                            <Setter Property="Height" Value="240"/>
                        </Style>

                        <Style x:Key="RowDefinitionResultMatch№1" TargetType="RowDefinition">
                            <Setter Property="Height" Value="240"/>
                        </Style>

                        <!--#endregion-->

                        <!--#region Height 2 строки, в которой находятся поля для отображение вносимых данных -->

                        <Style x:Key="RowDefinitionKiller№2" TargetType="RowDefinition">
                            <Setter Property="Height" Value="270"/>
                        </Style>

                        <Style x:Key="RowDefinitionSurvivor№2" TargetType="RowDefinition">
                            <Setter Property="Height" Value="355"/>
                        </Style>

                        <Style x:Key="RowDefinitionResultMatch№2" TargetType="RowDefinition">
                            <Setter Property="Height" Value="355"/>
                        </Style>

                        <!--#endregion-->

                        <!--#region Height 3 строки, в которой находятся для выбора данных -->

                        <Style x:Key="RowDefinitionKiller№3" TargetType="RowDefinition">
                            <Setter Property="Height" Value="*"/>
                        </Style>

                        <Style x:Key="RowDefinitionSurvivor№3" TargetType="RowDefinition">
                            <Setter Property="Height" Value="*"/>
                        </Style>

                        <Style x:Key="RowDefinitionResultMatch№3" TargetType="RowDefinition">
                            <Setter Property="Height" Value="*"/>
                        </Style>

                        <!--#endregion-->

                    </TabControl.Resources>

                    <!--#region Киллер -->

                    <TabItem Header="Киллер">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Style="{StaticResource RowDefinitionKiller№1}"/>
                                <RowDefinition Style="{StaticResource RowDefinitionKiller№2}"/>
                                <RowDefinition Style="{StaticResource RowDefinitionKiller№3}"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!--#region Изображение -->

                            <Border Grid.ColumnSpan="3">
                                <StackPanel>
                                    <Border Margin="5,10,5,5" 
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center">
                                        <TextBlock Text="Итог : Киллер" FontSize="18"/>
                                    </Border>
                                    <Border Style="{StaticResource AddMatch.Border.AroundImageResult}">
                                        <uc:ZoomImage Source="{Binding ResultMatchKillerImage}"
                                                      Width="920"
                                                      Height="145"
                                                      Margin="10"/>
                                    </Border>
                                </StackPanel>
                            </Border>

                            <!--#endregion-->

                            <!--#region Основная информаяи -->

                            <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource AddMatch.Border.InputData}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="80"/>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Row="0" Grid.ColumnSpan="2"
                                            Style="{StaticResource AddMatch.Border.Header}">
                                        <TextBlock Text="Основная информация" 
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>

                                    <Image Grid.Column="0" Grid.Row="1"
                                           Source="{Binding SelectedKiller.KillerImage}" d:Source="D:\Изображение для программы по ДБД\Киллеры\Портреты\19_Стрелок(Красный).png"
                                           Style="{StaticResource Image.AddMatch.SelectedCharacer}"/>

                                    <Grid Grid.Column="1" Grid.Row="1" Margin="5,0,0,0" Grid.RowSpan="2">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!--#region Поля для ввода : Выбор киллера, выбор платформы, анонимный ли игрок, вышел ли игрок, ассоциация -->

                                        <DockPanel Grid.Row="0">

                                            <Button Content="+"
                                                    Style="{StaticResource Button.AddingDependentData}"
                                                    Command="{Binding OpenKillerWindowCommand}" 
                                                    DockPanel.Dock="Right"
                                                    ToolTip="Добавить киллера, улучшение, перк"/>

                                            <ComboBox ItemsSource="{Binding Killers}"
                                                      SelectedItem="{Binding SelectedKiller}"                         
                                                      DisplayMemberPath="KillerName"
                                                      Style="{StaticResource BaseComboBox}"/>

                                        </DockPanel>

                                        <DockPanel Grid.Row="1">

                                            <Button Content="+"
                                                    Command="{Binding OpenPlatformWindowCommand}" 
                                                    Style="{StaticResource Button.AddingDependentData}"
                                                    DockPanel.Dock="Right"
                                                    ToolTip="Добавить игровую платформу"/>

                                            <ComboBox ItemsSource="{Binding Platforms}" 
                                                      SelectedItem="{Binding SelectedKillerPlatform}"  
                                                      DisplayMemberPath="PlatformName"
                                                      Style="{StaticResource BaseComboBox}"/>

                                        </DockPanel>

                                        <CheckBox Grid.Row="2" 
                                                  Content="Анонимный?"
                                                  IsChecked="{Binding KillerAnonymousMode}"
                                                  Style="{StaticResource AddMatch.CheckBox.InputData}"/>

                                        <CheckBox Grid.Row="3" 
                                                  Content="Игрок вышел?" 
                                                  IsChecked="{Binding KillerBot}"
                                                  Style="{StaticResource AddMatch.CheckBox.InputData}"/>

                                        <DockPanel Grid.Row="4">

                                            <Button Content="+"
                                                    Command="{Binding OpenPlayerAssociationWindowCommand}" 
                                                    Style="{StaticResource Button.AddingDependentData}"
                                                    DockPanel.Dock="Right"
                                                    ToolTip="Добавить игровую ассоциацию"/>

                                            <ComboBox ItemsSource="{Binding KillerPlayerAssociations}"
                                                      SelectedItem="{Binding SelectedKillerPlayerAssociation}"
                                                      DisplayMemberPath="PlayerAssociationName"
                                                      Style="{StaticResource BaseComboBox}"/>

                                        </DockPanel>

                                        <!--#endregion-->

                                    </Grid>

                                    <!--#region Поля для ввода : Престиж, счет -->

                                    <DockPanel Grid.Column="0" Grid.Row="2">

                                        <TextBlock Text="Престиж:"                                                   
                                                   Style="{StaticResource AddMatch.TextBlock.InputData}"
                                                   Margin="0"
                                                   DockPanel.Dock="Top"/>

                                        <TextBox Text="{Binding KillerPrestige}"
                                                 Style="{StaticResource AddMatch.TextBox.InputData}"
                                                 Margin="0"
                                                 DockPanel.Dock="Top"/>

                                        <TextBlock Text="Счет:"
                                                   Style="{StaticResource AddMatch.TextBlock.InputData}"
                                                   Margin="0"
                                                   DockPanel.Dock="Top"/>

                                        <TextBox Text="{Binding KillerAccount}"
                                                 Style="{StaticResource AddMatch.TextBox.InputData}"
                                                 DockPanel.Dock="Top"
                                                 Margin="0"/>

                                    </DockPanel>

                                    <!--#endregion-->

                                </Grid>
                            </Border>

                            <!--#endregion-->

                            <!--#region Билд (Перки + аддоны) -->

                            <Border Grid.Row="1" Grid.Column="1" Margin="5,0,5,0" Style="{StaticResource AddMatch.Border.InputData}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Row="0" Grid.ColumnSpan="4"
                                            Style="{StaticResource AddMatch.Border.Header}">
                                        <TextBlock Text="Билд" 
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>

                                    <!--#region Перки : Название -->

                                    <TextBlock Grid.Column="0" Grid.Row="1"  
                                               Text="Перк I:"
                                               Style="{StaticResource AddMatch.TextBlock.InputData}"
                                               HorizontalAlignment="Center"/>

                                    <TextBlock Grid.Column="1" Grid.Row="1"  
                                               Text="Перк II:"
                                               Style="{StaticResource AddMatch.TextBlock.InputData}"
                                               HorizontalAlignment="Center"/>

                                    <TextBlock Grid.Column="2" Grid.Row="1"  
                                               Text="Перк III:"
                                               Style="{StaticResource AddMatch.TextBlock.InputData}"
                                               HorizontalAlignment="Center"/>

                                    <TextBlock Grid.Column="3" Grid.Row="1"  
                                               Text="Перк IV:"
                                               Style="{StaticResource AddMatch.TextBlock.InputData}"
                                               HorizontalAlignment="Center"/>

                                    <!--#endregion-->

                                    <!--#region Перки : Изображение -->
                                    
                                    <Image Grid.Column="0" Grid.Row="2"
                                           Source="{Binding SelectedKillerFirstPerk.PerkImage}" d:Source="D:\Изображение для программы по ДБД\Киллеры\Перки\21_Мор\36236f46-c56a-4f3d-8a19-33ceb04a1712.png"
                                           ToolTip="{Binding SelectedKillerFirstPerk.PerkName}"
                                           Style="{StaticResource Image.AddMatch.SelectedPerk}"/>
                                    
                                    <Image Grid.Column="1" Grid.Row="2" 
                                           Source="{Binding SelectedKillerSecondPerk.PerkImage}" d:Source="D:\Изображение для программы по ДБД\Киллеры\Перки\24_Немезис\067d8198-e184-4394-ae5e-62bf61a960bd.png"
                                           ToolTip="{Binding SelectedKillerSecondPerk.PerkName}"
                                           Style="{StaticResource Image.AddMatch.SelectedPerk}"/>

                                    <Image Grid.Column="2" Grid.Row="2" 
                                           Source="{Binding SelectedKillerThirdPerk.PerkImage}" d:Source="D:\Изображение для программы по ДБД\Киллеры\Перки\36_Лич\df0dcb79-f852-4494-b32c-302d404f6bb0.png"
                                           ToolTip="{Binding SelectedKillerThirdPerk.PerkName}"
                                           Style="{StaticResource Image.AddMatch.SelectedPerk}"/>

                                    <Image Grid.Column="3" Grid.Row="2"
                                           Source="{Binding SelectedKillerFourthPerk.PerkImage}" d:Source="D:\Изображение для программы по ДБД\Киллеры\Перки\37_Темный властелин\Алчность.png"
                                           ToolTip="{Binding SelectedKillerFourthPerk.PerkName}"
                                           Style="{StaticResource Image.AddMatch.SelectedPerk}"/>

                                    <!--#endregion-->


                                    <!--#region Улучшения : Название -->

                                    <TextBlock Grid.Column="0" Grid.Row="3"  
                                               Text="Улучшение I:"
                                               Style="{StaticResource AddMatch.TextBlock.InputData}"
                                               HorizontalAlignment="Center"/>

                                    <TextBlock Grid.Column="1" Grid.Row="3"  
                                               Text="Улучшение II:"
                                               Style="{StaticResource AddMatch.TextBlock.InputData}"
                                               HorizontalAlignment="Center"/>

                                    <!--#endregion-->

                                    <!--#region Улучшения : Изображение -->

                                    <Image Grid.Column="0" Grid.Row="5" 
                                           Source="{Binding SelectedKillerFirstAddon.AddonImage}" d:Source="D:\Изображение для программы по ДБД\Киллеры\Аддоны\15_Чума\Черный фимиам.png"
                                           ToolTip="{Binding SelectedKillerFirstAddon.AddonName}"
                                           Style="{StaticResource Image.AddMatch.SelectedAddon}"/>

                                    <Image Grid.Column="1" Grid.Row="5" 
                                           Source="{Binding SelectedKillerSecondAddon.AddonImage}" d:Source="D:\Изображение для программы по ДБД\Киллеры\Аддоны\15_Чума\Радужная печать.png"
                                           ToolTip="{Binding SelectedKillerSecondAddon.AddonName}"
                                           Style="{StaticResource Image.AddMatch.SelectedAddon}"/>

                                    <!--#endregion-->

                                </Grid>
                            </Border>

                            <!--#endregion-->

                            <!--#region Подношение -->

                            <Border Grid.Row="1" Grid.Column="2" Margin="5,0,5,0" Style="{StaticResource AddMatch.Border.InputData}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Row="0" Grid.ColumnSpan="4" 
                                            Style="{StaticResource AddMatch.Border.Header}">
                                        <TextBlock Text="Подношение" 
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>

                                    <!--#region Выбор роли -->

                                    <DockPanel Grid.Column="0" Grid.Row="1">

                                        <TextBlock Text="Игровая роль: "
                                                   Style="{StaticResource AddMatch.TextBlock.InputData}"
                                                   DockPanel.Dock="Left"/>

                                        <Button Content="+"
                                                Command="{Binding OpenRoleWindowCommand}" 
                                                Style="{StaticResource Button.AddingDependentData}"
                                                DockPanel.Dock="Right"
                                                ToolTip="Добавить роль"/>

                                        <ComboBox ItemsSource="{Binding KillerRoles}"
                                                  SelectedItem="{Binding SelectedKillerRole}"                         
                                                  DisplayMemberPath="RoleName"
                                                  Style="{StaticResource BaseComboBox}"/>

                                    </DockPanel>

                                    <!--#endregion-->

                                    <!--#region Подношениие -->

                                    <TextBlock Grid.Column="0" Grid.Row="2"
                                               Text="Подношение"
                                               HorizontalAlignment="Center"
                                               FontSize="20"
                                               Style="{StaticResource AddMatch.TextBlock.InputData}"/>

                                    <Button Grid.Column="0" Grid.Row="2"
                                            Content="+"
                                            Command="{Binding OpenOfferingWindowCommand}" 
                                            Style="{StaticResource Button.AddingDependentData}"
                                            DockPanel.Dock="Right"
                                            ToolTip="Добавить подношение"/>

                                    <Image Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" 
                                           Source="{Binding SelectedKillerOffering.OfferingImage}" d:Source="D:\Изображение для программы по ДБД\Подношение\Убийца\Эбеновое Memento Mori.png"
                                           ToolTip="{Binding SelectedKillerOffering.OfferingName}"
                                           Style="{StaticResource Image.AddMatch.SelectedOffering}"/>

                                    <!--#endregion-->

                                </Grid>
                            </Border>

                            <!--#endregion-->


                            <!--#region Список перков -->

                            <DockPanel Grid.Row="2" Grid.Column="0" 
                                       VerticalAlignment="Top" 
                                       Margin="10,10,10,10">

                                <TextBlock Text="Поиск: " 
                                           Width="Auto" 
                                           TextAlignment="Center" 
                                           VerticalAlignment="Center" 
                                           DockPanel.Dock="Left"/>

                                <TextBox Text="{Binding SearchKillerPerkInput, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource AddMatch.TextBox.Search}"
                                         Margin="10,0,10,0"/>
                            </DockPanel>

                            <Border Grid.Row="2" Grid.Column="0" 
                                    Style="{StaticResource AddMatch.Border.InputData}"
                                    Margin="10,45,10,10">

                                <ListView ItemsSource="{Binding KillerPerks}"
                                          SelectedItem="{Binding SelectedKillerPerk}" d:ItemsSource="{d:SampleData ItemCount=20}"
                                          ItemContainerStyle="{StaticResource AnimatedListViewItemStyle}"
                                          ItemTemplate="{StaticResource AddMatch.KillerPerk}"
                                          Style="{StaticResource AddMatchWindow.DataSelection}">
                                    <ListView.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel/>
                                        </ItemsPanelTemplate>
                                    </ListView.ItemsPanel>
                                    
                                    <ListView.ContextMenu>
                                        <ContextMenu >
                                            <MenuItem Header="Выбрать I перк" 
                                                      Command="{Binding SelectedKillerFirstPerkCommand}"/>
                                            <MenuItem Header="Выбрать II перк" 
                                                      Command="{Binding SelectedKillerSecondPerkCommand}"/>
                                            <MenuItem Header="Выбрать III перк" 
                                                      Command="{Binding SelectedKillerThirdPerkCommand}"/>
                                            <MenuItem Header="Выбрать IV перк"
                                                      Command="{Binding SelectedKillerFourthPerkCommand}"/>
                                        </ContextMenu>
                                    </ListView.ContextMenu>

                                </ListView>

                            </Border>

                            <!--#endregion-->

                            <!--#region Список улучшений -->

                            <Border Grid.Row="2" Grid.Column="1" 
                                    Style="{StaticResource AddMatch.Border.InputData}"
                                    Margin="10,45,10,10">

                                <ListView ItemsSource="{Binding KillerAddons}" 
                                          SelectedItem="{Binding SelectedKillerAddon}" d:ItemsSource="{d:SampleData ItemCount=20}"
                                          ItemContainerStyle="{StaticResource AnimatedListViewItemStyle}"
                                          ItemTemplate="{StaticResource AddMatch.KillerAddon}"
                                          Style="{StaticResource AddMatchWindow.DataSelection}">
                                    <ListView.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel/>
                                        </ItemsPanelTemplate>
                                    </ListView.ItemsPanel>

                                    <ListView.ContextMenu>
                                        <ContextMenu >
                                            <MenuItem Header="Выбрать  I аддон" 
                                                      Command="{Binding SelectedKillerFirstAddonCommand}"/>
                                            <MenuItem Header="Выбрать II аддон" 
                                                      Command="{Binding SelectedKillerSecondAddonCommand}"/>
                                        </ContextMenu>
                                    </ListView.ContextMenu>

                                </ListView>

                            </Border>

                            <!--#endregion-->

                            <!--#region Список подношений -->

                            <Border Grid.Row="2" Grid.Column="2" 
                                    Style="{StaticResource AddMatch.Border.InputData}"
                                    Margin="10,45,10,10">

                                <ListView ItemsSource="{Binding KillerOfferings}" 
