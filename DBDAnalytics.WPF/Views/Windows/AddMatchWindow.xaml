                                            <Border Style="{StaticResource AddMatch.Border.StartGame}"
                                                    DockPanel.Dock="Top">
                                                <Image Source="{Binding StartMatchImage}" 
                                                       Margin="10"/>
                                            </Border>
                                        </DockPanel>
                                    </Border>

                                    <Border Grid.Row="1" Grid.RowSpan="2" Grid.Column="1" 
                                            Style="{StaticResource AddMatch.Border.InputData}"
                                            VerticalAlignment="Stretch"
                                            Margin="10,10,10,10">
                                        <DockPanel>

                                            <!--#region Основная информация -->

                                            <Border Grid.Row="0" Grid.ColumnSpan="2"
                                                    Style="{StaticResource AddMatch.Border.Header}"
                                                    DockPanel.Dock="Top">
                                                <TextBlock Text="Основная информация" 
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>

                                            <Grid DockPanel.Dock="Top">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <!--#region Названия -->

                                                <TextBlock Grid.Row="0" 
                                                           Text="Дата игры:" 
                                                           Style="{StaticResource AddMatch.TextBlock.InputData}"
                                                           FontSize="14"/>

                                                <TextBlock Grid.Row="1" 
                                                           Text="Длительность:"
                                                           Style="{StaticResource AddMatch.TextBlock.InputData}"
                                                           FontSize="14"/>

                                                <TextBlock Grid.Row="2"
                                                           Text="Кол-во килов:"
                                                           Style="{StaticResource AddMatch.TextBlock.InputData}"
                                                           FontSize="14"/>

                                                <TextBlock Grid.Row="3" 
                                                           Text="Кол-во повесов:"
                                                           Style="{StaticResource AddMatch.TextBlock.InputData}"
                                                           FontSize="14"/>

                                                <TextBlock Grid.Row="4" 
                                                           Text="Генераторов:"
                                                           Style="{StaticResource AddMatch.TextBlock.InputData}"
                                                           FontSize="14"/>

                                                <TextBlock Grid.Row="5" 
                                                           Text="Карта:"
                                                           Style="{StaticResource AddMatch.TextBlock.InputData}"
                                                           FontSize="14"/>

                                                <!--#endregion-->

                                                <!--#region Поля ввода -->

                                                <DatePicker Grid.Column="1" Grid.Row="0"
                                                            SelectedDate="{Binding SelectedDateTimeGameMatch}"
                                                            Margin="5"
                                                            HorizontalAlignment="Stretch"/>

                                                <TextBlock Grid.Column="1" Grid.Row="1" 
                                                           Margin="5"
                                                           Foreground="White"
                                                           Text="{Binding DurationMatch}" d:Text="00:15:33"
                                                           HorizontalAlignment="Stretch"/>

                                                <TextBlock Grid.Column="1" Grid.Row="2" 
                                                           Text="{Binding CountKills}" d:Text="3"
                                                           HorizontalAlignment="Stretch" 
                                                           Margin="5"
                                                           TextAlignment="Left"/>

                                                <TextBox Grid.Column="1" Grid.Row="3"  
                                                         Text="{Binding CountHooks}" d:Text="11"
                                                         Style="{StaticResource AddMatch.TextBox.InputData}"
                                                         Margin="5"/>

                                                <TextBox Grid.Column="1" Grid.Row="4" 
                                                         Text="{Binding CountNumberRecentGenerators}"
                                                         Style="{StaticResource AddMatch.TextBox.InputData}"
                                                         Margin="5"/>

                                                <DockPanel Grid.Column="1" Grid.Row="5" >

                                                    <Button Content="+"
                                                            Command="{Binding OpenMeasurementWindowCommand}" 
                                                            Style="{StaticResource Button.AddingDependentData}"
                                                            DockPanel.Dock="Right"
                                                            ToolTip="Добавить игровую ассоциацию"/>

                                                    <ComboBox ItemsSource="{Binding Maps}"
                                                              SelectedItem="{Binding SelectedMap}"
                                                              DisplayMemberPath="MapName"
                                                              Style="{StaticResource BaseComboBox}"
                                                              Margin="5"/>

                                                </DockPanel>



                                                <!--#endregion-->

                                            </Grid>

                                            <!--#endregion-->

                                            <!--#region Дополнительная информация -->

                                            <Border Grid.Row="0" Grid.ColumnSpan="2"
                                                    Style="{StaticResource AddMatch.Border.Header}"
                                                    DockPanel.Dock="Top">
                                                <TextBlock Text="Дополнительная информация" 
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>

                                            <Grid DockPanel.Dock="Top">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <!--#region Названия -->

                                                <TextBlock Grid.Row="0" 
                                                           Text="Патч:" 
                                                           Style="{StaticResource AddMatch.TextBlock.InputData}"
                                                           FontSize="14"/>

                                                <TextBlock Grid.Row="1" 
                                                           Text="Режим игры:"
                                                           Style="{StaticResource AddMatch.TextBlock.InputData}"
                                                           FontSize="14"/>

                                                <TextBlock Grid.Row="2"
                                                           Text="Игровой ивент:"
                                                           Style="{StaticResource AddMatch.TextBlock.InputData}"
                                                           FontSize="14"/>

                                                <TextBlock Grid.Row="3" 
                                                           Text="Кто поставил карту?:"
                                                           Style="{StaticResource AddMatch.TextBlock.InputData}"
                                                           FontSize="14"/>

                                                <TextBlock Grid.Row="4" 
                                                           Text="Чья карта выпала?:"
                                                           Style="{StaticResource AddMatch.TextBlock.InputData}"
                                                           FontSize="14"/>

                                                <TextBlock Grid.Row="5" 
                                                           Text="Атрибут матча:"
                                                           Style="{StaticResource AddMatch.TextBlock.InputData}"
                                                           FontSize="14"/>

                                                <!--#endregion-->

                                                <!--#region Поля ввода -->

                                                <DockPanel Grid.Column="1" Grid.Row="0">

                                                    <Button Content="+"
                                                            Command="{Binding OpenPatchWindowCommand}" 
                                                            Style="{StaticResource Button.AddingDependentData}"
                                                            DockPanel.Dock="Right"
                                                            ToolTip="Добавить патч"/>

                                                    <ComboBox ItemsSource="{Binding Patches}"
                                                              SelectedItem="{Binding SelectedPatch}"
                                                              DisplayMemberPath="PatchNumber"
                                                              Style="{StaticResource BaseComboBox}"
                                                              Margin="5"/>

                                                </DockPanel>

                                                <DockPanel Grid.Column="1" Grid.Row="1">

                                                    <Button Content="+"
                                                            Command="{Binding OpenGameModeWindowCommand}" 
                                                            Style="{StaticResource Button.AddingDependentData}"
                                                            DockPanel.Dock="Right"
                                                            ToolTip="Добавить игровой режим"/>

                                                    <ComboBox ItemsSource="{Binding GameModes}"
                                                              SelectedItem="{Binding SelectedGameMode}"
                                                              DisplayMemberPath="GameModeName"
                                                              Style="{StaticResource BaseComboBox}"
                                                              Margin="5"/>

                                                </DockPanel>

                                                <DockPanel Grid.Column="1" Grid.Row="2">

                                                    <Button Content="+"
                                                            Command="{Binding OpenGameEventWindowCommand}" 
                                                            Style="{StaticResource Button.AddingDependentData}"
                                                            DockPanel.Dock="Right"
                                                            ToolTip="Добавить игровое событие"/>

                                                    <ComboBox ItemsSource="{Binding GameEvents}"
                                                              SelectedItem="{Binding SelectedGameEvent}"
                                                              DisplayMemberPath="GameEventName"
                                                              Style="{StaticResource BaseComboBox}"
                                                              Margin="5"/>

                                                </DockPanel>

                                                <DockPanel Grid.Column="1" Grid.Row="3">

                                                    <Button Content="+"
                                                            Command="{Binding OpenWhoPlacedMapWindowCommand}" 
                                                            Style="{StaticResource Button.AddingDependentData}"
                                                            DockPanel.Dock="Right"
                                                            ToolTip="Добавить информацию о том, кто может ставить карты"/>

                                                    <ComboBox ItemsSource="{Binding WhoPlacedMaps}"
                                                              SelectedItem="{Binding SelectedWhoPlacedMap}" 
                                                              DisplayMemberPath="WhoPlacedMapName"
                                                              Style="{StaticResource BaseComboBox}"
                                                              Margin="5"/>

                                                </DockPanel>

                                                <DockPanel Grid.Column="1" Grid.Row="4" >

                                                    <Button Content="+"
                                                            Command="{Binding OpenWhoPlacedMapWindowCommand}" 
                                                            Style="{StaticResource Button.AddingDependentData}"
                                                            DockPanel.Dock="Right"
                                                            ToolTip="Добавить информацию о том, кто может ставить карты"/>

                                                    <ComboBox ItemsSource="{Binding WhoPlacedMaps}"
                                                              SelectedItem="{Binding SelectedWhoPlacedMapWin}"
                                                              DisplayMemberPath="WhoPlacedMapName"
                                                              Style="{StaticResource BaseComboBox}"
                                                              Margin="5"/>

                                                </DockPanel>

                                                <DockPanel Grid.Column="1" Grid.Row="5" >

                                                    <Button Content="+"
                                                            Command="{Binding }" 
                                                            Style="{StaticResource Button.AddingDependentData}"
                                                            DockPanel.Dock="Right"
                                                            ToolTip="Добавить атрибуты матча"/>

                                                    <ComboBox ItemsSource="{Binding MatchAttributes}"
                                                              SelectedItem="{Binding SelectedMatchAttribute}"
                                                              DisplayMemberPath="AttributeName"
                                                              Style="{StaticResource BaseComboBox}"
                                                              Margin="5"/>

                                                </DockPanel>

                                                <!--#endregion-->

                                            </Grid>

                                            <!--#endregion-->

                                            <!--#region Описание -->

                                            <Border Grid.Row="0" Grid.ColumnSpan="2"
                                                    Style="{StaticResource AddMatch.Border.Header}"
                                                    DockPanel.Dock="Top">
                                                <TextBlock Text="Описание" 
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>

                                            <TextBox Text="{Binding DescriptionGame}"
                                                     Style="{StaticResource AddMatch.TextBox.InputData}"/>

                                            <!--#endregion-->

                                        </DockPanel>
                                    </Border>

                                </Grid>

                                <!--#endregion-->

                            </Grid>
                        </ScrollViewer>
                    </TabItem>

                    <!--#endregion-->

                </TabControl>

                <!--#endregion-->

            </Grid>
        </Grid>
    </Border>
</Window> 