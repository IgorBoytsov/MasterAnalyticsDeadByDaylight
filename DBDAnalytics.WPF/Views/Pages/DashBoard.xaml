<Page x:Class="DBDAnalytics.WPF.Views.Pages.DashBoard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DBDAnalytics.WPF.Views.Pages" 
      xmlns:pagevm="clr-namespace:DBDAnalytics.WPF.ViewModels.PageVM" 
      xmlns:converter="clr-namespace:DBDAnalytics.WPF.ValueConverters"
      xmlns:enum="clr-namespace:DBDAnalytics.WPF.Enums"
      d:DataContext="{d:DesignInstance Type=pagevm:DashBoardVM}"
      mc:Ignorable="d" 
      d:Height="700" d:Width="1200"
      Title="DashBoard">

    <Page.Resources>

        <converter:TimeStringRemoveZeroHoursConverter x:Key="TimeStringRemoveZeroHoursConverter" CharactersToRemove="3"/>
        <converter:CountMatchToStringConverter x:Key="CountMatchToStringConverter"/>
        <converter:StatusMatchToStringConverter x:Key="StatusMatchToStringConverter"/>
        <converter:StatusMatchToColorConverter x:Key="StatusMatchToColorConverter"/>

        <!--#region DataGrid.Style -->

        <Style x:Key="DataGrid.Match.Style" TargetType="DataGrid">
            <Setter Property="RowHeaderWidth" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <!--<Setter Property="Margin" Value="15,0,15,0"/>-->
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
        </Style>

        <!--#endregion-->

        <!--#region DataGrid.RowStyle -->

        <Style x:Key="DataGrid.Match.DataGridRow" TargetType="DataGridRow">
            <Setter Property="Background" Value="{StaticResource Brush.AppCardBackground}" />
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="3"/>
            <Setter Property="Margin" Value="15,1,15,1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridRow">
                        <Border x:Name="RowBorder"
                                                CornerRadius="10"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                Padding="{TemplateBinding Padding}"
                                                Margin="{TemplateBinding Margin}">
                            <SelectiveScrollingGrid>
                                <SelectiveScrollingGrid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </SelectiveScrollingGrid.ColumnDefinitions>
                                <SelectiveScrollingGrid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </SelectiveScrollingGrid.RowDefinitions>
                                <DataGridCellsPresenter Grid.Column="1"
                                                                        ItemsPanel="{TemplateBinding ItemsPanel}"
                                                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                <DataGridDetailsPresenter Grid.Column="1"
                                                                          Grid.Row="1"
                                                                          SelectiveScrollingGrid.SelectiveScrollingOrientation="{Binding AreRowDetailsFrozen, Converter={x:Static DataGrid.RowDetailsScrollingConverter}, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                                                          Visibility="{TemplateBinding DetailsVisibility}"/>
                                <DataGridRowHeader Grid.RowSpan="2"
                                                                   SelectiveScrollingGrid.SelectiveScrollingOrientation="Vertical"
                                                                   Visibility="{Binding HeadersVisibility, Converter={x:Static DataGrid.HeadersVisibilityConverter}, ConverterParameter={x:Static DataGridHeadersVisibility.Row}, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"/>
                            </SelectiveScrollingGrid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <!--<EventSetter Event="PreviewMouseDown" Handler="DataGridRow_PreviewMouseDown"/>-->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#34495E"/>
                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.0" ScaleY="1.0"/>
                        </Setter.Value>
                    </Setter>
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                                                                  To="1.02" Duration="0:0:0.1"/>
                                <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                                                                 To="1.02" Duration="0:0:0.1"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                                                                 To="1.0" Duration="0:0:0.1"/>
                                <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                                                                 To="1.0" Duration="0:0:0.1"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#34495E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--<DataGrid.RowStyle>
            <Style TargetType="DataGridRow">
                <Setter Property="Background" Value="{StaticResource Brush.AppCardBackground}" />
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="Padding" Value="3"/>
                <EventSetter Event="PreviewMouseDown" Handler="DataGridRow_PreviewMouseDown"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#34495E"/>
                    </Trigger>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Background" Value="#34495E"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </DataGrid.RowStyle>-->

        <!--#endregion-->

        <!--#region DataGrid.RowHeaderStyle-->

        <Style x:Key="DataGrid.Match.RowHeaderStyle" TargetType="DataGridRowHeader">
            <Setter Property="Background" Value="LightGray"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Width" Value="50"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="ContentTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding DataContext.Index, RelativeSource={RelativeSource AncestorType=DataGridRowHeader, Mode=FindAncestor}}"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--#endregion-->

        <!--#region DataGrid.ColumnHeaderStyle -->

        <Style x:Key="DataGrid.Match.DataGridColumnHeader" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="LightSteelBlue"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>

        </Style>

        <!--#endregion-->

        <!--#region DataGrid.CellStyle -->

        <!-- Цвета в тригерах меняются у внутренего контента ячейки. -->
        <Style x:Key="DataGrid.Match.DataGridCell" TargetType="DataGridCell">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <!--#endregion-->

        <!--#region TextBlock.Style отображение колличесто матчей -->

        <Style x:Key="TextBlock.DisplayCountmatch" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="0,0,50,0"/>
        </Style>

        <!--#endregion-->

    </Page.Resources>

    <TabControl Style="{StaticResource App.TabControl}" >

        <TabItem Header="Матчи - Киллер">

            <!--#region Матчи с фильтрацией - Киллеры. Управление матчами. -->

            <Grid Grid.Column="0" Grid.Row="0"
                  Background="{StaticResource Brush.AppBackground}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--#region Popup - Фильтр матчей киллера -->

                <Popup IsOpen="{Binding IsOpenKillerFilter}" 
                       PlacementTarget="{Binding ElementName=FilterKillerMatchButton}" 
                       Placement="Right"
                       StaysOpen="False"
                       AllowsTransparency="True">

                    <Border Style="{StaticResource Border.Popup}">
                        <DockPanel MaxWidth="1000">

                            <WrapPanel Margin="0,10,0,10" DockPanel.Dock="Top">

                                <!--#region Фильтрация по киллеру -->

                                <Border Style="{StaticResource Popup.Border.InputData}">
                                    <StackPanel Margin="0,0,20,0">

                                        <Border Grid.ColumnSpan="2"
                                                Style="{StaticResource AddMatch.Border.Header}"
                                                Width="200">
                                            <TextBlock Text="Киллер" Style="{StaticResource TextBlock.Header}"/>
                                        </Border>

                                        <StackPanel>
                                            <DockPanel>

                                                <TextBlock Text="Киллер" 
                                                           Style="{StaticResource TextBlock.Popup}"
                                                           Margin="0,0,10,0"
                                                           DockPanel.Dock="Top"/>

                                                <ComboBox ItemsSource="{Binding Killers}" 
                                                          SelectedItem="{Binding SelectedKillerFilter}"
                                                          SelectedIndex="{Binding SelectedKillerFilterIndex}"
                                                          Style="{StaticResource BaseComboBox}"
                                                          DockPanel.Dock="Top">
                                                    <ComboBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding KillerName}" ToolTipService.Placement="Right" ToolTipService.InitialShowDelay="10">
                                                                <TextBlock.ToolTip>
                                                                    <Image Source="{Binding KillerImage}" Width="100" Height="100"/>
                                                                </TextBlock.ToolTip>
                                                            </TextBlock>
                                                        </DataTemplate>
                                                    </ComboBox.ItemTemplate>
                                                </ComboBox>

                                            </DockPanel>
                                        </StackPanel>

                                    </StackPanel>
                                </Border>

                                <!--#endregion-->

                                <!--#region Фильтрация по игре -->

                                <Border Style="{StaticResource Popup.Border.InputData}">
                                    <StackPanel Margin="0,0,20,0">

                                        <Border Grid.ColumnSpan="2"
                                                Style="{StaticResource AddMatch.Border.Header}"
                                                Width="200">
                                            <TextBlock Text="Игра" Style="{StaticResource TextBlock.Header}"/>
                                        </Border>

                                        <StackPanel>

                                            <DockPanel>

                                                <TextBlock Text="Режим" 
                                                           Style="{StaticResource TextBlock.Popup}"
                                                           Margin="0,0,10,0"
                                                           DockPanel.Dock="Top"/>

                                                <ComboBox ItemsSource="{Binding GameModes}" 
                                                          SelectedItem="{Binding SelectedGameModeKillerFilter}" 
                                                          DisplayMemberPath="GameModeName" 
                                                          Style="{StaticResource BaseComboBox}"
                                                          DockPanel.Dock="Top"/>

                                            </DockPanel>

                                            <DockPanel>

                                                <TextBlock Text="Событие" 
                                                           Style="{StaticResource TextBlock.Popup}"
                                                           Margin="0,0,10,0"
                                                           DockPanel.Dock="Top"/>

                                                <ComboBox ItemsSource="{Binding GameEvents}" 
                                                          SelectedItem="{Binding SelectedGameEventKillerFilter}"
                                                          DisplayMemberPath="GameEventName"
                                                          Style="{StaticResource BaseComboBox}"
                                                          DockPanel.Dock="Top"/>

                                            </DockPanel>

                                            <DockPanel>

                                                <TextBlock Text="Патч" 
                                                           Style="{StaticResource TextBlock.Popup}"
                                                           Margin="0,0,10,0"
                                                           DockPanel.Dock="Top"/>

                                                <ComboBox ItemsSource="{Binding Patches}" 
                                              SelectedItem="{Binding SelectedPatchKillerFilter}" 
                                              DisplayMemberPath="PatchNumber"
                                              Style="{StaticResource BaseComboBox}"
                                              DockPanel.Dock="Top"/>

                                            </DockPanel>

                                            <DockPanel>
                                                <StackPanel Orientation="Vertical">
                                                    <CheckBox Content="Учитывать?" 
                                                  Foreground="White" 
                                                  IsChecked="{Binding IsConsiderDateTimeKillerFilter}" 
                                                  Margin="0,0,0,5"
                                                  ToolTip="Если не учитывать, то будет выведины последние игры за месяц."/>
                                                    <WrapPanel>
                                                        <TextBlock Text="От: " 
                                                       Foreground="White"
                                                       VerticalAlignment="Center"/>
                                                        <DatePicker SelectedDate="{Binding StartTimeKillerFilter}"/>
                                                        <TextBlock Text="До: " 
                                                       Foreground="White"
                                                       VerticalAlignment="Center"/>
                                                        <DatePicker SelectedDate="{Binding EndTimeKillerFilter}"/>
                                                    </WrapPanel>
                                                </StackPanel>
                                            </DockPanel>

                                            <DockPanel>

                                                <TextBlock Text="Атрибут" 
                                               Style="{StaticResource TextBlock.Popup}"
                                               Margin="0,0,10,0"
                                               DockPanel.Dock="Top"/>

                                                <ComboBox ItemsSource="{Binding MatchAttributes}" 
                                              SelectedItem="{Binding SelectedMatchAttributeKillerFilter}" 
                                              DisplayMemberPath="AttributeName"
                                              Style="{StaticResource BaseComboBox}"
                                              DockPanel.Dock="Top"/>

                                            </DockPanel>

                                        </StackPanel>

                                    </StackPanel>
                                </Border>
                                <!--#endregion-->

                                <!--#region Сортировка -->

                                <Border Style="{StaticResource Popup.Border.InputData}">
                                    <StackPanel Margin="0,0,20,0">

                                        <Border Grid.ColumnSpan="2"
                                                Style="{StaticResource AddMatch.Border.Header}"
                                                Width="200">
                                            <TextBlock Text="Сортировка" 
                                           Style="{StaticResource TextBlock.Header}"/>
                                        </Border>

                                        <StackPanel>
                                            <DockPanel>

                                                <TextBlock Text="Сортировка" 
                                               Style="{StaticResource TextBlock.Popup}"
                                               Margin="0,0,10,0"
                                               DockPanel.Dock="Top"/>

                                                <ComboBox ItemsSource="{Binding SortingMatch}" 
                                              SelectedItem="{Binding SelectedSortingMatch}"
                                              Style="{StaticResource BaseComboBox}"
                                              DockPanel.Dock="Top"/>


                                            </DockPanel>
                                        </StackPanel>

                                    </StackPanel>
                                </Border>
                                <!--#endregion-->

                            </WrapPanel>

                            <WrapPanel>
                                <Button Content="Применить" Command="{Binding ApplyKillerFilterCommand}" Style="{StaticResource Button.Base}"/>
                                <Button Content="Сбросить фильтр" Command="{Binding ApplyKillerFilterCommand}" Style="{StaticResource Button.Base}"/>
                            </WrapPanel>

                        </DockPanel>
                    </Border>
                </Popup>


                <!--#endregion-->

                <!--#region Управление списком - киллеров -->

                <WrapPanel Grid.Row="0" Grid.Column="0">

                    <Button x:Name="FilterKillerMatchButton" Content="Фильтр"
                            Command="{Binding OpenKillerFilterPopupCommand}"
                            Style="{StaticResource Button.Base}"/>

                    <Button Content="⬅"
                            Command="{Binding PreviousKillerFilterCommand}"
                            Style="{StaticResource Button.Base}"
                            ToolTip="Следующий киллер"
                            Margin="5"/>

                    <Button Content="⮕"
                            Command="{Binding NextKillerFilterCommand}"
                            Style="{StaticResource Button.Base}"
                            ToolTip="Предыдущий киллер"
                            Margin="5"/>

                    <Menu VerticalAlignment="Center" FontSize="16" Margin="10,0,0,0">
                        <MenuItem Header="Детализация матчей по">
                            <MenuItem Header="Убийцам" Command="{Binding KillerDetailsForKillersCommand}"/>
                        </MenuItem>
                    </Menu>

                </WrapPanel>

                <!--#endregion-->

                <!--#region Отображение колличество матчей и выбранного киллера -->

                <TextBlock Grid.Column="0" Grid.Row="1" 
                           d:Text="Колличество матчей - 100"
                           Style="{StaticResource TextBlock.DisplayCountmatch}">
                    <TextBlock.Text>
                        <MultiBinding Converter="{StaticResource CountMatchToStringConverter}">
                            <Binding Path="KillerMatches.Count"/>
                            <Binding Path="SelectedKillerFilter"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>

                <!--#endregion-->

                <!--#region Список матчей - киллеры -->

                <DataGrid Grid.Column="0" Grid.Row="2" Visibility="Visible"
                          ItemsSource="{Binding KillerMatches}" d:ItemsSource="{d:SampleData ItemCount=10}"
                          Style="{StaticResource DataGrid.Match.Style}"
                          RowStyle="{StaticResource DataGrid.Match.DataGridRow}"
                          CellStyle="{StaticResource DataGrid.Match.DataGridCell}"
                          ColumnHeaderStyle="{StaticResource DataGrid.Match.DataGridColumnHeader}"
                          AutoGenerateColumns="False"
                          VerticalGridLinesBrush="Transparent"
                          Background="Transparent"
                          HeadersVisibility="None" 
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <!--LoadingRow="DataGrid_LoadingRow"-->

                    <!--#region Разметка строк и колонок -->

                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Киллер" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Image Source="{Binding KillerImage}"
                                           IsHitTestVisible="False"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="Дата и продолжительность" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Background="Transparent" Margin="10,0,10,0">
                                        <TextBlock Text="{Binding DateMatch, Converter={StaticResource CapitalizeDayAndDateConverter}}"
                                                   FontWeight="Bold"
                                                   FontSize="16"
                                                   IsHitTestVisible="False"/>
                                        <TextBlock Text="{Binding MatchTime, Converter={StaticResource TimeStringRemoveZeroHoursConverter}, StringFormat= Длительность: {0}}"
                                                   FontWeight="Bold"
                                                   IsHitTestVisible="False"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="Карта" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding MapName}"
                                               FontWeight="Bold"
                                               FontSize="16"
                                               IsHitTestVisible="False"
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"
                                               TextTrimming="CharacterEllipsis"
                                               TextWrapping="NoWrap"
                                               Margin="10,0,10,0"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="Статус" Width="*" CanUserSort="True" >
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding CountKill, Converter={StaticResource StatusMatchToStringConverter}, ConverterParameter={x:Static enum:StatusMatchConverter.CountKills}}"
                                               Foreground="{Binding CountKill, Converter={StaticResource StatusMatchToColorConverter}, ConverterParameter={x:Static enum:StatusMatchConverter.CountKills}}"
                                               FontWeight="Bold"
                                               FontSize="18"
                                               IsHitTestVisible="False"
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"
                                               Margin="10,0,10,0"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="Действие" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <WrapPanel HorizontalAlignment="Right" VerticalAlignment="Center" Background="Transparent" Margin="0,0,50,0">

                                        <Button Content="☆" ToolTip="Добавить в избранное"
                                                FontSize="20"
                                                Foreground="Yellow"
                                                Style="{StaticResource Button.MatchList.Action}"/>

                                        <Button Content="ℹ️" ToolTip="Открыть подробный обзор матча."
                                                FontSize="20"
                                                Foreground="LightBlue"
                                                Command="{Binding DataContext.ShowMatchDetailsCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" CommandParameter="{Binding}"
                                                Style="{StaticResource Button.MatchList.Action}"/>

                                        <Button Content="🖼️" ToolTip="Просмотр изображение матча"
                                                FontSize="20"
                                                Foreground="Green"
                                                Style="{StaticResource Button.MatchList.Action}"/>

                                        <Button Content="🗑️" ToolTip="Удалить"
                                                FontSize="20"
                                                Foreground="Red"
                                                Style="{StaticResource Button.MatchList.Action}"/>

                                    </WrapPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>

                    <!--#endregion-->

                    <!--#region Контекстное меню -->

                    <DataGrid.ContextMenu>
                        <ContextMenu>

                            <MenuItem Header="Сохранить информацию в...">
                                <MenuItem Header="Буфур обмена"/>
                                <MenuItem Header="Файл">
                                    <MenuItem Header="Текстовый"/>
                                    <MenuItem Header="Word"/>
                                    <MenuItem Header="Exel"/>
                                    <MenuItem Header="PDF"/>
                                </MenuItem>
                            </MenuItem>

                            <MenuItem Header="Применить фильтрацию по...">
                                <MenuItem Header="Киллеру"/>
                                <MenuItem Header="Карте"/>
                                <MenuItem Header="Измерению"/>
                                <MenuItem Header="Статусу матча"/>
                                <MenuItem Header="Колличеству киллов"/>
                                <MenuItem Header="Колличеству повесов"/>
                                <MenuItem Header="Колличеству генераторов"/>
                            </MenuItem>

                            <MenuItem Header="Сортировать по...">
                                <MenuItem Header="Киллеру"/>
                                <MenuItem Header="Карте"/>
                                <MenuItem Header="Измерению"/>
                                <MenuItem Header="Статусу матча"/>
                                <MenuItem Header="Колличеству киллов"/>
                                <MenuItem Header="Колличеству повесов"/>
                                <MenuItem Header="Колличеству генераторов"/>
                            </MenuItem>
                            
                        </ContextMenu>
                    </DataGrid.ContextMenu>

                    <!--#endregion-->

                </DataGrid>

                <!--#endregion-->

            </Grid>

            <!--#endregion-->

        </TabItem>

        <TabItem Header="Матчи - Выживший">

            <!--#region Матчи с фильтрацией - Выжившие. Управление матчами. -->

            <Grid Grid.Column="0" Grid.Row="0"
                  Background="{StaticResource Brush.AppBackground}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--#region Popup - Фильтр матчей выжившего -->

                <Popup IsOpen="{Binding IsOpenSurvivorFilter}" 
                       PlacementTarget="{Binding ElementName=FilterSurvivorMatchButton}" 
                       Placement="Right"
                       StaysOpen="False"
                       AllowsTransparency="True">

                    <Border Style="{StaticResource Border.Popup}">
                        <DockPanel MaxWidth="1000">

                            <WrapPanel Margin="0,10,0,10" DockPanel.Dock="Top">

                                <!--#region Фильтрация по выжившему и киллеру -->

                                <Border Style="{StaticResource Popup.Border.InputData}">
                                    <StackPanel Margin="0,0,20,0">

                                        <Border Grid.ColumnSpan="2"
                                        Style="{StaticResource AddMatch.Border.Header}"
                                        Width="200">
                                            <TextBlock Text="Выживший" Style="{StaticResource TextBlock.Header}"/>
                                        </Border>

                                        <StackPanel>

                                            <DockPanel>

                                                <TextBlock Text="Выживший" 
                                                   Style="{StaticResource TextBlock.Popup}"
                                                   Margin="0,0,10,0"
                                                   DockPanel.Dock="Top"/>

                                                <ComboBox ItemsSource="{Binding Survivors}" 
                                                  SelectedItem="{Binding SelectedSurvivorFilter}"
                                                  Style="{StaticResource BaseComboBox}"
                                                  DockPanel.Dock="Top">
                                                    <ComboBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding SurvivorName}" ToolTipService.Placement="Right" ToolTipService.InitialShowDelay="10">
                                                                <TextBlock.ToolTip>
                                                                    <Image Source="{Binding SurvivorImage}" Width="100" Height="100"/>
                                                                </TextBlock.ToolTip>
                                                            </TextBlock>
                                                        </DataTemplate>
                                                    </ComboBox.ItemTemplate>
                                                </ComboBox>

                                            </DockPanel>

                                            <DockPanel>

                                                <TextBlock Text="Киллер" 
                                                   Style="{StaticResource TextBlock.Popup}"
                                                   Margin="0,0,10,0"
                                                   DockPanel.Dock="Top"/>

                                                <ComboBox ItemsSource="{Binding Killers}" 
                                                  SelectedItem="{Binding SelectedOpponentKillerSurvivorFilter}"
                                                  Style="{StaticResource BaseComboBox}"
                                                  DockPanel.Dock="Top">
                                                    <ComboBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding KillerName}" ToolTipService.Placement="Right" ToolTipService.InitialShowDelay="10">
                                                                <TextBlock.ToolTip>
                                                                    <Image Source="{Binding KillerImage}" Width="100" Height="100"/>
                                                                </TextBlock.ToolTip>
                                                            </TextBlock>
                                                        </DataTemplate>
                                                    </ComboBox.ItemTemplate>
                                                </ComboBox>

                                            </DockPanel>

                                        </StackPanel>

                                    </StackPanel>
                                </Border>

                                <!--#endregion-->

                                <!--#region Фильтрация по игре -->

                                <Border Style="{StaticResource Popup.Border.InputData}">
                                    <StackPanel Margin="0,0,20,0">

                                        <Border Grid.ColumnSpan="2"
                                        Style="{StaticResource AddMatch.Border.Header}"
                                        Width="200">
                                            <TextBlock Text="Игра" Style="{StaticResource TextBlock.Header}"/>
                                        </Border>

                                        <StackPanel>

                                            <DockPanel>

                                                <TextBlock Text="Режим" 
                                                   Style="{StaticResource TextBlock.Popup}"
                                                   Margin="0,0,10,0"
                                                   DockPanel.Dock="Top"/>

                                                <ComboBox ItemsSource="{Binding GameModes}" 
                                                  SelectedItem="{Binding SelectedGameModeSurvivorFilter}" 
                                                  DisplayMemberPath="GameModeName" 
                                                  Style="{StaticResource BaseComboBox}"
                                                  DockPanel.Dock="Top"/>

                                            </DockPanel>

                                            <DockPanel>

                                                <TextBlock Text="Событие" 
                                                   Style="{StaticResource TextBlock.Popup}"
                                                   Margin="0,0,10,0"
                                                   DockPanel.Dock="Top"/>

                                                <ComboBox ItemsSource="{Binding GameEvents}" 
                                                  SelectedItem="{Binding SelectedGameEventSurvivorFilter}"
                                                  DisplayMemberPath="GameEventName"
                                                  Style="{StaticResource BaseComboBox}"
                                                  DockPanel.Dock="Top"/>

                                            </DockPanel>

                                            <DockPanel>

                                                <TextBlock Text="Патч" 
                                                   Style="{StaticResource TextBlock.Popup}"
                                                   Margin="0,0,10,0"
                                                   DockPanel.Dock="Top"/>

                                                <ComboBox ItemsSource="{Binding Patches}" 
                                                  SelectedItem="{Binding SelectedPatchSurvivorFilter}" 
                                                  DisplayMemberPath="PatchNumber"
                                                  Style="{StaticResource BaseComboBox}"
                                                  DockPanel.Dock="Top"/>

                                            </DockPanel>

                                            <DockPanel>
                                                <StackPanel Orientation="Vertical">
                                                    <CheckBox Content="Учитывать?" 
                                                      Foreground="White" 
                                                      IsChecked="{Binding IsConsiderDateTimeSurvivorFilter}" 
                                                      Margin="0,0,0,5"
                                                      ToolTip="Если не учитывать, то будет выведины последние игры за месяц."/>
                                                    <WrapPanel>
                                                        <TextBlock Text="От: " 
                                                           Foreground="White"
                                                           VerticalAlignment="Center"/>
                                                        <DatePicker SelectedDate="{Binding StartTimeSurvivorFilter}"/>
                                                        <TextBlock Text="До: " 
                                                           Foreground="White"
                                                           VerticalAlignment="Center"/>
                                                        <DatePicker SelectedDate="{Binding EndTimeSurvivorFilter}"/>
                                                    </WrapPanel>
                                                </StackPanel>
                                            </DockPanel>

                                            <DockPanel>

                                                <TextBlock Text="Атрибут" 
                                                   Style="{StaticResource TextBlock.Popup}"
                                                   Margin="0,0,10,0"
                                                   DockPanel.Dock="Top"/>

                                                <ComboBox ItemsSource="{Binding MatchAttributes}" 
                                                  SelectedItem="{Binding SelectedMatchAttributeSurvivorFilter}" 
                                                  DisplayMemberPath="AttributeName"
                                                  Style="{StaticResource BaseComboBox}"
                                                  DockPanel.Dock="Top"/>

                                            </DockPanel>

                                        </StackPanel>

                                    </StackPanel>
                                </Border>

                                <!--#endregion-->

                                <!--#region Сортировка -->

                                <Border Style="{StaticResource Popup.Border.InputData}">
                                    <StackPanel Margin="0,0,20,0">

                                        <Border Grid.ColumnSpan="2"
                                        Style="{StaticResource AddMatch.Border.Header}"
                                        Width="200">
                                            <TextBlock Text="Киллер" 
                                               Style="{StaticResource TextBlock.Header}"/>
                                        </Border>

                                        <StackPanel>
                                            <DockPanel>

                                                <TextBlock Text="Сортировка" 
                                                   Style="{StaticResource TextBlock.Popup}"
                                                   Margin="0,0,10,0"
                                                   DockPanel.Dock="Top"/>

                                                <ComboBox ItemsSource="{Binding SortingMatch}" 
                                                  SelectedItem="{Binding SelectedSortingMatch}"
                                                  Style="{StaticResource BaseComboBox}"
                                                  DockPanel.Dock="Top"/>


                                            </DockPanel>
                                        </StackPanel>

                                    </StackPanel>
                                </Border>

                                <!--#endregion-->

                            </WrapPanel>

                            <WrapPanel>
                                <Button Content="Применить" Command="{Binding ApplySurvivorFilterCommand}" Style="{StaticResource Button.Base}"/>
                                <Button Content="Сбросить фильтр" Command="{Binding ApplySurvivorFilterCommand}" Style="{StaticResource Button.Base}"/>
                            </WrapPanel>

                        </DockPanel>
                    </Border>
                </Popup>

                <!--#endregion-->

                <!--#region Управление списком - выжившие -->

                <WrapPanel Grid.Column="2" VerticalAlignment="Center"
                           HorizontalAlignment="Left">

                    <Button x:Name="FilterSurvivorMatchButton"
                            Grid.Column="2"
                            Content="Фильтр"
                            Command="{Binding OpenSurvivorFilterPopupCommand}"
                            Style="{StaticResource Button.Base}"
                            HorizontalAlignment="Left"/>

                    <Button Content="⬅"
                            Command="{Binding PreviousSurvivorFilterCommand}"
                            Style="{StaticResource Button.Base}"
                            ToolTip="Следующий виживший"
                            Margin="5"/>

                    <Button Content="⮕"
                            Command="{Binding NextSurvivorFilterCommand}"
                            Style="{StaticResource Button.Base}"
                            ToolTip="Предыдущий виживший"
                            Margin="5"/>

                    <Menu VerticalAlignment="Center" FontSize="16" Margin="10,0,0,0">
                        <MenuItem Header="Детализация матчей по">
                            <MenuItem Header="Убийцам" Command="{Binding KillerDetailsForSurvivorsCommand}"/>
                        </MenuItem>
                    </Menu>

                </WrapPanel>

                <!--#endregion-->

                <!--#region Отоброжение колличество матчей и выбранного выжившего -->

                <TextBlock Grid.Column="2" Grid.Row="1" 
                           d:Text="Колличество матчей - 100"
                           Style="{StaticResource TextBlock.DisplayCountmatch}">
                    <TextBlock.Text>
                        <MultiBinding Converter="{StaticResource CountMatchToStringConverter}">
                            <Binding Path="SurvivorMatches.Count"/>
                            <Binding Path="SelectedSurvivorFilter"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>

                <!--#endregion-->

                <!--#region Список матчей - выживший -->

                <DataGrid Grid.Column="2" Grid.Row="3" 
                          ItemsSource="{Binding SurvivorMatches}" d:ItemsSource="{d:SampleData ItemCount=10}"
                          Style="{StaticResource DataGrid.Match.Style}"
                          RowStyle="{StaticResource DataGrid.Match.DataGridRow}"
                          CellStyle="{StaticResource DataGrid.Match.DataGridCell}"
                          ColumnHeaderStyle="{StaticResource DataGrid.Match.DataGridColumnHeader}"
                          AutoGenerateColumns="False"
                          VerticalGridLinesBrush="Transparent"
                          Background="Transparent"
                          HeadersVisibility="None" 
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                    <!--#region Разметка строк и колонок -->

                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Выживший" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Image Source="{Binding SurvivorImage}"
                                           
                                           IsHitTestVisible="False"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="Дата и длинна" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Background="Transparent" Margin="10,0,10,0">
                                        <TextBlock Text="{Binding DateMatch, Converter={StaticResource CapitalizeDayAndDateConverter}}"
                                                   FontWeight="Bold"
                                                   FontSize="16"
                                                   IsHitTestVisible="False"/>
                                        <TextBlock Text="{Binding MatchTime, Converter={StaticResource TimeStringRemoveZeroHoursConverter}, StringFormat= Длительность: {0}}"
                                                   FontWeight="Bold"
                                                   IsHitTestVisible="False"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="Карта" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding MapName}"
                                               FontWeight="Bold"
                                               FontSize="16"
                                               IsHitTestVisible="False"
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"
                                               TextTrimming="CharacterEllipsis"
                                               TextWrapping="NoWrap"
                                               Margin="10,0,10,0"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="Статус" Width="*" CanUserSort="True" >
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding IdTypeDeath, Converter={StaticResource StatusMatchToStringConverter}, ConverterParameter={x:Static enum:StatusMatchConverter.TypeDeath}}"
                                               Foreground="{Binding IdTypeDeath, Converter={StaticResource StatusMatchToColorConverter}, ConverterParameter={x:Static enum:StatusMatchConverter.TypeDeath}}"
                                               FontWeight="Bold"
                                               FontSize="18"
                                               IsHitTestVisible="False"
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"
                                               Margin="10,0,10,0"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="Действие" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <WrapPanel HorizontalAlignment="Right" VerticalAlignment="Center" Background="Transparent" Margin="0,0,50,0">

                                        <Button Content="☆" ToolTip="Добавить в избранное"
                                                FontSize="20"
                                                Foreground="Yellow"
                                                Style="{StaticResource Button.MatchList.Action}"/>

                                        <Button Content="ℹ️" ToolTip="Открыть подробный обзор матча."
                                                FontSize="20"
                                                Foreground="LightBlue"
                                                Command="{Binding DataContext.ShowMatchDetailsCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" CommandParameter="{Binding}"
                                                Style="{StaticResource Button.MatchList.Action}"/>

                                        <Button Content="🖼️" ToolTip="Просмотр изображение матча"
                                                FontSize="20"
                                                Foreground="Green"
                                                Style="{StaticResource Button.MatchList.Action}"/>

                                        <Button Content="🗑️" ToolTip="Удалить"
                                                FontSize="20"
                                                Foreground="Red"
                                                Style="{StaticResource Button.MatchList.Action}"/>

                                    </WrapPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>

                    <!--#endregion-->

                    <!--#region Контекстное меню -->

                    <DataGrid.ContextMenu>
                        <ContextMenu>

                            <MenuItem Header="Сохранить информацию в...">
                                <MenuItem Header="Буфур обмена"/>
                                <MenuItem Header="Файл">
                                    <MenuItem Header="Текстовый"/>
                                    <MenuItem Header="Word"/>
                                    <MenuItem Header="Exel"/>
                                    <MenuItem Header="PDF"/>
                                </MenuItem>
                            </MenuItem>

                            <MenuItem Header="Применить фильтрацию по...">
                                <MenuItem Header="Выжившему"/>
                                <MenuItem Header="Карте"/>
                                <MenuItem Header="Измерению"/>
                                <MenuItem Header="Статусу матча"/>
                            </MenuItem>

                            <MenuItem Header="Сортировать по...">
                                <MenuItem Header="Выжившему"/>
                                <MenuItem Header="Карте"/>
                                <MenuItem Header="Измерению"/>
                                <MenuItem Header="Статусу матча"/>
                            </MenuItem>

                        </ContextMenu>
                    </DataGrid.ContextMenu>

                    <!--#endregion-->

                </DataGrid>

                <!--#endregion-->

            </Grid>

            <!--#endregion-->

        </TabItem>

    </TabControl>

</Page>