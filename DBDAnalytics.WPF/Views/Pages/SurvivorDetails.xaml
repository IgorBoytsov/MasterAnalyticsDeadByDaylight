<Page x:Class="DBDAnalytics.WPF.Views.Pages.SurvivorDetails"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DBDAnalytics.WPF.Views.Pages" 
      xmlns:uc="clr-namespace:DBDAnalytics.WPF.Assets.CustomControls"
      xmlns:dto="clr-namespace:DBDAnalytics.Application.DTOs;assembly=DBDAnalytics.Application" 
      xmlns:pagevm="clr-namespace:DBDAnalytics.WPF.ViewModels.PageVM" 
      d:DataContext="{d:DesignInstance Type=pagevm:SurvivorDetailsVM}"
      mc:Ignorable="d" 
      d:Height="Auto" d:Width="1000"
      Title="SurvivorDetails">

    <Grid Background="{StaticResource Brush.AppBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--#region Элементы управление | Заголовок -->

        <Border Background="{StaticResource Brush.AppCardBackground}" 
                CornerRadius="10"
                Margin="10">
            <DockPanel>

                <!--#region Управление -->

                <DockPanel DockPanel.Dock="Top">
                    <StackPanel DockPanel.Dock="Left">
                        <DockPanel>

                            <Button Content="Обновить" Style="{StaticResource Button.Base}"
                                    Command="{Binding UpdateCalculationCommand}"
                                    DockPanel.Dock="Left"/>

                            <Button Content="Сохранить все" Style="{StaticResource Button.Base}" 
                                    DockPanel.Dock="Left"/>

                            <Button Content="Список матчей"
                                    ToolTip="Отобразить список матчей по выбранному персонажу"
                                    Style="{StaticResource Button.Base}" 
                                    DockPanel.Dock="Left"/>

                            <Button Content="🗒️" Style="{StaticResource Button.Base}" 
                                    DockPanel.Dock="Right"/>

                            <Button Content="🔁" Style="{StaticResource Button.Base}" 
                                    DockPanel.Dock="Right"/>
                        </DockPanel>

                        <DockPanel>
                            <ComboBox ItemsSource="{Binding Survivors}"
                                      SelectedItem="{Binding SelectedSurvivor}"
                                      SelectedIndex="{Binding SelectedSurvivorIndex}"
                                      DisplayMemberPath="SurvivorName" 
                                      Style="{StaticResource BaseComboBox}"
                                      Width="150"
                                      HorizontalAlignment="Left"/>

                            <Button Content="⬅" 
                                    Style="{StaticResource Button.SwitchingIndexes}"
                                    Command="{Binding PreviousSurvivorCommand}"
                                    FontSize="25"
                                    ToolTip="Предыдущий киллер"
                                    Margin="1,5,1,5"/>

                            <Button Content="⮕" 
                                    Style="{StaticResource Button.SwitchingIndexes}"
                                    Command="{Binding NextSurvivorCommand}"
                                    FontSize="25"
                                    ToolTip="Следующий киллер"
                                    Margin="1,5,1,5"/>

                            <ComboBox ItemsSource="{Binding PeriodTimes}"
                                      DisplayMemberPath="Value" 
                                      SelectedItem="{Binding SelectedTimePeriod}"
                                      Style="{StaticResource BaseComboBox}"
                                      Width="150"
                                      Margin="10,0,0,0"
                                      DockPanel.Dock="Right"/>

                            <ComboBox ItemsSource="{Binding PlayerAssociations}"
                                      SelectedItem="{Binding SelectedAssociation}"
                                      DisplayMemberPath="Value" 
                                      Style="{StaticResource BaseComboBox}"
                                      Width="200"
                                      HorizontalAlignment="Right"/>

                        </DockPanel>

                    </StackPanel>
                </DockPanel>

                <!--#endregion-->

                <Separator DockPanel.Dock="Top"/>

                <!--#region Краткая информация -->

                <DockPanel DockPanel.Dock="Top">

                    <StackPanel>
                        <Image Source="{Binding SelectedSurvivor.SurvivorImage}" d:Source="C:\Users\light\OneDrive\Desktop\Изображение дбд\Сурвы Портреты\Персонажи\32_Ада Вонг(Синий).png"
                               Width="150"/>
                        <UniformGrid>
                            <TextBlock Text="В матчах"
                                       Foreground="White"
                                       FontSize="20"/>
                            <TextBlock Text="Матчей"
                                       Foreground="White"
                                       FontSize="20"/>
                        </UniformGrid>
                        <UniformGrid>
                            <TextBlock Text="{Binding TotalCountCurrentSurvivor}" d:Text="25"
                                       Foreground="White"
                                       FontSize="20"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding CountMatch}" d:Text="25"
                                       Foreground="White"
                                       FontSize="20"
                                       HorizontalAlignment="Center"/>
                        </UniformGrid>

                    </StackPanel>


                    <StackPanel Grid.Column="0">

                        <uc:IndicatorProgressBar CurrentValue="{Binding EscapeRate}" d:CurrentValue="76.92" 
                                                 MinimumValue="0.0"
                                                 MaximumValue="100"
                                                 DisplayedValueType="%"
                                                 TextValue="Сбежали: "
                                                 ForegroundProgress="Blue" d:ForegroundProgress="Blue"
                                                 BackgroundProgressBar="{StaticResource Brush.ProgressBar.Background}"
                                                 Height="22"
                                                 Margin="10,5,10,5"
                                                 DockPanel.Dock="Top"/>

                        <uc:IndicatorProgressBar CurrentValue="{Binding PickRate}" d:CurrentValue="14.56" 
                                                 MinimumValue="0.0"
                                                 MaximumValue="100" 
                                                 DisplayedValueType="%"
                                                 TextValue="Популярность: "
                                                 ForegroundProgress="{StaticResource Brush.PickRate}"
                                                 BackgroundProgressBar="{StaticResource Brush.ProgressBar.Background}"
                                                 Height="22"
                                                 Margin="10,5,10,5"
                                                 VerticalAlignment="Top"
                                                 DockPanel.Dock="Top"/>

                        <uc:IndicatorProgressBar CurrentValue="{Binding AnonymousRate}" d:CurrentValue="57" 
                                                 MinimumValue="0.0" 
                                                 MaximumValue="100" 
                                                 DisplayedValueType="%"
                                                 TextValue="Анонимных: "
                                                 ForegroundProgress="{StaticResource Brush.Anonymous}" d:ForegroundProgress="{StaticResource Brush.Anonymous}"
                                                 BackgroundProgressBar="{StaticResource Brush.ProgressBar.Background}"
                                                 Height="22"
                                                 Margin="10,5,10,5"
                                                 VerticalAlignment="Top"
                                                 DockPanel.Dock="Top"/>

                        <uc:IndicatorProgressBar CurrentValue="{Binding BotRate}" d:CurrentValue="57" 
                                                 MinimumValue="0.0" 
                                                 MaximumValue="100" 
                                                 DisplayedValueType="%"
                                                 TextValue="Вышедших из игры во время матча: "
                                                 ForegroundProgress="{StaticResource Brush.Bot}" d:ForegroundProgress="{StaticResource Brush.Bot}"
                                                 BackgroundProgressBar="{StaticResource Brush.ProgressBar.Background}"
                                                 Height="22"
                                                 Margin="10,5,10,5"
                                                 VerticalAlignment="Top"
                                                 DockPanel.Dock="Top"/>
                    </StackPanel>

                </DockPanel>

                <!--#endregion-->

            </DockPanel>
        </Border>

        <!--#endregion-->

        <!--#region Статистика -->

        <TabControl Grid.Row="1"
                    Style="{StaticResource App.TabControl}"
                    Margin="10,0,10,10">

            <!--#region Выживший -->

            <TabItem Header="Выживший">
                <ScrollViewer>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!--#region Лево -->

                        <StackPanel Grid.Column="0" Grid.Row="0">

                            <!--#region Типы смертей -->

                            <Border Style="{StaticResource Details.Border.Card}">
                                <DockPanel Style="{StaticResource Details.Content.Card}">
                                    <TextBlock Text="Типы смертей"
                                               Style="{StaticResource Details.Header.Card}"
                                               DockPanel.Dock="Top"/>

                                    <Separator DockPanel.Dock="Top" Style="{StaticResource Details.Separator.Card}"/>

                                    <ItemsControl ItemsSource="{Binding DetailsTypeDeaths}"
                                                  d:ItemsSource="{d:SampleData ItemCount=5}">

                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate >
                                                <uc:IndicatorProgressBar CurrentValue="{Binding Value}" MinimumValue="0.0" MaximumValue="100" 
                                                                         DisplayedValueType="%"
                                                                         TextValue="{Binding Name, StringFormat='{}{0}: '}"
                                                                         ForegroundProgress="{Binding Name, Converter={StaticResource TypeDeathToColorConverter}}"
                                                                         BackgroundProgressBar="{StaticResource Brush.ProgressBar.Background}"
                                                                         Height="22"
                                                                         Margin="10,5,10,5"
                                                                         VerticalAlignment="Top"
                                                                         DockPanel.Dock="Top"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>

                                    </ItemsControl>

                                </DockPanel>
                            </Border>

                            <!--#endregion-->

                        </StackPanel>

                        <!--#endregion-->

                        <!--#region Центр | На обе колонки -->

                        <StackPanel Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1" VerticalAlignment="Top">



                        </StackPanel>

                        <!--#endregion-->

                        <!--#region Право -->

                        <StackPanel Grid.Column="2" Grid.Row="0">


                        </StackPanel>

                        <!--#endregion-->

                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!--#endregion-->

            <!--#region Перки -->

            <TabItem Header="Перки">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="480"/>
                    </Grid.ColumnDefinitions>

                    <!--#region Список одиночных перков -->

                    <Border Grid.Column="0" Background="{StaticResource Brush.AppCardBackground}" CornerRadius="20">

                        <ListView ItemsSource="{Binding PerkPopularity}" d:ItemsSource="{d:SampleData ItemCount=5}"
                                  SelectedItem="{Binding SelectedPerkPopularity}"
                                  Style="{StaticResource AddMatchWindow.DataSelection}"
                                  ItemContainerStyle="{StaticResource ShurtListViewItemStyle}"
                                  Margin="5">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <Image Source="{Binding Image}"
                                               Width="90"
                                               Height="90"
                                               ToolTipService.InitialShowDelay="10"
                                               ToolTipService.Placement="Right">
                                            <Image.ToolTip>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding CountWinMatchWithItemLoadout, StringFormat=Количество выигранных матчей с текущим перком: {0}}" 
                                                               FontSize="16"
                                                               FontWeight="Bold"
                                                               Foreground="Black"/>
                                                    <TextBlock Text="{Binding CountMatchWithItemLoadout, StringFormat=Количество матчей с текущим перком: {0}}" 
                                                               FontSize="16"
                                                               FontWeight="Bold"
                                                               Foreground="Black"/>
                                                    <TextBlock Text="{Binding WinRateAllMatch, StringFormat={}Доля от всех сыгранных матчей состовляют победы: {0}%}" 
                                                               FontSize="16"
                                                               FontWeight="Bold"
                                                               Foreground="Black"
                                                               ToolTip="Этот показатель отражает, какую долю от ВСЕХ сыгранных матчей составляют ПОБЕДЫ, достигнутые С ЭТИМ КОНКРЕТНЫМ ПЕРКОМ. Он зависит и от того, как часто вы побеждаете с перком, и от того, как часто вы его вообще берете (пикрейт)."/>
                                                    <TextBlock Text="{Binding WinRateWithItemLoadoutMatch, StringFormat=Винрейт при использовании перком: {0}%}" 
                                                               FontSize="16"
                                                               FontWeight="Bold"
                                                               Foreground="Black"
                                                               ToolTip="Этот показатель отражает, yасколько успешно я играл (побеждал), КОГДА использовал ИМЕННО ЭТОТ перк."/>
                                                </StackPanel>
                                            </Image.ToolTip>
                                        </Image>
                                        <TextBlock Text="{Binding PickRate, StringFormat={}{0}%}" 
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                    </Border>

                    <!--#endregion-->

                    <!--#region Список кобинации перков из 4 -->

                    <Border Grid.Column="3" Background="{StaticResource Brush.AppCardBackground}" CornerRadius="20">
                        <ListView ItemsSource="{Binding QuadruplePerkPopularity}" d:ItemsSource="{d:SampleData ItemCount=5}"
                                  SelectedItem="{Binding SelectedDoubleKillerPerksPopularity}"
                                  Style="{StaticResource AddMatchWindow.DataSelection}"
                                  ItemContainerStyle="{StaticResource ShurtListViewItemStyle}"
                                  Margin="5">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <DockPanel HorizontalAlignment="Center">

                                            <Image Source="{Binding FirstPerk.PerkImage}"
                                                   Width="90"
                                                   Height="90"
                                                   ToolTipService.InitialShowDelay="10"
                                                   ToolTipService.Placement="Right"
                                                   Margin="0,0,10,0"
                                                   DockPanel.Dock="Left">
                                                <Image.ToolTip>
                                                    <TextBlock Text="{Binding FirstPerk.PerkName}"
                                                               FontSize="16"
                                                               FontWeight="Bold"
                                                               Foreground="Black"/>
                                                </Image.ToolTip>
                                            </Image>

                                            <Image Source="{Binding SecondPerk.PerkImage}"
                                                   Width="90"
                                                   Height="90"
                                                   ToolTipService.InitialShowDelay="10"
                                                   ToolTipService.Placement="Right"
                                                   Margin="0,0,10,0"
                                                   DockPanel.Dock="Left">
                                                <Image.ToolTip>
                                                    <TextBlock Text="{Binding SecondPerk.PerkName}"
                                                               FontSize="16"
                                                               FontWeight="Bold"
                                                               Foreground="Black"/>
                                                </Image.ToolTip>
                                            </Image>

                                            <Image Source="{Binding ThirdPerk.PerkImage}"
                                                   Width="90"
                                                   Height="90"
                                                   ToolTipService.InitialShowDelay="10"
                                                   ToolTipService.Placement="Right"
                                                   Margin="0,0,10,0"
                                                   DockPanel.Dock="Left">
                                                <Image.ToolTip>
                                                    <TextBlock Text="{Binding ThirdPerk.PerkName}"
                                                               FontSize="16"
                                                               FontWeight="Bold"
                                                               Foreground="Black"/>
                                                </Image.ToolTip>
                                            </Image>

                                            <Image Source="{Binding FourthPerk.PerkImage}"
                                                   Width="90"
                                                   Height="90"
                                                   ToolTipService.InitialShowDelay="10"
                                                   ToolTipService.Placement="Right"
                                                   Margin="0,0,10,0"
                                                   DockPanel.Dock="Left">
                                                <Image.ToolTip>
                                                    <TextBlock Text="{Binding FourthPerk.PerkName}"
                                                               FontSize="16"
                                                               FontWeight="Bold"
                                                               Foreground="Black"/>
                                                </Image.ToolTip>
                                            </Image>

                                            <Button Content="?"
                                                    Style="{StaticResource Button.SwitchingIndexes}"
                                                    FontSize="25"
                                                    Foreground="White"
                                                    ToolTipService.InitialShowDelay="10"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Top"
                                                    Margin="2,0,0,0">
                                                <Button.ToolTip>
                                                    <StackPanel>
                                                        <TextBlock Text="{Binding Count, StringFormat={}Кол-во: {0}}" d:Text="Кол-во 111"
                                                                   FontSize="16"
                                                                   FontWeight="Bold"
                                                                   Foreground="Black"
                                                                   HorizontalAlignment="Left"/>
                                                        <TextBlock Text="{Binding PickRate, StringFormat={}PR: {0}%}" d:Text="PR: 100%"
                                                                   FontSize="16"
                                                                   FontWeight="Bold"
                                                                   Foreground="Black"
                                                                   HorizontalAlignment="Left"/>
                                                        <TextBlock Text="{Binding WinRate, StringFormat={}WR: {0}%}"  d:Text="WR: 100%"
                                                                   FontSize="16"
                                                                   FontWeight="Bold"
                                                                   Foreground="Black"
                                                                   HorizontalAlignment="Left"/>
                                                    </StackPanel>

                                                </Button.ToolTip>
                                            </Button>

                                        </DockPanel>

                                        <WrapPanel HorizontalAlignment="Center">

                                            <TextBlock Text="{Binding PickRate, StringFormat={}PR: {0}%}" d:Text="100%"
                                                       FontSize="16"
                                                       FontWeight="Bold"
                                                       Foreground="White"
                                                       HorizontalAlignment="Center"
                                                       Margin="0,0,10,0"/>

                                            <TextBlock Text="{Binding Count, StringFormat={}Кол-во: {0}}" d:Text="Кол-во 111"
                                                       FontSize="16"
                                                       FontWeight="Bold"
                                                       Foreground="White"
                                                       HorizontalAlignment="Left"
                                                       Margin="0,0,10,0"/>

                                            <TextBlock Text="{Binding WinRate, StringFormat={}WR: {0}%}"  d:Text="WR: 100%"
                                                       FontSize="16"
                                                       FontWeight="Bold"
                                                       Foreground="White"
                                                       HorizontalAlignment="Left"
                                                       Margin="0,0,10,0"/>
                                        </WrapPanel>

                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Border>

                    <!--#endregion-->

                </Grid>
            </TabItem>

            <!--#endregion-->



        </TabControl>

        <!--#endregion-->

    </Grid>
</Page>