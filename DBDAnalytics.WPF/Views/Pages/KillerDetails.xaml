<Page x:Class="DBDAnalytics.WPF.Views.Pages.KillerDetails"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DBDAnalytics.WPF.Views.Pages" 
      xmlns:uc="clr-namespace:DBDAnalytics.WPF.Assets.CustomControls" 
      xmlns:ucChart="clr-namespace:DBDAnalytics.WPF.Assets.CustomControls.Charts" 
      xmlns:pagevm="clr-namespace:DBDAnalytics.WPF.ViewModels.PageVM" 
      d:DataContext="{d:DesignInstance Type=pagevm:KillerDetailsVM}"
      mc:Ignorable="d" 
      d:Height="Auto" d:Width="1200"
      Title="KillerDetails">

    <Grid Background="{StaticResource Brush.AppBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--#region Элементы управление | Заголовок -->

        <Border Background="{StaticResource Brush.AppCardBackground}" 
                CornerRadius="10"
                Margin="10">
            <DockPanel>

                <!--#region Управление -->

                <DockPanel DockPanel.Dock="Top">
                    <StackPanel DockPanel.Dock="Left">
                        <DockPanel>
                            <Button Content="Сбросить" Style="{StaticResource Button.Base}" 
                                    DockPanel.Dock="Left"/>

                            <Button Content="Обновить" Style="{StaticResource Button.Base}"
                                    Command="{Binding UpdateCalculationCommand}"
                                    DockPanel.Dock="Left"/>

                            <Button Content="Сохранить все" Style="{StaticResource Button.Base}" 
                                    DockPanel.Dock="Left"/>

                            <Button Content="Список матчей"
                                    ToolTip="Отобразить список матчей по выбранному персонажу"
                                    Style="{StaticResource Button.Base}" 
                                    DockPanel.Dock="Left"/>

                            <Button Content="🗒️" Style="{StaticResource Button.Base}" 
                                    DockPanel.Dock="Right"/>

                            <Button Content="🔁" Style="{StaticResource Button.Base}" 
                                    DockPanel.Dock="Right"/>
                        </DockPanel>

                        <DockPanel>
                            <ComboBox ItemsSource="{Binding Killers}"
                                      SelectedItem="{Binding SelectedKiller}"
                                      SelectedIndex="{Binding SelectedKillerIndex}"
                                      DisplayMemberPath="KillerName"
                                      Style="{StaticResource BaseComboBox}"
                                      Width="150"
                                      HorizontalAlignment="Left"/>

                            <Button Content="⬅" 
                                    Style="{StaticResource Button.SwitchingIndexes}"
                                    Command="{Binding PreviousKillerCommand}"
                                    FontSize="25"
                                    ToolTip="Предыдущий киллер"
                                    Margin="1,5,1,5"/>

                            <Button Content="⮕" 
                                    Style="{StaticResource Button.SwitchingIndexes}"
                                    Command="{Binding NextKillerCommand}"
                                    FontSize="25"
                                    ToolTip="Следующий киллер"
                                    Margin="1,5,1,5"/>

                            <ComboBox ItemsSource="{Binding PeriodTimes}"
                                      DisplayMemberPath="Value" 
                                      SelectedItem="{Binding SelectedTimePeriod}"
                                      Style="{StaticResource BaseComboBox}"
                                      Width="150"
                                      Margin="10,0,0,0"
                                      DockPanel.Dock="Right"/>

                            <ComboBox ItemsSource="{Binding Associations}"
                                      DisplayMemberPath="Value" 
                                      SelectedItem="{Binding SelectedAssociation}"
                                      Style="{StaticResource BaseComboBox}"
                                      Width="150"
                                      HorizontalAlignment="Right"/>

                        </DockPanel>

                    </StackPanel>
                </DockPanel>

                <!--#endregion-->

                <Separator DockPanel.Dock="Top"/>

                <!--#region Краткая информация -->

                <DockPanel DockPanel.Dock="Top">

                    <Image Source="{Binding SelectedKiller.KillerImage}" d:Source="D:\Изображение для программы по ДБД\Киллеры\Портреты\19_Стрелок(Красный).png" 
                           Width="150"/>

                    <StackPanel Grid.Column="0">
                        <uc:IndicatorProgressBar CurrentValue="{Binding KillRate}" d:CurrentValue="3.4"  
                                                 MinimumValue="0.0"
                                                 MaximumValue="4.0"
                                                 DisplayedValueType=" "
                                                 TextValue="Киллрейт: "
                                                 ForegroundProgress="{Binding KillRate, Converter={StaticResource KIllRateToColorConverter}}" d:ForegroundProgress="{StaticResource Brush.ThreeKills}"
                                                 BackgroundProgressBar="{StaticResource Brush.ProgressBar.Background}"
                                                 Height="20"
                                                 Margin="10,5,10,5"
                                                 DockPanel.Dock="Top"/>

                        <uc:IndicatorProgressBar CurrentValue="{Binding HookRate}" d:CurrentValue="8.2" 
                                                 MinimumValue="0.0" 
                                                 MaximumValue="12" 
                                                 DisplayedValueType=""
                                                 TextValue="Среднее кол-во повесов: "
                                                 ForegroundProgress="{Binding HookRate, Converter={StaticResource HookRateToColorConverter}}" d:ForegroundProgress="{StaticResource Brush.EightHooks}"
                                                 BackgroundProgressBar="{StaticResource Brush.ProgressBar.Background}"
                                                 Height="22"
                                                 Margin="10,5,10,5"
                                                 VerticalAlignment="Top"
                                                 DockPanel.Dock="Top"/>

                        <uc:IndicatorProgressBar CurrentValue="{Binding WinRate}" d:CurrentValue="76.92" 
                                                 MinimumValue="0.0"
                                                 MaximumValue="100"
                                                 DisplayedValueType="%"
                                                 TextValue="Винрейт: "
                                                 ForegroundProgress="{Binding WinRate, Converter={StaticResource WinRateToColorConverter}}" d:ForegroundProgress="{StaticResource Brush.WinRateSeventyPercent}"
                                                 BackgroundProgressBar="{StaticResource Brush.ProgressBar.Background}"
                                                 Height="22"
                                                 Margin="10,5,10,5"
                                                 DockPanel.Dock="Top"/>

                        <UniformGrid Rows="1" Columns="3">

                            <uc:IndicatorProgressBar CurrentValue="{Binding CountMatchWin}" d:CurrentValue="30" 
                                                     MinimumValue="0.0"
                                                     MaximumValue="{Binding CountMatch}"
                                                     DisplayedValueType=" "
                                                     TextValue="Выиграно: "
                                                     ForegroundProgress="{StaticResource Brush.Win}"
                                                     BackgroundProgressBar="{StaticResource Brush.ProgressBar.Background}"
                                                     Height="22"
                                                     Margin="10,5,10,5"/>

                            <uc:IndicatorProgressBar CurrentValue="{Binding CountMatchDefeat}" d:CurrentValue="30" 
                                                     MinimumValue="0.0"
                                                     MaximumValue="{Binding CountMatch}"
                                                     DisplayedValueType=" "
                                                     TextValue="Проиграно: "
                                                     ForegroundProgress="{StaticResource Brush.Defeat}"
                                                     BackgroundProgressBar="{StaticResource Brush.ProgressBar.Background}"
                                                     Height="22"
                                                     Margin="10,5,10,5"/>

                            <uc:IndicatorProgressBar CurrentValue="{Binding CountMatchDraw}" d:CurrentValue="16" 
                                                     MinimumValue="0.0"
                                                     MaximumValue="{Binding CountMatch}"
                                                     DisplayedValueType=" "
                                                     TextValue="Ничей: "
                                                     ForegroundProgress="{StaticResource Brush.Draw}"
                                                     BackgroundProgressBar="{StaticResource Brush.ProgressBar.Background}"
                                                     Height="22"
                                                     Margin="10,5,10,5"/>

                        </UniformGrid>

                        <uc:IndicatorProgressBar CurrentValue="{Binding PickRate}" d:CurrentValue="14.56" 
                                                 MinimumValue="0.0"
                                                 MaximumValue="100" 
                                                 DisplayedValueType="%"
                                                 TextValue="Популярность: "
                                                 ForegroundProgress="{StaticResource Brush.PickRate}"
                                                 BackgroundProgressBar="{StaticResource Brush.ProgressBar.Background}"
                                                 Height="22"
                                                 Margin="10,5,10,5"
                                                 VerticalAlignment="Top"
                                                 DockPanel.Dock="Top"/>

                        <uc:IndicatorProgressBar CurrentValue="{Binding RecentGenerators}" d:CurrentValue="4" 
                                                 MinimumValue="0.0" 
                                                 MaximumValue="5" 
                                                 DisplayedValueType=""
                                                 TextValue="Среднее кол-во оставшихся генераторов: "
                                                 ForegroundProgress="{Binding RecentGenerators, Converter={StaticResource RecentGeneratorToColorConverter}}" d:ForegroundProgress="{StaticResource Brush.FourGenerator}"
                                                 BackgroundProgressBar="{StaticResource Brush.ProgressBar.Background}"
                                                 Height="22"
                                                 Margin="10,5,10,5"
                                                 VerticalAlignment="Top"
                                                 DockPanel.Dock="Top"/>
                    </StackPanel>

                </DockPanel>

                <!--#endregion-->

            </DockPanel>
        </Border>

        <!--#endregion-->

        <!--#region Статистика -->

        <TabControl Grid.Row="1" d:SelectedIndex="2"
                    Style="{StaticResource App.TabControl}"
                    Margin="10,0,10,10">

            <!--#region Матч -->

            <TabItem Header="Матч">
                <ScrollViewer>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!--#region Лево -->

                        <StackPanel Grid.Column="0" Grid.Row="0">

                            <!--#region Текстовая статистика : Время -->

                            <Border Style="{StaticResource Details.Border.Card}">
                                <DockPanel Style="{StaticResource Details.Content.Card}">

                                    <TextBlock Text="Статистика времени"
                                               Style="{StaticResource Details.Header.Card}"
                                               DockPanel.Dock="Top"/>

                                    <Separator DockPanel.Dock="Top" Style="{StaticResource Details.Separator.Card}"/>

                                    <WrapPanel Margin="10,10,0,10">
                                        <StackPanel>
                                            <TextBlock Text="Общее время игры: "    Style="{StaticResource Details.TextStat.Name}"/>
                                            <TextBlock Text="Среднее время игры: "  Style="{StaticResource Details.TextStat.Name}"/>
                                            <TextBlock Text="Самый долгий матч: "   Style="{StaticResource Details.TextStat.Name}"/>
                                            <TextBlock Text="Самый короткий матч: " Style="{StaticResource Details.TextStat.Name}"/>
                                        </StackPanel>
                                        <StackPanel>
                                            <TextBlock Text="{Binding TextStatistic.TotalTimeMatches}"
                                                       Style="{StaticResource Details.TextStat.Value}"/>
                                            <TextBlock Text="{Binding TextStatistic.AverageTimeMatch}"
                                                       Style="{StaticResource Details.TextStat.Value}"/>
                                            <TextBlock Text="{Binding TextStatistic.LongestTimeMatch}"
                                                       Style="{StaticResource Details.TextStat.Value}"/>
                                            <TextBlock Text="{Binding TextStatistic.ShortestTimeMatch}"
                                                       Style="{StaticResource Details.TextStat.Value}"/>
                                        </StackPanel>
                                    </WrapPanel>
                                </DockPanel>
                            </Border>

                            <!--#endregion-->

                            <!--#region Текстовая статистика : Ничьи -->

                            <Border Style="{StaticResource Details.Border.Card}">
                                <DockPanel Style="{StaticResource Details.Content.Card}">

                                    <TextBlock Text="Статистика ничьей"
                                               Style="{StaticResource Details.Header.Card}"
                                               DockPanel.Dock="Top"/>

                                    <Separator DockPanel.Dock="Top" Style="{StaticResource Details.Separator.Card}"/>

                                    <WrapPanel Margin="10,10,0,10">
                                        <StackPanel>
                                            <TextBlock Text="Серия ничьей: " Style="{StaticResource Details.TextStat.Name}"/>
                                            <TextBlock Text="Самая долгая ничья: " Style="{StaticResource Details.TextStat.Name}"/>
                                            <TextBlock Text="Самая быстрая ничья: " Style="{StaticResource Details.TextStat.Name}"/>
                                            <TextBlock Text="Среднее время ничьей: " Style="{StaticResource Details.TextStat.Name}"/>
                                        </StackPanel>
                                        <StackPanel>
                                            <TextBlock Text="{Binding TextStatistic.SeriesDraws}"
                                                       Style="{StaticResource Details.TextStat.Value}"/>
                                            <TextBlock Text="{Binding TextStatistic.LongestTimeDrawMatch}"
                                                       Style="{StaticResource Details.TextStat.Value}"/>
                                            <TextBlock Text="{Binding TextStatistic.ShortestTimeDrawMatch}"
                                                       Style="{StaticResource Details.TextStat.Value}"/>
                                            <TextBlock Text="{Binding TextStatistic.AverageTimeDrawMatch}"
                                                       Style="{StaticResource Details.TextStat.Value}"/>
                                        </StackPanel>
                                    </WrapPanel>
                                </DockPanel>
                            </Border>

                            <!--#endregion-->

                        </StackPanel>

                        <!--#endregion-->

                        <!--#region Центр | На обе колонки -->

                        <StackPanel Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1" VerticalAlignment="Top">

                            <!--#region Детализация по генераторам -->

                            <Border Style="{StaticResource Details.Border.Card}">
                                <DockPanel Style="{StaticResource Details.Content.Card}">
                                    <TextBlock Text="Оставшиеся генераторы"
                                               Style="{StaticResource Details.Header.Card}"
                                               DockPanel.Dock="Top"/>

                                    <Separator DockPanel.Dock="Top" Style="{StaticResource Details.Separator.Card}"/>

                                    <ItemsControl ItemsSource="{Binding DetailsRecentGenerators}"
                                                  d:ItemsSource="{d:SampleData ItemCount=12}">

                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <uc:IndicatorProgressBar CurrentValue="{Binding Value}" MinimumValue="0.0" MaximumValue="100" 
                                                                         DisplayedValueType="%"
                                                                         TextValue="{Binding Name}"
                                                                         ForegroundProgress="{Binding ConverterValue, Converter={StaticResource RecentGeneratorToColorConverter}}"
                                                                         BackgroundProgressBar="{StaticResource Brush.ProgressBar.Background}"
                                                                         Height="22"
                                                                         Margin="10,5,10,5"
                                                                         VerticalAlignment="Top"
                                                                         DockPanel.Dock="Top"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>

                                    </ItemsControl>

                                </DockPanel>
                            </Border>

                            <!--#endregion-->

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" >

                                    <!--#region Количество матчей по месяцам -->

                                    <Border Style="{StaticResource Details.Border.Card}" Margin="0,30,10,0">
                                        <DockPanel Style="{StaticResource Details.Content.Card}">

                                            <TextBlock Text="Кол-во матчей в течение месяцев"
                                                       Style="{StaticResource Details.Header.Card}"
                                                       DockPanel.Dock="Top"/>

                                            <Separator DockPanel.Dock="Top" Style="{StaticResource Details.Separator.Card}"/>

                                            <ItemsControl ItemsSource="{Binding MonthlyActivity}"
                                                          d:ItemsSource="{d:SampleData ItemCount=7}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>

                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Margin="5"
                                                                Background="{StaticResource Brush.AppBackground}"
                                                                BorderBrush="{StaticResource Brush.BorderBrush}"
                                                                BorderThickness="1"
                                                                CornerRadius="10">
                                                            <DockPanel Margin="5">
                                                                <TextBlock Text="{Binding Name}" d:Text="Сентябрь" Width="93" FontWeight="Bold" FontSize="18" Foreground="Turquoise" DockPanel.Dock="Left" VerticalAlignment="Bottom"/>
                                                                <TextBlock Text="{Binding Value, StringFormat=Матчей: {0}}" d:Text="Матчей: 12" FontWeight="Bold" FontSize="18" Foreground="LightBlue"/>
                                                            </DockPanel>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>

                                        </DockPanel>
                                    </Border>

                                    <!--#endregion-->

                                    <!--#region Количество матчей по дням неделям -->

                                    <Border Style="{StaticResource Details.Border.Card}" Margin="0,30,10,0">
                                        <DockPanel Style="{StaticResource Details.Content.Card}">

                                            <TextBlock Text="Кол-во матчей в течение недели"
                                                       Style="{StaticResource Details.Header.Card}"
                                                       DockPanel.Dock="Top"/>

                                            <Separator DockPanel.Dock="Top" Style="{StaticResource Details.Separator.Card}"/>

                                            <ItemsControl ItemsSource="{Binding DayOrWeekActivity}"
                                                          d:ItemsSource="{d:SampleData ItemCount=7}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>

                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Margin="5"
                                                                Background="{StaticResource Brush.AppBackground}"
                                                                BorderBrush="{StaticResource Brush.BorderBrush}"
                                                                BorderThickness="1"
                                                                CornerRadius="10">
                                                            <DockPanel Margin="5">
                                                                <TextBlock Text="{Binding Name}" d:Text="Понедельник" Width="135" FontWeight="Bold" FontSize="18" Foreground="Turquoise" DockPanel.Dock="Left" VerticalAlignment="Bottom"/>
                                                                <TextBlock Text="{Binding Value, StringFormat=Матчей: {0}}" d:Text="Матчей: 12" FontWeight="Bold" FontSize="18" Foreground="LightBlue"/>
                                                            </DockPanel>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>

                                        </DockPanel>
                                    </Border>

                                    <!--#endregion-->

                                    <!--#region Количество матчей по часам -->

                                    <Border Style="{StaticResource Details.Border.Card}" Margin="0,30,10,0">
                                        <DockPanel Style="{StaticResource Details.Content.Card}">

                                            <TextBlock Text="Кол-во матчей в течение дня"
                                                       Style="{StaticResource Details.Header.Card}"
                                                       DockPanel.Dock="Top"/>

                                            <Separator DockPanel.Dock="Top" Style="{StaticResource Details.Separator.Card}"/>

                                            <ItemsControl ItemsSource="{Binding HourlyActivity}"
                                                          d:ItemsSource="{d:SampleData ItemCount=24}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>

                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Margin="5"
                                                                Background="{StaticResource Brush.AppBackground}"
                                                                BorderBrush="{StaticResource Brush.BorderBrush}"
                                                                BorderThickness="1"
                                                                CornerRadius="10">
                                                            <DockPanel Margin="5">
                                                                <TextBlock Text="{Binding Name}" d:Text="10:00 - 11:00" FontWeight="Bold" FontSize="18" Foreground="Turquoise" DockPanel.Dock="Left" VerticalAlignment="Bottom" Margin="0,0,15,0"/>
                                                                <TextBlock Text="{Binding Value, StringFormat=Матчей: {0}}" d:Text="Матчей: 12" FontWeight="Bold" FontSize="18" Foreground="LightBlue"/>
                                                            </DockPanel>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>

                                        </DockPanel>
                                    </Border>

                                    <!--#endregion-->

                                </StackPanel>

                                <!--#region Количество матчей по дням, неделям, месяцам, годам -->

                                <Border Style="{StaticResource Details.Border.Card}" Grid.Column="1" Grid.RowSpan="2" Margin="10,30,0,0">
                                    <DockPanel Style="{StaticResource Details.Content.Card}">

                                        <TextBlock Text="Кол-во матчей за период времени"
                                                   Style="{StaticResource Details.Header.Card}"
                                                   DockPanel.Dock="Top"/>

                                        <Separator DockPanel.Dock="Top" Style="{StaticResource Details.Separator.Card}"/>

                                        <ItemsControl ItemsSource="{Binding MatchesByTimePeriod}"
                                                      d:ItemsSource="{d:SampleData ItemCount=12}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>

                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Margin="5"
                                                            Background="{StaticResource Brush.AppBackground}"
                                                            BorderBrush="{StaticResource Brush.BorderBrush}"
                                                            BorderThickness="1"
                                                            CornerRadius="10">
                                                        <DockPanel Margin="5">
                                                            <TextBlock Text="{Binding Name}" d:Text="2025-05" FontWeight="Bold" FontSize="18" Foreground="Turquoise" VerticalAlignment="Bottom" Margin="0,0,15,0"/>
                                                            <TextBlock Text="{Binding Value, StringFormat=Мтачи: {0}}" d:Text="Матчей: 12" FontWeight="Bold" FontSize="18" Foreground="LightBlue" DockPanel.Dock="Top"/>
                                                        </DockPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                    </DockPanel>
                                </Border>

                                <!--#endregion-->

                            </Grid>

                        </StackPanel>

                        <!--#endregion-->

                        <!--#region Право -->

                        <StackPanel Grid.Column="2" Grid.Row="0">

                            <!--#region Текстовая статистика : Победы -->

                            <Border Style="{StaticResource Details.Border.Card}">
                                <DockPanel Style="{StaticResource Details.Content.Card}">

                                    <TextBlock Text="Статистика побед"
                                               Style="{StaticResource Details.Header.Card}"
                                               DockPanel.Dock="Top"/>

                                    <Separator DockPanel.Dock="Top" Style="{StaticResource Details.Separator.Card}"/>

                                    <WrapPanel Margin="10,10,0,10">
                                        <StackPanel>
                                            <TextBlock Text="Серия побед: " Style="{StaticResource Details.TextStat.Name}"/>
                                            <TextBlock Text="Самая долгая победа: " Style="{StaticResource Details.TextStat.Name}"/>
                                            <TextBlock Text="Самая быстрая победа: " Style="{StaticResource Details.TextStat.Name}"/>
                                            <TextBlock Text="Среднее время победы: " Style="{StaticResource Details.TextStat.Name}"/>
                                        </StackPanel>
                                        <StackPanel>
                                            <TextBlock Text="{Binding TextStatistic.SeriesWins}"
                                                       Style="{StaticResource Details.TextStat.Value}"/>
                                            <TextBlock Text="{Binding TextStatistic.LongestTimeWinMatch}"
                                                       Style="{StaticResource Details.TextStat.Value}"/>
                                            <TextBlock Text="{Binding TextStatistic.ShortestTimeWinMatch}"
                                                       Style="{StaticResource Details.TextStat.Value}"/>
                                            <TextBlock Text="{Binding TextStatistic.AverageTimeWinMatch}"
                                                       Style="{StaticResource Details.TextStat.Value}"/>
                                        </StackPanel>
                                    </WrapPanel>
                                </DockPanel>
                            </Border>

                            <!--#endregion-->

                            <!--#region Текстовая статистика : Поражение -->

                            <Border Style="{StaticResource Details.Border.Card}">
                                <DockPanel Style="{StaticResource Details.Content.Card}">

                                    <TextBlock Text="Статистика поражений"
                                               Style="{StaticResource Details.Header.Card}"
                                               DockPanel.Dock="Top"/>

                                    <Separator DockPanel.Dock="Top" Style="{StaticResource Details.Separator.Card}"/>

                                    <WrapPanel Margin="10,10,0,10">
                                        <StackPanel>
                                            <TextBlock Text="Серия поражений: " Style="{StaticResource Details.TextStat.Name}"/>
                                            <TextBlock Text="Самое долгое поражение: " Style="{StaticResource Details.TextStat.Name}"/>
                                            <TextBlock Text="Самое быстрое поражение: " Style="{StaticResource Details.TextStat.Name}"/>
                                            <TextBlock Text="Среднее время поражение: " Style="{StaticResource Details.TextStat.Name}"/>
                                        </StackPanel>
                                        <StackPanel>
                                            <TextBlock Text="{Binding TextStatistic.SeriesDefeats}"
                                                       Style="{StaticResource Details.TextStat.Value}"/>
                                            <TextBlock Text="{Binding TextStatistic.LongestTimeDefeatMatch}"
                                                       Style="{StaticResource Details.TextStat.Value}"/>
                                            <TextBlock Text="{Binding TextStatistic.ShortestTimeDefeatMatch}"
                                                       Style="{StaticResource Details.TextStat.Value}"/>
                                            <TextBlock Text="{Binding TextStatistic.AverageTimeDefeatMatch}"
                                                       Style="{StaticResource Details.TextStat.Value}"/>
                                        </StackPanel>
                                    </WrapPanel>
                                </DockPanel>
                            </Border>

                            <!--#endregion-->

                        </StackPanel>

                        <!--#endregion-->

                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!--#endregion-->

            <!--#region Киллер-->

            <TabItem Header="Киллер">
                <ScrollViewer>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!--#region Лево -->

                        <StackPanel Grid.Column="0">

                            <!--#region Детализация по киллам -->

                            <Border Style="{StaticResource Details.Border.Card}">
                                <DockPanel Style="{StaticResource Details.Content.Card}">

                                    <TextBlock Text="Эффективность убийств"
                                               Style="{StaticResource Details.Header.Card}"
                                               DockPanel.Dock="Top"/>

                                    <Separator DockPanel.Dock="Top" Style="{StaticResource Details.Separator.Card}"/>

                                    <ItemsControl ItemsSource="{Binding DetailsKills}"
                                                  d:ItemsSource="{d:SampleData ItemCount=5}">

                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <uc:IndicatorProgressBar CurrentValue="{Binding Value}" MinimumValue="0.0" MaximumValue="100"
                                                                         DisplayedValueType="%"
                                                                         TextValue="{Binding Name}"
                                                                         ForegroundProgress="{Binding ConverterValue, Converter={StaticResource KIllRateToColorConverter}}"
                                                                         BackgroundProgressBar="{StaticResource Brush.ProgressBar.Background}"
                                                                         Height="22"
                                                                         Margin="10,5,10,5"
                                                                         VerticalAlignment="Top"
                                                                         DockPanel.Dock="Top"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>

                                    </ItemsControl>

                                </DockPanel>
                                <Border.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Копировать данные"/>
                                        <MenuItem Header="Сохранить">
                                            <MenuItem Header="Word"/>
                                            <MenuItem Header="PDF"/>
                                            <MenuItem Header="Текст"/>
                                        </MenuItem>
                                        <MenuItem Header="Список матчей">
