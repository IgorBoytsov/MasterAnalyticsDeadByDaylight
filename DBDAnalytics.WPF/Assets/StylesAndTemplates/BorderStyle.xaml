<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="Border.Popup" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource Brush.AppBackground}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.BorderBrushAroundImage}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Padding" Value="10"/>
    </Style>

    <Style x:Key="Popup.Border.InputData" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource Brush.AppCardBackground}"/>
        <Setter Property="Margin" Value="5,0,5,0"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="CornerRadius" Value="10"/>
    </Style>

    <!--#region AddMatchWindow -->

    <Style x:Key="AddMatch.Border.Header" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource Brush.AppBackground}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.AppCardBackground}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="CornerRadius" Value="5"/>
    </Style>

    <Style x:Key="AddMatch.Border.AroundImageResult" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource Brush.AppCardBackground}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.BorderBrushAroundImage}"/>
        <Setter Property="Margin" Value="5,0,5,0"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="5"/>
    </Style>

    <Style x:Key="AddMatch.Border.InputData" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource Brush.AppCardBackground}"/>
        <Setter Property="Margin" Value="5,0,5,0"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="CornerRadius" Value="10"/>
    </Style>

    <Style x:Key="AddMatch.Border.EndGame" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource Brush.AppBackground}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.BorderBrushAroundImage}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Height" Value="550"/>
    </Style>

    <Style x:Key="AddMatch.Border.StartGame" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource Brush.AppBackground}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.BorderBrushAroundImage}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Height" Value="220"/>
    </Style>

    <Style x:Key="AddMatch.Border.ResultMatch" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource Brush.AppBackground}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.BorderBrushAroundImage}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Height" Value="600"/>
    </Style>

    <!--#endregion-->
    
</ResourceDictionary>